<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Ký" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <!-- Thêm sự kiện này để di chuyển cửa sổ -->

    <Window.Resources>
        <Style TargetType="Button" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <!-- Font chứa các icon hệ thống -->
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Nút Đăng ký chính -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Điều chỉnh CornerRadius để nút trông mềm mại hơn -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}"
                                Height="50">
                            <!-- Giữ nguyên hoặc tăng nhẹ nếu muốn nút cao hơn -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Phần màu xanh chiếm 2/3 -->
            <ColumnDefinition Width="1.5*"/>
            <!-- Phần màu trắng chiếm 1.5/3 -->
        </Grid.ColumnDefinitions>

        <!-- PHẦN BÊN TRÁI (MÀU XANH) -->
        <Border Grid.Column="0" CornerRadius="10,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3A4E8E" Offset="0"/>
                    <GradientStop Color="#5B75D4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" Margin="50">
                <TextBlock Text="QLKD Phòng Trọ" FontSize="42" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Tạo tài khoản mới để bắt đầu quản lý phòng trọ" FontSize="18" Foreground="#E0E0E0" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- PHẦN BÊN PHẢI (FORM ĐĂNG KÝ) -->
        <Border Grid.Column="1" Background="White" CornerRadius="0,10,10,0">
            <Grid>
                <!-- CÁC NÚT ĐIỀU KHIỂN CỬA SỔ -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Content="—" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                    <Button Content="☐" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Style="{StaticResource WindowControlButton}" Click="CloseButton_Click"/>
                </StackPanel>

                <!-- FORM ĐĂNG KÝ -->
                <StackPanel VerticalAlignment="Center" Margin="50,0,50,0" Height="594">
                    <!-- Tiêu đề -->
                    <!-- Giảm Margin bot -->

                    <!-- Trường Họ và Tên -->
                    <!-- Tiêu đề -->

                    <!-- Trường Họ và Tên -->
                    <!-- Tiêu đề -->

                    <!-- Trường Email -->
                    <!-- Tiêu đề -->

                    <!-- Trường Email -->
                    <!-- Tiêu đề -->
                    <TextBlock Text="   Tạo tài khoản mới" FontSize="32" FontWeight="Bold" Foreground="#333" Height="42" Width="324"/>

                    <!-- Trường Email -->
                    <TextBlock Text="Email:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <TextBox x:Name="EmailTextBox" 
                             Background="White" 
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1" 
                             Padding="10" 
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Trường Tên đăng nhập -->
                    <TextBlock Text="Tên đăng nhập:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Background="White" 
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1" 
                             Padding="10" 
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Trường Mật khẩu -->
                    <TextBlock Text="Mật khẩu:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Background="White" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Padding="10" 
                                 FontSize="14"
                                 Margin="0,0,0,10"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Trường Xác nhận mật khẩu -->
                    <TextBlock Text="Xác nhận mật khẩu:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Background="White" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Padding="10" 
                                 FontSize="14"
                                 Margin="0,0,0,10"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                    <!-- Checkbox hiện/ẩn mật khẩu -->
                    <CheckBox x:Name="ShowPasswordCheckBox" 
                              Content="Hiện thị mật khẩu" 
                              FontSize="12" 
                              Foreground="#666" 
                              Margin="0,0,0,15" 
                              Checked="ShowPasswordCheckBox_Checked"
                              Unchecked="ShowPasswordCheckBox_Unchecked"/>

                    <!-- Điều kiện đặt mật khẩu -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Điều kiện mật khẩu:" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBlock x:Name="PasswordLengthRequirement" 
                                   Text="• Mật khẩu tối thiểu 6 ký tự" 
                                   FontSize="11" 
                                   Foreground="Red" 
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="PasswordUppercaseRequirement" 
                                   Text="• Chứa ít nhất 1 ký tự viết hoa" 
                                   FontSize="11" 
                                   Foreground="Red" 
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="PasswordDigitRequirement" 
                                   Text="• Hoặc chứa ít nhất 1 kí tự số" 
                                   FontSize="11" 
                                   Foreground="Red" 
                                   Margin="0,0,0,2"/>
                    </StackPanel>

                    <!-- Nút Đăng ký (Đã loại bỏ Height và RenderTransform) -->
                    <Button Content="Đăng Ký" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="RegisterButton_Click"/>

                    <!-- Link quay lại đăng nhập -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Đã có tài khoản? " FontSize="14" Foreground="Gray"/>
                        <TextBlock><Hyperlink Foreground="#0078D4" FontSize="14" Click="BackToLogin_Click" TextDecorations="Underline"><Run Text="Đăng nhập tại đây"/></Hyperlink></TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>