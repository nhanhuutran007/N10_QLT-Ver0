<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.DashWindow"
    Title="Dashboard"
    Height="800"
    Width="1200"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="{x:Type Button}"
               x:Key="WindowControlButton">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="Gray"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="24"/>
            <Setter Property="FontFamily"
                    Value="Segoe MDL2 Assets"/>
            <Setter Property="Width"
                    Value="40"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Thêm Trigger cho nút đóng -->
        <Style x:Key="CloseButton"
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF6B6B"/>
                    <!-- Màu đỏ nhạt hơn -->
                    <Setter Property="Foreground"
                            Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút menu bên trái -->
        <Style TargetType="{x:Type Button}"
               x:Key="MenuButtonStyle">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Left"/>
            <Setter Property="Padding"
                    Value="20,15"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Width"
                    Value="220"/>
            <!-- Tăng width -->
            <Setter Property="Height"
                    Value="56"/>
            <!-- Tăng height -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút đăng xuất -->
        <Style TargetType="{x:Type Button}"
               x:Key="LogoutButtonStyle"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background"
                    Value="#FF4444"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Padding"
                    Value="0,10"/>
            <Setter Property="Margin"
                    Value="0,10,0,0"/>
            <Setter Property="Width"
                    Value="190"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Opacity"
                            Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các card thống kê -->
        <Style TargetType="{x:Type Border}"
               x:Key="StatCardStyle">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Padding"
                    Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.1"
                                      ShadowDepth="2"
                                      BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút chính -->
        <Style TargetType="{x:Type Button}"
               x:Key="PrimaryButtonStyle">
            <Setter Property="Background"
                    Value="#5B75D4"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR BÊN TRÁI -->
        <Border Grid.Column="0"
                CornerRadius="10,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#3A4E8E"
                                  Offset="0"/>
                    <GradientStop Color="#5B75D4"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <!-- Logo và tiêu đề -->
                <StackPanel VerticalAlignment="Top"
                            Margin="20,30,20,80"
                            Width="200"
                            HorizontalAlignment="Center">
                    <!-- Logo -->
                    <Image Source="/Views/Windows/Logo.png"
                           Width="140"/>
                    <!-- Tiêu đề -->
                    <TextBlock Text="Quản lý phòng trọ"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               TextWrapping="Wrap"
                               MaxWidth="220"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                    <TextBlock Text="Dashboard"
                               FontSize="16"
                               Foreground="#E0E0E0"
                               Margin="0,4,0,0"
                               HorizontalAlignment="Center"/>
                    <Border Height="40"
                            Background="Transparent"/>
                </StackPanel>

                <!-- Menu điều hướng -->
                <StackPanel VerticalAlignment="Center"
                            Margin="20,0"
                            Width="220"
                            HorizontalAlignment="Center">
                    <Border CornerRadius="20"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="📊 Tổng quan"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="120"
                                HorizontalContentAlignment="Center"
                                Click="OverviewButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,15,12,0"/>
                    </Border>
                    <Border CornerRadius="10"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="🏠 Quản lý phòng"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="150"
                                HorizontalContentAlignment="Center"
                                Click="RoomsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="👥 Khách thuê"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="130"
                                HorizontalContentAlignment="Center"
                                Click="TenantsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="💰 Hóa đơn"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="130"
                                HorizontalContentAlignment="Center"
                                Click="BillsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10"
                            Margin="0,0,0,10"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="📋 Hợp đồng"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="130"
                                HorizontalContentAlignment="Center"
                                Click="ContractsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10"
                            Margin="0,0,0,0"
                            Background="Transparent"
                            HorizontalAlignment="Center">
                        <Button Content="⚙️ Cài đặt"
                                Style="{StaticResource MenuButtonStyle}"
                                Height="48"
                                Width="130"
                                HorizontalContentAlignment="Center"
                                Click="SettingsButton_Click" VerticalAlignment="Top" Margin="20,0,12,0" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Thông tin người dùng -->
                <StackPanel VerticalAlignment="Bottom"
                            Margin="20,0,20,30">
                    <Border Background="#4A63C1"
                            CornerRadius="8"
                            Padding="15" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Admin User"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="admin@example.com"
                                       FontSize="12"
                                       Foreground="#E0E0E0"
                                       Margin="0,2,0,0" HorizontalAlignment="Center"/>
                            <Button Content="Đăng xuất"
                                    Style="{StaticResource LogoutButtonStyle}"
                                    Click="LogoutButton_Click"
                                    IsEnabled="False" Margin="1,10,0,0" Width="170"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- NỘI DUNG CHÍNH -->
        <Border Grid.Column="1"
                Background="#F8F9FA"
                CornerRadius="0,10,10,0">
            <Grid>
                <!-- Header với các nút điều khiển -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header bar -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tiêu đề trang -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="30,20">
                            <TextBlock Text="📊"
                                       FontSize="24"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Tổng quan hệ thống"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#333"/>
                        </StackPanel>

                        <!-- Các nút điều khiển cửa sổ -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                            <Button Content="—"
                                    Style="{StaticResource WindowControlButton}"
                                    Click="MinimizeButton_Click"/>
                            <Button Content="☐"
                                    Style="{StaticResource WindowControlButton}"
                                    Click="MaximizeButton_Click"/>
                            <Button Content="✕"
                                    Style="{StaticResource CloseButton}"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Nội dung chính -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="30,30,30,30">
                        <!-- Thống kê tổng quan -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Card: Tổng số phòng -->
                            <Border Grid.Column="0"
                                    Style="{StaticResource StatCardStyle}"
                                    Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="🏠"
                                               FontSize="32"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Tổng số phòng"
                                               FontSize="14"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="24"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#5B75D4"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Card: Phòng đã thuê -->
                            <Border Grid.Column="1"
                                    Style="{StaticResource StatCardStyle}"
                                    Margin="5,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="✅"
                                               FontSize="32"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Phòng đã thuê"
                                               FontSize="14"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="18"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#28A745"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Card: Phòng trống -->
                            <Border Grid.Column="2"
                                    Style="{StaticResource StatCardStyle}"
                                    Margin="5,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="🆓"
                                               FontSize="32"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Phòng trống"
                                               FontSize="14"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="6"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#FFC107"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Card: Tổng khách thuê -->
                            <Border Grid.Column="3"
                                    Style="{StaticResource StatCardStyle}"
                                    Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="👥"
                                               FontSize="32"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Tổng khách thuê"
                                               FontSize="14"
                                               Foreground="Gray"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="32"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#17A2B8"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Các thống kê chi tiết -->
                        <Grid Margin="0,30,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Biểu đồ và bảng thống kê -->
                            <Border Grid.Column="0"
                                    Style="{StaticResource StatCardStyle}"
                                    Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="📈 Thống kê doanh thu tháng này"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333"
                                               Margin="0,0,0,20"/>

                                    <!-- Giả lập biểu đồ -->
                                    <Border Background="#F8F9FA"
                                            CornerRadius="8"
                                            Height="200"
                                            Margin="0,0,0,20">
                                        <StackPanel VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="📊"
                                                       FontSize="48"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Biểu đồ doanh thu"
                                                       FontSize="16"
                                                       Foreground="Gray"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,10,0,0"/>
                                            <TextBlock Text="(Sẽ được tích hợp biểu đồ thực tế)"
                                                       FontSize="12"
                                                       Foreground="Gray"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Doanh thu tháng này"
                                                       FontSize="14"
                                                       Foreground="Gray"/>
                                            <TextBlock Text="45,000,000 VNĐ"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#28A745"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Tăng trưởng"
                                                       FontSize="14"
                                                       Foreground="Gray"/>
                                            <TextBlock Text="+12.5%"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="#28A745"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Thông báo và hoạt động gần đây -->
                            <Border Grid.Column="1"
                                    Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔔 Thông báo"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#333"
                                               Margin="0,0,0,15"/>

                                    <StackPanel>
                                        <Border Background="#E3F2FD"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <TextBlock Text="Hợp đồng sắp hết hạn"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1976D2"/>
                                                <TextBlock Text="3 hợp đồng sẽ hết hạn trong 7 ngày tới"
                                                           FontSize="11"
                                                           Foreground="#666"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#FFF3E0"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <TextBlock Text="Phòng trống"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#F57C00"/>
                                                <TextBlock Text="Phòng 201, 305 cần dọn dẹp"
                                                           FontSize="11"
                                                           Foreground="#666"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#E8F5E8"
                                                CornerRadius="6"
                                                Padding="10">
                                            <StackPanel>
                                                <TextBlock Text="Thanh toán mới"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#388E3C"/>
                                                <TextBlock Text="Phòng 102 đã thanh toán tiền thuê"
                                                           FontSize="11"
                                                           Foreground="#666"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <Button Content="Xem tất cả"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,15,0,0"
                                            Click="ViewAllNotifications_Click"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Các hành động nhanh -->
                        <Border Style="{StaticResource StatCardStyle}"
                                Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="⚡ Hành động nhanh"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           Margin="0,0,0,20"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Content="➕ Thêm phòng"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,10,0"
                                            Click="AddRoom_Click"/>
                                    <Button Grid.Column="1"
                                            Content="👤 Thêm khách"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="5,0,5,0"
                                            Click="AddTenant_Click"/>
                                    <Button Grid.Column="2"
                                            Content="💰 Tạo hóa đơn"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="5,0,5,0"
                                            Click="CreateBill_Click"/>
                                    <Button Grid.Column="3"
                                            Content="📋 Hợp đồng mới"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="10,0,0,0"
                                            Click="NewContract_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
