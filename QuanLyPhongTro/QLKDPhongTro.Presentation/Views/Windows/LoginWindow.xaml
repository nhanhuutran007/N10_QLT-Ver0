<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" 
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Converters"
        x:Class="QLKDPhongTro.Presentation.Views.Windows.LoginWindow"
        Title="Login" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <!-- Thêm sự kiện này để di chuyển cửa sổ -->

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:BoolToLoadingTextConverter x:Key="BoolToLoadingTextConverter"/>
        
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <!-- Font chứa các icon hệ thống -->
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style để tùy biến TextBox có icon bên trong -->
        <Style TargetType="{x:Type TextBox}" x:Key="TextBoxWithIconStyle">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon (lấy từ Tag) -->
                                <Image Source="{Binding Tag, RelativeSource={RelativeSource Mode=TemplatedParent}}" 
                                       Width="20" Height="20" Margin="10,0" Opacity="0.5"/>

                                <!-- Vùng nhập liệu -->
                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>

                                <!-- Chữ mờ (Placeholder) -->
                                <TextBlock Text="{TemplateBinding ToolTip}" Grid.Column="1"
                                           IsHitTestVisible="False" Foreground="Gray"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho PasswordBox, tương tự TextBox -->
        <Style TargetType="{x:Type PasswordBox}" x:Key="PasswordBoxWithIconStyle">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding Tag, RelativeSource={RelativeSource Mode=TemplatedParent}}" 
                                       Width="20" Height="20" Margin="10,0" Opacity="0.5"/>

                                <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Nút Login chính -->
        <Style TargetType="{x:Type Button}" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}"
                                Height="50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Phần màu xanh chiếm 2/3 -->
            <ColumnDefinition Width="1.5*"/>
            <!-- Phần màu trắng chiếm 1.5/3 -->
        </Grid.ColumnDefinitions>

        <!-- PHẦN BÊN TRÁI (MÀU XANH) -->
        <Border Grid.Column="0" CornerRadius="10,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3A4E8E" Offset="0"/>
                    <GradientStop Color="#5B75D4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" Margin="50">
                <TextBlock Text="QLKD Phòng Trọ" FontSize="42" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Hệ thống quản lý phòng trọ thông minh và đơn giản" FontSize="18" Foreground="#E0E0E0" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- PHẦN BÊN PHẢI (FORM ĐĂNG NHẬP) -->
        <!-- PHẦN BÊN PHẢI (FORM ĐĂNG NHẬP) -->
        <Border Grid.Column="1" Background="White" CornerRadius="0,10,10,0">
            <Grid>
                <!-- CÁC NÚT ĐIỀU KHIỂN CỬA SỔ -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Content="—" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                    <Button Content="☐" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Style="{StaticResource WindowControlButton}" Click="CloseButton_Click"/>
                </StackPanel>

                <!-- FORM ĐĂNG NHẬP -->
                <StackPanel VerticalAlignment="Center" Margin="50">
                    <!-- Tiêu đề -->
                    <TextBlock Text="Xin chào bạn," FontSize="32" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>
                    <TextBlock Text="Đăng nhập để tiếp tục" FontSize="18" Foreground="Gray" Margin="0,5,0,40" HorizontalAlignment="Center"/>

                    <!-- Trường Tên Đăng Nhập -->
                    <TextBlock Text="Tên Đăng Nhập:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Background="White" 
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1" 
                             Padding="10" 
                             FontSize="14"
                             Margin="0,0,0,20"/>

                    <!-- Trường Mật Khẩu -->
                    <TextBlock Text="Mật Khẩu:" FontSize="14" Foreground="#333" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Background="White" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1" 
                                 Padding="10" 
                                 FontSize="14"
                                 Margin="0,0,0,10"/>

                    <!-- Checkbox và Link Quên mật khẩu -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="ShowPasswordCheckBox" 
                                  Content="Hiện thị mật khẩu" 
                                  FontSize="12" 
                                  Foreground="#666" 
                                  Grid.Column="0"
                                  Checked="ShowPasswordCheckBox_Checked"
                                  Unchecked="ShowPasswordCheckBox_Unchecked"/>

                        <Button Grid.Column="1" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Content="Quên mật khẩu?"
                                Background="Transparent"
                                Foreground="#0078D4"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="ForgotPassword_Click"/>
                    </Grid>

                    <!-- Nút Đăng Nhập -->
                    <Button Content="{Binding IsLoading, Converter={StaticResource BoolToLoadingTextConverter}}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>

                    <!-- Link Đăng ký -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Bạn chưa có tài khoản? " FontSize="14" Foreground="Gray"/>
                        <Button Content="Đăng Ký tại đây"
                                Background="Transparent"
                                Foreground="#FF4444"
                                FontSize="14"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding NavigateToRegisterCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>