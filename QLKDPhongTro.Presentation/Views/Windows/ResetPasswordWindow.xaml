<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt lại mật khẩu"
        Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nhập mật khẩu mới cho tài khoản của bạn"
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"/>

        <PasswordBox x:Name="NewPasswordBox" Grid.Row="1" Margin="0,0,0,8"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="2" Margin="0,0,0,12"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy" Width="80" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Lưu" Width="100" IsDefault="True" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
