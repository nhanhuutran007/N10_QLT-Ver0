<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đặt lại mật khẩu - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Style cho TextBox với hiệu ứng focus -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho PasswordBox với hiệu ứng focus -->
        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" MinWidth="400"/>
            <ColumnDefinition Width="428*"/>
            <ColumnDefinition Width="600*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- === CỘT TRÁI: PHẦN GIỚI THIỆU === -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2764FF" Offset="0.0" />
                    <GradientStop Color="#0B459B" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="80,0,80,0">
                <Image Source="/Resources/Images/Logo.png" 
                       Width="140" Height="167" />

                <TextBlock Text="Đặt lại mật khẩu" 
                           Foreground="White" FontSize="30" FontWeight="Bold" 
                           TextWrapping="Wrap" TextAlignment="Left" 
                           Width="429" Height="34" Margin="0,20,0,0"/>

                <TextBlock Text="Tạo mật khẩu mới an toàn cho tài khoản của bạn. Đảm bảo mật khẩu mạnh và dễ nhớ." 
                           Foreground="#E0E0E0" FontSize="16" 
                           TextWrapping="Wrap" 
                           Margin="0,20,0,0" 
                           Opacity="0.9"/>

                <StackPanel Margin="0,40,0,0">
                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Mật khẩu mạnh" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Sử dụng ít nhất 6 ký tự và kết hợp chữ hoa hoặc số để tăng tính bảo mật." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Xác nhận mật khẩu" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Nhập lại mật khẩu để đảm bảo bạn nhớ chính xác mật khẩu mới." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Bảo mật tài khoản" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Sau khi đặt lại mật khẩu, bạn có thể đăng nhập ngay với mật khẩu mới." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- PHẦN BÊN PHẢI (FORM ĐẶT LẠI MẬT KHẨU) -->
        <Grid Grid.Column="2" Background="#F9FAFB">
            <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Tiêu đề -->
                <TextBlock Text="Đặt lại mật khẩu" FontSize="28" FontWeight="Bold" Foreground="#3B4758" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                <!-- Mô tả -->
                <TextBlock Text="Nhập mật khẩu mới cho tài khoản của bạn" 
                           FontSize="13" 
                           Foreground="#6B7280" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Trường Tên đăng nhập -->
                <TextBlock Text="Tên đăng nhập" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource InputTextBoxStyle}"
                         Height="38" 
                         Margin="0,0,0,10"
                         VerticalContentAlignment="Center"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Trường Mật khẩu mới -->
                <TextBlock Text="Mật khẩu mới" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                <PasswordBox x:Name="NewPasswordBox" 
                             Style="{StaticResource InputPasswordBoxStyle}"
                             Height="38" 
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"
                             PasswordChanged="NewPasswordBox_PasswordChanged"/>

                <!-- Trường Xác nhận mật khẩu -->
                <TextBlock Text="Xác nhận mật khẩu" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Style="{StaticResource InputPasswordBoxStyle}"
                             Height="38" 
                             Margin="0,0,0,10"
                             VerticalContentAlignment="Center"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <!-- Điều kiện đặt mật khẩu -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Điều kiện mật khẩu:" FontSize="12" Foreground="#666" Margin="0,0,0,2" Height="15" Width="409"/>
                    <TextBlock x:Name="PasswordLengthRequirement" 
                               Text="• Mật khẩu tối thiểu 6 ký tự" 
                               FontSize="11" 
                               Foreground="Red" 
                               Margin="0,0,0,1"/>
                    <TextBlock x:Name="PasswordUppercaseRequirement" 
                               Text="• Chứa ít nhất 1 ký tự viết hoa" 
                               FontSize="11" 
                               Foreground="Red" 
                               Margin="0,0,0,1"/>
                    <TextBlock x:Name="PasswordDigitRequirement" 
                               Text="• Hoặc chứa ít nhất 1 kí tự số" 
                               FontSize="11" 
                               Foreground="Red" 
                               Margin="0,0,0,1"/>
                </StackPanel>

                <!-- Nút Lưu -->
                <Border CornerRadius="6" Background="#319DFF" Height="50" Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2B8CE8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button Content="Lưu mật khẩu mới" 
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>
                </Border>

                <!-- Link quay lại đăng nhập -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Nhớ mật khẩu? " FontSize="13" Foreground="#586A84"/>
                    <TextBlock Text=" Đăng nhập" FontSize="13" Foreground="#319DFF" Cursor="Hand" MouseLeftButtonDown="BackToLogin_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
