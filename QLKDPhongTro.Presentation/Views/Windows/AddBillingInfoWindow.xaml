<Window
    x:Class="QLKDPhongTro.Presentation.Views.Windows.AddBillingInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Thêm thông tin thanh toán"
    Height="580"
    Width="650"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Resources/Images/Logo.png"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style chung cho các nhãn (TextBlock) -->
        <Style x:Key="LabelStyle"
                TargetType="TextBlock">
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Foreground"
                    Value="#3B4758"/>
            <Setter Property="Margin"
                    Value="0,12,0,5"/>
        </Style>

        <!-- Style chung cho các ô nhập liệu (TextBox) -->
        <Style x:Key="InputFieldStyle"
                TargetType="TextBox">
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="Background"
                    Value="#F2F6FA"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style chung cho các ô lựa chọn (ComboBox) -->
        <Style x:Key="ComboBoxStyle"
                TargetType="ComboBox">
            <Setter Property="Padding"
                    Value="8"/>
            <Setter Property="Background"
                    Value="#F2F6FA"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Border chính tạo nên giao diện cửa sổ với góc bo tròn và bóng đổ -->
    <Border CornerRadius="12"
            Background="White"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                    Color="#CCCCCC"
                    Opacity="0.5"
                    BlurRadius="10"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- PHẦN HEADER - CỐ ĐỊNH -->
            <Grid Grid.Row="0" Margin="24,24,24,20">
                <TextBlock Text="Thêm thông tin thanh toán"
                        FontSize="18"
                        FontWeight="Medium"
                        Foreground="#3B4758"
                        VerticalAlignment="Center"/>
                <Button x:Name="CloseButton"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="32"
                        Height="32"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="#586A84"
                        ToolTip="Đóng">
                    <TextBlock Text="✕"
                            FontSize="16"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                </Button>
            </Grid>

            <!-- ScrollViewer để cuộn nội dung nếu không đủ chiều cao -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    Margin="24,0,24,24">
                <StackPanel>
                    <!-- PHẦN THÔNG TIN CHUNG -->
                    <TextBlock Text="Khách hàng"
                            Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CustomerComboBox"
                            Style="{StaticResource ComboBoxStyle}"
                            IsEditable="True"
                            SelectionChanged="CustomerComboBox_SelectionChanged">
                        <!-- ItemsSource sẽ được set trong code-behind -->
                    </ComboBox>

                    <TextBlock Text="Mã hợp đồng"
                            Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="ContractIdComboBox"
                            Style="{StaticResource ComboBoxStyle}"
                            SelectionChanged="ContractIdComboBox_SelectionChanged">
                        <!-- ItemsSource sẽ được set trong code-behind -->
                    </ComboBox>

                    <!-- Tên phòng tự động từ hợp đồng -->
                    <TextBlock Text="Tên phòng"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="RoomNameTextBox"
                            Style="{StaticResource InputFieldStyle}"
                            IsReadOnly="True"
                            Background="#F9FAFB"
                            Foreground="#6B7280"
                            ToolTip="Tên phòng được lấy tự động từ hợp đồng đã chọn"/>

                    <!-- PHẦN CHI PHÍ -->
                    <TextBlock Text="Tiền thuê phòng"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TienThueInput"
                            Text="3500000"
                            Style="{StaticResource InputFieldStyle}"/>

                    <!-- Chỉ số và đơn giá điện -->
                    <TextBlock Text="Chỉ số điện"
                            Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SoDienInput"
                                Grid.Column="0"
                                Style="{StaticResource InputFieldStyle}"
                                ToolTip="Nhập chỉ số điện (kWh)"/>
                        <TextBlock Text="/"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Foreground="#586A84"/>
                        <TextBox x:Name="DonGiaDienInput"
                                Grid.Column="2"
                                Style="{StaticResource InputFieldStyle}"
                                ToolTip="Nhập đơn giá điện (đồng/kWh)"/>
                    </Grid>
                    <TextBlock Text="(Ví dụ: 100 / 3500 = 350,000 đồng)"
                            FontSize="11"
                            Foreground="#888"
                            Margin="0,2,0,0"/>

                    <!-- Chỉ số và đơn giá nước -->
                    <TextBlock Text="Chỉ số nước"
                            Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SoNuocInput"
                                Grid.Column="0"
                                Style="{StaticResource InputFieldStyle}"
                                ToolTip="Nhập chỉ số nước (m³)"/>
                        <TextBlock Text="/"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Foreground="#586A84"/>
                        <TextBox x:Name="DonGiaNuocInput"
                                Grid.Column="2"
                                Style="{StaticResource InputFieldStyle}"
                                ToolTip="Nhập đơn giá nước (đồng/m³)"/>
                    </Grid>
                    <TextBlock Text="(Ví dụ: 10 / 15000 = 150,000 đồng)"
                            FontSize="11"
                            Foreground="#888"
                            Margin="0,2,0,0"/>

                    <TextBlock Text="Tiền Internet"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TienInternetInput"
                            Style="{StaticResource InputFieldStyle}"/>

                    <TextBlock Text="Tiền vệ sinh"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TienVeSinhInput"
                            Style="{StaticResource InputFieldStyle}"/>

                    <TextBlock Text="Tiền giữ xe"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TienGiuXeInput"
                            Style="{StaticResource InputFieldStyle}"/>

                    <TextBlock Text="Chi phí khác"
                            Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="ChiPhiKhacInput"
                            Style="{StaticResource InputFieldStyle}"/>

                    <!-- PHẦN THIẾT LẬP -->
                    <TextBlock Text="Ngày tạo"
                            Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="CreatedDatePicker"
                            Padding="8"
                            Background="#F2F6FA"
                            BorderThickness="0"/>

                    <TextBlock Text="Thông báo qua"
                            Style="{StaticResource LabelStyle}"
                            Margin="0,15,0,5"/>
                    <TextBlock Text="Khách hàng nhận thông báo thanh toán qua:"
                            Foreground="#586A84"
                            Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="Trực tiếp"
                                IsChecked="True"
                                VerticalContentAlignment="Center"
                                Margin="0,0,20,0"/>
                        <CheckBox Content="Email"
                                VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Nút hành động -->
                    <Button x:Name="AddButton"
                            Content="Thêm"
                            Background="#319DFF"
                            Foreground="White"
                            Width="150"
                            Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Margin="0,25,0,0"
                            Cursor="Hand"
                            Click="AddButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>