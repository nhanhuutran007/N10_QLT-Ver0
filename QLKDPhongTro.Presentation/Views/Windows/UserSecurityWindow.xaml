<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.UserSecurityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        mc:Ignorable="d"
        Title="Cập nhật hồ sơ - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">
    
    <Window.DataContext>
        <vm:UserSecurityViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Converters -->
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Style cho TextBox với hiệu ứng focus -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho PasswordBox với hiệu ứng focus -->
        <Style x:Key="InputPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút Cập nhật hồ sơ -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#319DFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="6" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2B8CE8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho tiêu đề section -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>

        <!-- Style cho label -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Style cho card container -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#D6D8E0" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" MinWidth="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:SidebarControl Grid.Column="0" x:Name="SidebarControl" MenuItemClicked="SidebarControl_MenuItemClicked"/>

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Margin="223,15,15,15" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl" 
                                     MenuButtonClicked="TopbarControl_MenuButtonClicked"
                                     SearchTextChanged="TopbarControl_SearchTextChanged"
                                     SettingsButtonClicked="TopbarControl_SettingsButtonClicked"/>

            <!-- Nội dung chính - Form cập nhật thông tin -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="10,10,10,10">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Tiêu đề -->
                        <TextBlock Text="Cập nhật hồ sơ tài khoản" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#3B4758"
                                   Margin="0,0,0,30"/>
                        
                        <!-- Section: Thông tin cá nhân -->
                        <TextBlock Text="Thông tin cá nhân" 
                                   Style="{StaticResource SectionTitleStyle}"/>

                        <!-- Trường Tên đăng nhập -->
                        <TextBlock Text="Tên đăng nhập" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding TenDangNhap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường Họ và tên -->
                        <TextBlock Text="Họ và tên" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding HoTen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường Ngày sinh -->
                        <TextBlock Text="Ngày sinh" 
                                   Style="{StaticResource LabelStyle}"/>
                        <DatePicker SelectedDate="{Binding NgaySinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Height="42"
                                    Margin="0,0,0,15"
                                    Background="#F2F6FA"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"/>

                        <!-- Trường Email -->
                        <TextBlock Text="Email" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường Số điện thoại -->
                        <TextBlock Text="Số điện thoại" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding SoDienThoai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường CCCD -->
                        <TextBlock Text="CCCD" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding CCCD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường Ngày cấp -->
                        <TextBlock Text="Ngày cấp" 
                                   Style="{StaticResource LabelStyle}"/>
                        <DatePicker SelectedDate="{Binding NgayCap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Height="42"
                                    Margin="0,0,0,15"
                                    Background="#F2F6FA"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"/>

                        <!-- Trường Nơi cấp -->
                        <TextBlock Text="Nơi cấp" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding NoiCap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="42" 
                                 Margin="0,0,0,15"/>

                        <!-- Trường Địa chỉ -->
                        <TextBlock Text="Địa chỉ" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding DiaChi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Height="80" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Margin="0,0,0,30"/>

                        <!-- Section: Thay đổi mật khẩu -->
                        <TextBlock Text="Thay đổi mật khẩu" 
                                   Style="{StaticResource SectionTitleStyle}"/>
                        
                        <TextBlock Text="Để thay đổi mật khẩu, vui lòng điền đầy đủ các trường bên dưới. Nếu không muốn thay đổi, hãy để trống." 
                                   FontSize="12" 
                                   Foreground="#666666" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <!-- Trường Mật khẩu cũ -->
                        <TextBlock Text="Mật khẩu hiện tại" 
                                   Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="OldPasswordBox"
                                     Style="{StaticResource InputPasswordBoxStyle}"
                                     Height="42" 
                                     Margin="0,0,0,15"
                                     PasswordChanged="OldPasswordBox_PasswordChanged"/>

                        <!-- Trường Mật khẩu mới -->
                        <TextBlock Text="Mật khẩu mới" 
                                   Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="NewPasswordBox"
                                     Style="{StaticResource InputPasswordBoxStyle}"
                                     Height="42" 
                                     Margin="0,0,0,15"
                                     PasswordChanged="NewPasswordBox_PasswordChanged"/>

                        <!-- Trường Xác nhận mật khẩu -->
                        <TextBlock Text="Xác nhận mật khẩu mới" 
                                   Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource InputPasswordBoxStyle}"
                                     Height="42" 
                                     Margin="0,0,0,30"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                        <!-- Nút Cập nhật hồ sơ -->
                        <Button Content="Cập nhật hồ sơ" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding UpdateProfileCommand}"
                                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                                HorizontalAlignment="Right"
                                MinWidth="180"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- Loading overlay -->
        <Grid Grid.ColumnSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock Text="Đang xử lý..." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>