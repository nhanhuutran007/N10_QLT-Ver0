<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng Nhập - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        WindowStyle="None"
        AllowsTransparency="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MinWidth="400"/>
            <ColumnDefinition Width="Auto"
                              MinWidth="591"/>
        </Grid.ColumnDefinitions>
        <!-- Responsive breakpoints -->
        <Grid.Resources>
            <Style x:Key="ResponsiveTextStyle"
                   TargetType="TextBlock">
                <Style.Triggers>
                    <Trigger Property="Grid.Column"
                             Value="0">
                        <Setter Property="FontSize"
                                Value="36"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
        </Grid.Resources>

        <!-- CÁC NÚT ĐIỀU KHIỂN CỬA SỔ -->
        <Canvas Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="1000">
            <StackPanel Orientation="Horizontal" Canvas.Right="16" Canvas.Top="16">
                <!-- Minimize Button -->
                <Button Width="40" Height="32" Click="Minimize_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M6,16 L34,16" Stroke="#586A84" StrokeThickness="2"/>
                </Button>
                <!-- Maximize/Restore Button -->
                <Button x:Name="MaximizeButton" Width="40" Height="32" Click="MaximizeRestore_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M8,8 L32,8 L32,24 L8,24 Z" Stroke="#586A84" StrokeThickness="2"/>
                </Button>
                <!-- Close Button -->
                <Button Width="40" Height="32" Click="Close_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M10,10 L30,22 M30,10 L10,22" Stroke="#E74C3C" StrokeThickness="2"/>
                </Button>
            </StackPanel>
        </Canvas>
        <!-- Left Side - Cover_sign-in_log_in -->
        <Border x:Name="LeftBorder"
                Grid.Column="0"
                MinWidth="400"
                MinHeight="350">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#003580"
                                  Offset="0"/>
                    <GradientStop Color="#004bb3"
                                  Offset="0.5"/>
                    <GradientStop Color="#0062e6"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <!-- Ellipses - Simplified for example -->
                <Canvas>
                    <!-- Bọc các Ellipse trong Canvas để định vị tuyệt đối -->
                    <Ellipse Fill="#3E72FF"
                             Opacity="0.5"
                             Width="206"
                             Height="206"
                             Canvas.Left="29"
                             Canvas.Top="143">
                        <Ellipse.Effect>
                            <BlurEffect Radius="25"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <Ellipse Fill="#3E72FF"
                             Opacity="0.5"
                             Width="154"
                             Height="153"
                             Canvas.Left="350"
                             Canvas.Top="246">
                        <Ellipse.Effect>
                            <BlurEffect Radius="25"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <!-- Thêm các Ellipse khác tương tự -->
                </Canvas>

                <!-- Light_logo (Simplified - you'll need to break down the paths) -->
                <Canvas Margin="10,10,0,0">
                    <!-- Example path for 'light' part, you'll need to add all of them -->
                    <!-- Add more paths for the logo -->
                </Canvas>

                <TextBlock Text="Quản Lý Phòng Trọ"
                           Foreground="White"
                           FontSize="36"
                           FontWeight="Bold"
                           Margin="0,290,0,0"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Hệ thống quản lý phòng trọ hiện đại và tiện lợi"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Normal"
                           Margin="0,343,0,0"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Opacity="0.9"/>

                <StackPanel Margin="140,350,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left">
                    <!-- Design System -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <Canvas Width="20"
                                Height="20">
                            <!-- check_circle icon path - you'll need to define this as a Geometry or Path -->
                        </Canvas>
                        <StackPanel Margin="10,0,0,0"/>
                    </StackPanel>
                    <!-- Repeat for Component Variants, Auto Layouts, and Ready to use Templates -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Side - Sign_in_2 -->
        <Border Grid.Column="1"
                Background="White"
                MinWidth="400"
                MaxWidth="500"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="599"
                Width="414">
            <Border.Effect>
                <DropShadowEffect Color="#319DFF"
                                  BlurRadius="16"
                                  ShadowDepth="0"
                                  Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Margin="32"
                        MinWidth="350">
                <TextBlock Text="Đăng Nhập"
                           Foreground="#3B4758"
                           FontSize="28"
                           FontWeight="Bold"
                           Margin="0,0,0,32"
                           HorizontalAlignment="Center"/>

                <!-- Sign in with Google Button - ĐÃ ẨN -->
                <!-- Google Login Button Hidden -->
                <Border BorderBrush="#7D8FA9"
                        BorderThickness="1"
                        CornerRadius="8"
                        Height="50"
                        Margin="0,0,0,20"
                        Cursor="Hand"
                        Background="White"
                        Visibility="Collapsed">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#F8F9FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <!-- Google Icon (commented out) -->
                        <Canvas Width="20"
                                Height="20"
                                Margin="0,0,12,0">
                            <Path Fill="#4285F4"
                                  Data="M12.545 10.239v2.821h4.445c-.178 1.149-1.315 3.365-4.445 3.365-2.676 0-4.86-2.216-4.86-4.95s2.184-4.95 4.86-4.95c1.524 0 2.545.649 3.128 1.21l2.13-2.05C16.455 2.35 14.67 1.5 12.545 1.5c-4.08 0-7.36 2.88-7.36 6.45s3.28 6.45 7.36 6.45c4.6 0 7.6-3.24 7.6-7.8 0-.52-.05-.91-.11-1.31H12.545z"/>
                        </Canvas>
                        <TextBlock Text="Đăng nhập với Google"
                                   Foreground="#3B4758"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Or separator -->
                <Grid Margin="0,16,0,16" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Grid.Column="0"
                               Height="1"
                               Fill="#EEF0F4"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="Or"
                               Foreground="#586A84"
                               FontSize="14"
                               Margin="10,0,10,0"/>
                    <Rectangle Grid.Column="2"
                               Height="1"
                               Fill="#EEF0F4"
                               VerticalAlignment="Center"/>
                </Grid>
                <!-- Username Input -->
                <TextBlock Text="Tên đăng nhập"
                           Foreground="#3B4758"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Border CornerRadius="8"
                        Background="#F2F6FA"
                        Height="50"
                        Margin="0,0,0,20">
                    <TextBox x:Name="EmailTextBox"
                             Text=""
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="16,12"
                             FontSize="14"
                             Foreground="#3B4758"
                             VerticalContentAlignment="Center"/>
                </Border>

                <!-- Password Input -->
                <TextBlock Text="Mật khẩu"
                           Foreground="#3B4758"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,20">
                    <Border CornerRadius="8"
                            Background="#F2F6FA"
                            Height="50">
                        <PasswordBox x:Name="PasswordBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="16,12"
                                     FontSize="14"
                                     Foreground="#3B4758"
                                     VerticalContentAlignment="Center"/>
                    </Border>
                    <!-- Show/Hide Password Button -->
                    <Button x:Name="TogglePasswordButton"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,16,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="TogglePasswordButton_Click">
                        <Button.Content>
                            <Path Fill="#7D8FA9"
                                  Data="M12 5C7 5 2.73 7.11 1 10.5C2.73 13.89 7 16 12 16C17 16 21.27 13.89 23 10.5C21.27 7.11 17 5 12 5ZM12 13.5C10.62 13.5 9.5 12.38 9.5 11C9.5 9.62 10.62 8.5 12 8.5C13.38 8.5 14.5 9.62 14.5 11C14.5 12.38 13.38 13.5 12 13.5ZM12 7C13.66 7 15 8.34 15 10C15 11.66 13.66 13 12 13C10.34 13 9 11.66 9 10C9 8.34 10.34 7 12 7Z"/>
                        </Button.Content>
                    </Button>
                </Grid>

                <!-- Remember me & Forgot password -->
                <Grid Margin="0,0,0,32">
                    <CheckBox x:Name="RememberMeCheckBox"
                              Content="Ghi nhớ đăng nhập"
                              Foreground="#3B4758"
                              FontSize="14"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Cursor="Hand">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="{x:Type CheckBox}">
                                <StackPanel Orientation="Horizontal">
                                    <Border x:Name="CheckBoxBorder"
                                            Width="18"
                                            Height="18"
                                            BorderBrush="#7D8FA9"
                                            BorderThickness="1.5"
                                            Background="White"
                                            CornerRadius="3">
                                        <Path x:Name="CheckMark"
                                              Data="M4,9 L8,13 L15,6"
                                              Stroke="#319DFF"
                                              StrokeThickness="2"
                                              Visibility="Collapsed"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>
                                    <ContentPresenter Margin="10,0,0,0"
                                                      VerticalAlignment="Center"/>
                                </StackPanel>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked"
                                             Value="True">
                                        <Setter TargetName="CheckMark"
                                                Property="Visibility"
                                                Value="Visible"/>
                                        <Setter TargetName="CheckBoxBorder"
                                                Property="Background"
                                                Value="#319DFF"/>
                                        <Setter TargetName="CheckBoxBorder"
                                                Property="BorderBrush"
                                                Value="#319DFF"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter TargetName="CheckBoxBorder"
                                                Property="BorderBrush"
                                                Value="#319DFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                    <TextBlock Text="Quên mật khẩu?"
                               Foreground="#319DFF"
                               FontSize="14"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Cursor="Hand"
                               MouseLeftButtonDown="ForgotPassword_Click"/>
                </Grid>

                <!-- Sign in Button -->
                <Border CornerRadius="8"
                        Background="#319DFF"
                        Height="50"
                        Margin="0,0,0,20">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#2B8CE8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button x:Name="LoginButton"
                            Content="Đăng Nhập"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Click="LoginButton_Click"
                            />
                </Border>
                <!-- Don't have an account? Create new -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Chưa có tài khoản?"
                               Foreground="#586A84"
                               FontSize="14"
                               Margin="0,10,0,0"/>
                    <TextBlock Text=" Tạo mới"
                               Foreground="#319DFF"
                               FontSize="14"
                               Margin="5,10,0,0"
                               Cursor="Hand"
                               MouseLeftButtonDown="CreateAccount_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</Window>