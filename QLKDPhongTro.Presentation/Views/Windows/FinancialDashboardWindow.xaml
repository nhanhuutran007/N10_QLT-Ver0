<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.FinancialDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        xmlns:viewModels="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
        xmlns:views="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        
        Title="Quản lý tài chính - Quản Lý Phòng Trọ"
        MinHeight="900"
        MinWidth="1400"
        Height="1000"
        Width="1800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Converters -->
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:PercentageConverter x:Key="PercentageConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:PaymentStatusToColorConverter x:Key="PaymentStatusToColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- Advanced Effects -->
        <DropShadowEffect x:Key="CardShadow" Color="#1A1A1A" Opacity="0.08" ShadowDepth="0" BlurRadius="24" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="HoverShadow" Color="#10D096" Opacity="0.15" ShadowDepth="0" BlurRadius="20" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="FloatShadow" Color="#1A1A1A" Opacity="0.12" ShadowDepth="0" BlurRadius="32" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="GlowEffect" Color="#10D096" Opacity="0.3" ShadowDepth="0" BlurRadius="15" RenderingBias="Quality"/>
        <DropShadowEffect x:Key="ChartGlow" Color="#6366F1" Opacity="0.2" ShadowDepth="0" BlurRadius="20" RenderingBias="Quality"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="RevenueGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#10D096" Offset="0"/>
            <GradientStop Color="#0EBE8C" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ExpenseGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EF4444" Offset="0"/>
            <GradientStop Color="#DC2626" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProfitGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#4F46E5" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DebtGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F8FAFC" Offset="0"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>

        <!-- Built-in converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Modern Card Style -->
        <Style TargetType="{x:Type Border}" x:Key="ModernCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
        </Style>

        <!-- Modern Button Style -->
        <Style TargetType="{x:Type Button}" x:Key="ModernButtonStyle">
            <Setter Property="Background" Value="{StaticResource RevenueGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                CornerRadius="12" 
                                Background="{TemplateBinding Background}"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect" Value="{StaticResource HoverShadow}"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced Debt Item Template -->
        <DataTemplate x:Key="EnhancedDebtItemTemplate">
            <Border BorderBrush="#F1F5F9"
                    BorderThickness="0,0,0,1"
                    Padding="24,20"
                    Margin="0,0,0,12"
                    Background="White"
                    CornerRadius="16"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Thông tin chính -->
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TenPhong}"
                                       FontWeight="Bold"
                                       FontSize="17"
                                       Foreground="#1E293B"/>
                            <Border Background="#FEF3C7" CornerRadius="8" Padding="8,4" Margin="12,0,0,0">
                                <TextBlock Text="{Binding ThangNam}"
                                           Foreground="#B45309"
                                           FontSize="11"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="{Binding TenKhachHang}"
                                   Foreground="#64748B"
                                   FontSize="14"
                                   Margin="0,6,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Border Background="#F0FDF9" CornerRadius="8" Padding="8,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📞" FontSize="12" Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SoDienThoai}"
                                               Foreground="#065F46"
                                               FontSize="12"
                                               FontWeight="Medium"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Số tiền nổi bật -->
                    <Border Grid.Column="1" 
                            Background="#FEF2F2" 
                            CornerRadius="12" 
                            Padding="16,12"
                            Margin="20,0,20,0"
                            Effect="{StaticResource GlowEffect}">
                        <TextBlock Text="{Binding TongTien, Converter={StaticResource CurrencyConverter}}"
                                   Foreground="#DC2626"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <!-- Trạng thái -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Border Background="#FFFBEB" CornerRadius="8" Padding="8,6">
                            <TextBlock Text="⏰ Quá hạn 7 ngày"
                                       Foreground="#B45309"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </Border>
                        <TextBlock Text="Cần xử lý ngay"
                                   Foreground="#EF4444"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Margin="0,6,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="💳 Thanh toán"
                                Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding DataContext.PayDebtCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"
                                Width="120"
                                Margin="0,0,8,0"/>
                        <Button Content="📞 Nhắc nhở"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="#6B7280"
                                Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Chart Point Style -->
        <Style x:Key="ChartPointStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Modern TextBox Style - Fixed -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Effect="{StaticResource CardShadow}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#10D096"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#10D096"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" MinWidth="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <views:SidebarControl Grid.Column="0" x:Name="SidebarControl"
                              MenuItemClicked="SidebarControl_MenuItemClicked"
                              LogoutClicked="SidebarControl_LogoutClicked"/>

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Margin="223,15,15,15" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <views:TopbarControl Grid.Row="0" x:Name="TopbarControl"
                                 MenuButtonClicked="TopbarControl_MenuButtonClicked"
                                 SearchTextChanged="TopbarControl_SearchTextChanged"
                                 SettingsButtonClicked="TopbarControl_SettingsButtonClicked"/>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          IsEnabled="{Binding IsNotLoading}">
                <StackPanel Margin="0">

                    <!-- Header: Title -->
                    <TextBlock Text="Quản lý tài chính" 
                               Foreground="#3B4758" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Margin="20,15,0,20"/>

                    <!-- === BIỂU ĐỒ PHÂN TÍCH NĂM === -->
                    <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,40">
                        <StackPanel>
                            <!-- Chart Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                                <TextBlock Text="📈 Phân Tích Xu Hướng 12 Tháng" 
                                           FontSize="24" 
                                           FontWeight="Bold" 
                                           Foreground="#1E293B"/>
                                <TextBlock Text="(Dữ liệu năm 2024)"
                                       Foreground="#64748B"
                                       FontSize="16"
                                       Margin="20,6,0,0"/>
                            </StackPanel>

                            <!-- Main Combined Chart -->
                            <Grid Height="400" Margin="0,0,0,20">
                                <!-- Background Grid -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <!-- Horizontal Grid Lines -->
                                    <Rectangle Grid.Row="0" Fill="#F8FAFC" Height="1" VerticalAlignment="Bottom" Opacity="0.5"/>
                                    <Rectangle Grid.Row="1" Fill="#F8FAFC" Height="1" VerticalAlignment="Bottom" Opacity="0.5"/>
                                    <Rectangle Grid.Row="2" Fill="#F8FAFC" Height="1" VerticalAlignment="Bottom" Opacity="0.5"/>
                                    <Rectangle Grid.Row="3" Fill="#F8FAFC" Height="1" VerticalAlignment="Bottom" Opacity="0.5"/>
                                    <Rectangle Grid.Row="4" Fill="#F8FAFC" Height="1" VerticalAlignment="Bottom" Opacity="0.5"/>
                                </Grid>

                                <!-- Revenue Line with Glow Effect -->
                                <Path Stroke="{StaticResource RevenueGradient}" StrokeThickness="4">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="60,320">
                                                <PolyLineSegment Points="120,300 180,280 240,290 300,270 360,260 420,280 480,250 540,240 600,230 660,220 720,210"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>

                                <!-- Expense Line -->
                                <Path Stroke="{StaticResource ExpenseGradient}" StrokeThickness="3" StrokeDashArray="0">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="60,350">
                                                <PolyLineSegment Points="120,340 180,330 240,335 300,325 360,320 420,330 480,315 540,310 600,305 660,300 720,295"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>

                                <!-- Profit Line with Dashed Style -->
                                <Path Stroke="{StaticResource ProfitGradient}" StrokeThickness="3" StrokeDashArray="4,3">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="60,280">
                                                <PolyLineSegment Points="120,260 180,240 240,250 300,230 360,220 420,240 480,210 540,200 600,190 660,180 720,170"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>

                                <!-- Debt Line -->
                                <Path Stroke="{StaticResource DebtGradient}" StrokeThickness="2" StrokeDashArray="2,4">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure StartPoint="60,200">
                                                <PolyLineSegment Points="120,210 180,220 240,215 300,220 360,210 420,215 480,205 540,200 600,195 660,190 720,185"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>

                                <!-- Data Points for Revenue -->
                                <Ellipse Style="{StaticResource ChartPointStyle}" Fill="{StaticResource RevenueGradient}" ToolTip="Tháng 1: 13,000,000 VNĐ">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="55" Y="315"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse Style="{StaticResource ChartPointStyle}" Fill="{StaticResource RevenueGradient}" ToolTip="Tháng 6: 12,500,000 VNĐ">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="355" Y="255"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse Style="{StaticResource ChartPointStyle}" Fill="{StaticResource RevenueGradient}" ToolTip="Tháng 12: 14,500,000 VNĐ">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="715" Y="205"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>

                                <!-- X-Axis Labels -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                                    <TextBlock Text="1" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="2" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="3" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="4" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="5" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="6" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="7" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="8" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="9" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="10" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="11" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                    <TextBlock Text="12" Width="60" HorizontalAlignment="Center" FontSize="11" Foreground="#64748B" FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Y-Axis Labels -->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="10,0,0,0">
                                    <TextBlock Text="15M" FontSize="10" Foreground="#64748B" HorizontalAlignment="Left" FontWeight="SemiBold"/>
                                    <TextBlock Text="12M" FontSize="10" Foreground="#64748B" HorizontalAlignment="Left" Margin="0,65,0,0" FontWeight="SemiBold"/>
                                    <TextBlock Text="9M" FontSize="10" Foreground="#64748B" HorizontalAlignment="Left" Margin="0,65,0,0" FontWeight="SemiBold"/>
                                    <TextBlock Text="6M" FontSize="10" Foreground="#64748B" HorizontalAlignment="Left" Margin="0,65,0,0" FontWeight="SemiBold"/>
                                    <TextBlock Text="3M" FontSize="10" Foreground="#64748B" HorizontalAlignment="Left" Margin="0,65,0,0" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>

                            <!-- Enhanced Legend -->
                            <Border Background="#F8FAFC" CornerRadius="16" Padding="20" Effect="{StaticResource CardShadow}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                                        <Rectangle Fill="{StaticResource RevenueGradient}" Width="20" Height="4" Margin="0,0,12,0" VerticalAlignment="Center" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Thu nhập" FontSize="13" Foreground="#1E293B" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" +25.4%" FontSize="13" Foreground="#10D096" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                                        <Rectangle Fill="{StaticResource ExpenseGradient}" Width="20" Height="4" Margin="0,0,12,0" VerticalAlignment="Center" RadiusX="2" RadiusY="2"/>
                                        <TextBlock Text="Chi phí" FontSize="13" Foreground="#1E293B" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" +18.2%" FontSize="13" Foreground="#EF4444" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,32,0">
                                        <Rectangle Fill="{StaticResource ProfitGradient}" Width="20" Height="4" Margin="0,0,12,0" VerticalAlignment="Center" RadiusX="2" RadiusY="2" StrokeDashArray="4,3"/>
                                        <TextBlock Text="Lợi nhuận" FontSize="13" Foreground="#1E293B" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" +35.7%" FontSize="13" Foreground="#6366F1" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Fill="{StaticResource DebtGradient}" Width="20" Height="4" Margin="0,0,12,0" VerticalAlignment="Center" RadiusX="2" RadiusY="2" StrokeDashArray="2,4"/>
                                        <TextBlock Text="Công nợ" FontSize="13" Foreground="#1E293B" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" -12.3%" FontSize="13" Foreground="#F59E0B" FontWeight="Bold" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- === QUẢN LÝ CÔNG NỢ & TÍNH NĂNG - LAYOUT THOÁNG === -->
                    <StackPanel Margin="0,0,0,32">

                        <!-- Quick Actions & Statistics Row -->
                        <Grid Margin="0,0,0,32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Quick Actions -->
                            <Border Style="{StaticResource ModernCardStyle}" Grid.Column="0" Margin="0,0,16,0">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="⚡ Hành Động Nhanh"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#1E293B"/>
                                        <TextBlock Text="Thao tác nhanh với hệ thống tài chính"
                                                   FontSize="13"
                                                   Foreground="#64748B"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <Button Content="💰 Ghi nhận thu nhập"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Command="{Binding ShowPaymentFormCommand}"
                                                Margin="0,0,0,12" Height="52"
                                                FontSize="15"/>

                                        <Button Content="💸 Ghi nhận chi phí"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Command="{Binding ShowExpenseFormCommand}"
                                                Margin="0,0,0,12" Height="52"
                                                FontSize="15"/>

                                        <Button Content="🔄 Tạo công nợ tự động"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Command="{Binding AutoGenerateDebtsCommand}"
                                                Margin="0,0,0,12" Height="52"
                                                FontSize="15"/>

                                        <Button Content="📊 Xuất báo cáo"
                                                Style="{StaticResource ModernButtonStyle}"
                                                Command="{Binding ExportReportCommand}" 
                                                Height="52"
                                                FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Statistics Summary -->
                            <Border Style="{StaticResource ModernCardStyle}" Grid.Column="1" Margin="16,0,0,0">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="📈 Tóm Tắt Hiệu Suất"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="#1E293B"/>
                                        <TextBlock Text="Chỉ số tài chính quan trọng"
                                                   FontSize="13"
                                                   Foreground="#64748B"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Metrics Grid -->
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Profit Margin -->
                                        <Border Background="#F0FDF9" CornerRadius="12" Padding="20,16" Margin="0,0,12,12">
                                            <StackPanel>
                                                <TextBlock Text="Tỷ lệ lợi nhuận" FontSize="13" Foreground="#065F46" FontWeight="Medium"/>
                                                <TextBlock Text="72.5%" FontSize="24" Foreground="#10D096" FontWeight="Bold" Margin="0,4,0,0"/>
                                                <TextBlock Text="Hiệu quả kinh doanh" FontSize="11" Foreground="#047857" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Debt Ratio -->
                                        <Border Background="#FFFBEB" CornerRadius="12" Padding="20,16" Margin="12,0,0,12">
                                            <StackPanel>
                                                <TextBlock Text="Công nợ/Tổng thu" FontSize="13" Foreground="#B45309" FontWeight="Medium"/>
                                                <TextBlock Text="8.2%" FontSize="24" Foreground="#F59E0B" FontWeight="Bold" Margin="0,4,0,0"/>
                                                <TextBlock Text="Mức độ rủi ro" FontSize="11" Foreground="#D97706" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Growth -->
                                        <Border Background="#EEF2FF" CornerRadius="12" Padding="20,16" Margin="0,12,12,0" Grid.Row="1">
                                            <StackPanel>
                                                <TextBlock Text="Tăng trưởng năm" FontSize="13" Foreground="#3730A3" FontWeight="Medium"/>
                                                <TextBlock Text="+25.4%" FontSize="24" Foreground="#6366F1" FontWeight="Bold" Margin="0,4,0,0"/>
                                                <TextBlock Text="So với năm trước" FontSize="11" Foreground="#4F46E5" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Management Efficiency -->
                                        <Border Background="#FDF4FF" CornerRadius="12" Padding="20,16" Margin="12,12,0,0" Grid.Row="1">
                                            <StackPanel>
                                                <TextBlock Text="Hiệu quả quản lý" FontSize="13" Foreground="#86198F" FontWeight="Medium"/>
                                                <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="20" Foreground="#F59E0B" FontWeight="Bold" Margin="0,4,0,0"/>
                                                <TextBlock Text="Đánh giá hệ thống" FontSize="11" Foreground="#A855F7" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Phần Công nợ - Full Width -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header Section -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24">
                                    <StackPanel>
                                        <TextBlock Text="📋 Quản Lý Công Nợ"
                                                   FontSize="22"
                                                   FontWeight="Bold"
                                                   Foreground="#1E293B"/>
                                        <TextBlock Text="Theo dõi và xử lý các khoản nợ chưa thanh toán"
                                                   FontSize="13"
                                                   Foreground="#64748B"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <Border Background="#FEF3C7" CornerRadius="12" Padding="16,10" Margin="20,0,0,0" Effect="{StaticResource GlowEffect}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding TotalDebtsCount}" 
                                                       Foreground="#B45309"
                                                       FontSize="16"
                                                       FontWeight="Bold"/>
                                            <TextBlock Text=" khoản nợ • " 
                                                       Foreground="#B45309"
                                                       FontSize="13"
                                                       Margin="4,0,0,0"/>
                                            <TextBlock Text="{Binding TotalDebtAmount, Converter={StaticResource CurrencyConverter}}" 
                                                       Foreground="#DC2626"
                                                       FontSize="13"
                                                       FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Search và Filter Section -->
                                <Border Grid.Row="1" Background="#F8FAFC" CornerRadius="16" Padding="20" Margin="0,0,0,24" Effect="{StaticResource CardShadow}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBox Width="400" Height="44" 
                                                     Style="{StaticResource ModernTextBoxStyle}"
                                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                            <Button Content="🔍 Tìm kiếm" Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding SearchCommand}" Margin="16,0,8,0" Width="100" Height="44"/>
                                            <Button Content="🔄 Làm mới" Style="{StaticResource ModernButtonStyle}"
                                                    Command="{Binding RefreshCommand}" Background="#8B5CF6" Width="100" Height="44"/>
                                        </StackPanel>

                                        <!-- Filter Options -->
                                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                            <TextBlock Text="Bộ lọc:" FontSize="12" Foreground="#64748B" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                            <Border Background="White" CornerRadius="8" Padding="12,8" Margin="0,0,12,0" Effect="{StaticResource CardShadow}" Cursor="Hand">
                                                <TextBlock Text="📅 Tháng này" FontSize="11" Foreground="#64748B" FontWeight="Medium"/>
                                            </Border>
                                            <Border Background="White" CornerRadius="8" Padding="12,8" Margin="0,0,12,0" Effect="{StaticResource CardShadow}" Cursor="Hand">
                                                <TextBlock Text="⚠️ Quá hạn" FontSize="11" Foreground="#64748B" FontWeight="Medium"/>
                                            </Border>
                                            <Border Background="White" CornerRadius="8" Padding="12,8" Effect="{StaticResource CardShadow}" Cursor="Hand">
                                                <TextBlock Text="💰 Trên 3 triệu" FontSize="11" Foreground="#64748B" FontWeight="Medium"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Danh sách công nợ -->
                                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                              Padding="0" Margin="0" MaxHeight="600">
                                    <StackPanel>
                                        <ItemsControl ItemsSource="{Binding Debts}" ItemTemplate="{StaticResource EnhancedDebtItemTemplate}"
                                                      Margin="0,0,0,8"/>

                                        <!-- Empty State -->
                                        <Border Background="#F8FAFC" 
                                                CornerRadius="20" 
                                                Padding="60,80"
                                                Visibility="{Binding HasDebts, Converter={StaticResource InverseBooleanConverter}}"
                                                Effect="{StaticResource CardShadow}"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Center"
                                                Margin="20">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="🎉" 
                                                           FontSize="48" 
                                                           Margin="0,0,0,16" 
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Tuyệt vời! Không có công nợ"
                                                           FontSize="18" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1E293B" 
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Tất cả các khoản thanh toán đã được xử lý thành công"
                                                           FontSize="13" 
                                                           Foreground="#64748B" 
                                                           Margin="0,8,0,0" 
                                                           HorizontalAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           TextAlignment="Center"/>
                                                <Button Content="🔄 Kiểm tra lại" 
                                                        Style="{StaticResource ModernButtonStyle}"
                                                        Command="{Binding RefreshCommand}"
                                                        Margin="0,16,0,0"
                                                        Width="120"
                                                        Height="36"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>