<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.EditContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sửa thông tin hợp đồng"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Roboto">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Sửa thông tin hợp đồng" 
                   FontSize="24" FontWeight="Bold" Foreground="#3B4758"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tên hợp đồng -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Tên hợp đồng:" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <TextBox x:Name="ContractNameTextBox" Height="40" Padding="10" 
                         BorderBrush="#586A84" BorderThickness="1" Background="White"/>
            </StackPanel>

            <!-- Người thuê -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Người thuê:" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <TextBox x:Name="TenantNameTextBox" Height="40" Padding="10" 
                         BorderBrush="#586A84" BorderThickness="1" Background="White"/>
            </StackPanel>

            <!-- Ngày bắt đầu -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Ngày bắt đầu:" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <DatePicker x:Name="StartDatePicker" Height="40" Padding="10" 
                            BorderBrush="#586A84" BorderThickness="1" Background="White"/>
            </StackPanel>

            <!-- Ngày kết thúc -->
            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <TextBlock Text="Ngày kết thúc:" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <DatePicker x:Name="EndDatePicker" Height="40" Padding="10" 
                          BorderBrush="#586A84" BorderThickness="1" Background="White"/>
            </StackPanel>

            <!-- Tiền cọc -->
            <StackPanel Grid.Row="4" Margin="0,0,0,15">
                <TextBlock Text="Tiền cọc (VNĐ):" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <TextBox x:Name="DepositTextBox" Height="29" Padding="10" 
                         BorderBrush="#586A84" BorderThickness="1" Background="White"/>
            </StackPanel>

            <!-- Ghi chú -->
            <StackPanel Grid.Row="5">
                <TextBlock Text="Ghi chú:" FontWeight="Medium" Foreground="#3B4758" Margin="0,0,0,5"/>
                <TextBox x:Name="NotesTextBox" Height="80" Padding="10" 
                         BorderBrush="#586A84" BorderThickness="1" Background="White"
                         TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Hủy" Width="100" Height="40" Margin="0,0,10,0" 
                    Background="#6B7280" Foreground="White" BorderThickness="0" 
                    Click="CancelButton_Click"/>
            <Button Content="Lưu" Width="100" Height="40" 
                    Background="#10D096" Foreground="White" BorderThickness="0" 
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
