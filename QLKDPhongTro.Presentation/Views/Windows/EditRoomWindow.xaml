<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.EditRoomWindow"
    Title="Chỉnh sửa phòng"
    Height="520"
    Width="620"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút hủy -->
        <Style x:Key="CancelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Background overlay với hiệu ứng mờ -->
    <Border Background="#80000000" CornerRadius="12">
        <!-- Main content -->
        <Border Background="White" CornerRadius="12" Margin="5" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="✏️" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Chỉnh sửa phòng" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="✕" Style="{StaticResource CloseButtonStyle}" 
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- Form content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                    <StackPanel>
                        <!-- Tên phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Tên phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox x:Name="RoomNameTextBox" Style="{StaticResource InputTextBoxStyle}" 
                                     Text="Phòng 1"/>
                        </StackPanel>

                        <!-- Số giường -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Số giường *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox x:Name="BedCountTextBox" Style="{StaticResource InputTextBoxStyle}" 
                                     Text="7"/>
                        </StackPanel>

                        <!-- Giá thuê -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Giá thuê (VNĐ) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox x:Name="RentPriceTextBox" Style="{StaticResource InputTextBoxStyle}" 
                                     Text="3,000,000"/>
                        </StackPanel>

                        <!-- Trạng thái -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Trạng thái *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox x:Name="StatusComboBox" Height="40" FontSize="14" Padding="12,8">
                                <ComboBoxItem Content="Trống"/>
                                <ComboBoxItem Content="Đang cho thuê" IsSelected="True"/>
                                <ComboBoxItem Content="Đặt trước"/>
                                <ComboBoxItem Content="Đã hủy"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Mô tả -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Mô tả" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource InputTextBoxStyle}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Text="Phòng đẹp, thoáng mát, gần trung tâm thành phố. Có đầy đủ tiện nghi cơ bản."/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer buttons -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="30,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Style="{StaticResource CancelButtonStyle}" 
                                Width="100" Margin="0,0,15,0" Click="CancelButton_Click"/>
                        <Button Content="Cập nhật" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="120" Click="UpdateRoomButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
