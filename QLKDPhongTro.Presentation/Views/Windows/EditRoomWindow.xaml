<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.EditRoomWindow"
    Title="Chỉnh sửa thông tin phòng"
    Height="520"
    Width="620"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút hủy -->
        <Style x:Key="CancelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <ToggleButton Name="ToggleButton" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                    <Path Name="Arrow" Fill="Black" HorizontalAlignment="Right" Margin="0,0,8,0" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </ToggleButton>
                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="3,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" IsReadOnly="{TemplateBinding IsReadOnly}" Background="{TemplateBinding Background}" BorderThickness="0" Margin="3,3,23,3" Padding="0" VerticalAlignment="Center" HorizontalAlignment="Left" Focusable="True" Visibility="Hidden"/>
                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" Background="White" BorderThickness="1" BorderBrush="Gray" CornerRadius="6">
                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Background overlay với hiệu ứng mờ -->
    <Border Background="#80000000" CornerRadius="12">
        <!-- Main content -->
        <Border Background="White" CornerRadius="12" Margin="5" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="✏️ Chỉnh sửa thông tin phòng" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="✕" Style="{StaticResource WindowControlButton}" Command="{Binding CancelAddEditCommand}"/>
                    </Grid>
                </Border>

                <!-- Form content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                    <StackPanel>
                        <!-- Mã phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Mã phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.MaPhong, Mode=OneWay}" IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Tên phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Tên phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.TenPhong, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Diện tích -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Diện tích (m²) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.DienTich, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Giá thuê -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Giá thuê (VNĐ) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.GiaCoBan, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Số giường -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Số giường *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.SoGiuong, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Trạng thái -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Trạng thái *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource InputComboBoxStyle}" 
                                      SelectedItem="{Binding NewRoom.TrangThai, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="Trống"/>
                                <ComboBoxItem Content="Đang cho thuê"/>
                                <ComboBoxItem Content="Đặt trước"/>
                                <ComboBoxItem Content="Đã hủy"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Ghi chú -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ghi chú" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Text="{Binding NewRoom.GhiChu, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer buttons -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="30,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Style="{StaticResource CancelButtonStyle}" 
                                Width="100" Margin="0,0,15,0" Command="{Binding CancelAddEditCommand}"/>
                        <Button Content="Cập nhật" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="120" Command="{Binding SaveRoomCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>