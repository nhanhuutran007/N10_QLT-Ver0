<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
    xmlns:local="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
    xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.TenantManagementWindow"
    Title="Tenant Management"
    Height="700"
    Width="1200"
    MinHeight="600"
    MinWidth="800"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Converter Ä‘á»ƒ áº©n/hiá»‡n empty state -->
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>

        <!-- Style cho cÃ¡c nÃºt Ä‘iá»u khiá»ƒn cá»­a sá»• -->
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nÃºt Ä‘Ã³ng -->
        <Style x:Key="CloseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho cÃ¡c nÃºt chá»©c nÄƒng chÃ­nh -->
        <Style TargetType="{x:Type Button}" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Ã´ tÃ¬m kiáº¿m -->
        <Style TargetType="{x:Type TextBox}" x:Key="SearchTextBoxStyle">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#d1d5db"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="40,10,16,10"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <Grid>
                                <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" 
                                           Margin="12,0,0,0" Foreground="#6b7280"/>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="40,0,16,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1a7bff"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#a5b4fc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho cÃ¡c card khÃ¡ch thuÃª -->
        <Style TargetType="{x:Type Border}" x:Key="TenantCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#1a7bff" Opacity="0.2" ShadowDepth="0" BlurRadius="30"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin">
                        <Setter.Value>
                            <Point X="0.5" Y="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho action card -->
        <Style TargetType="{x:Type Border}" x:Key="ActionCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Bá»‘ cá»¥c chÃ­nh cá»§a cá»­a sá»• -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*" MinWidth="600"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR BÃŠN TRÃI -->
        <components:SidebarControl Grid.Column="0" 
                                  x:Name="SidebarControl"
                                  PageTitle="Tenant Management"
                                  SelectedMenuItem="Tenants"
                                  VerticalAlignment="Stretch"
                                  MenuItemClicked="SidebarControl_MenuItemClicked"
                                  LogoutClicked="SidebarControl_LogoutClicked" Loaded="SidebarControl_Loaded"/>

        <!-- Ná»˜I DUNG CHÃNH -->
        <Border Grid.Column="1"
                Background="#F8F9FA"
                CornerRadius="0,10,10,0">
            <Grid>
                <!-- Header vá»›i cÃ¡c nÃºt Ä‘iá»u khiá»ƒn -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header bar -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- TiÃªu Ä‘á» trang -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    Margin="30,20">
                            <TextBlock Text="ðŸ‘¥"
                                       FontSize="24"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Quáº£n lÃ½ khÃ¡ch thuÃª"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#333"/>
                        </StackPanel>

                        <!-- CÃ¡c nÃºt Ä‘iá»u khiá»ƒn cá»­a sá»• -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                            <Button Content="â€”"
                                    Style="{StaticResource WindowControlButton}"
                                    Click="MinimizeButton_Click"/>
                            <Button Content="â˜"
                                    Style="{StaticResource WindowControlButton}"
                                    Click="MaximizeButton_Click"/>
                            <Button Content="âœ•"
                                    Style="{StaticResource CloseButton}"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Ná»™i dung chÃ­nh -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="30,30,30,30">
                        <!-- Action Bar -->
                        <Border Style="{StaticResource ActionCardStyle}" Margin="0,0,0,24" Width="890">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="CÃ¡c chá»©c nÄƒng cÆ¡ báº£n quáº£n lÃ½" FontSize="14" Foreground="#6b7280" Margin="0,4,0,0"/>
                                        <TextBlock Text="Chá»©c nÄƒng " FontSize="18" FontWeight="SemiBold" Foreground="#374151"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <!-- Search Box -->
                                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource SearchTextBoxStyle}" 
                                                 Margin="0,0,12,0" Width="400" Height="41"/>

                                        <!-- Action Button (Only Add Tenant) -->
                                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                                Margin="0,0,12,0" Command="{Binding ShowAddTenantPanelCommand}" Width="151">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="+" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="ThÃªm khÃ¡ch thuÃª" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Danh sÃ¡ch khÃ¡ch thuÃª (hiá»ƒn thá»‹ khi cÃ³ khÃ¡ch thuÃª) -->
                        <ItemsControl ItemsSource="{Binding Tenants}" 
                                      Visibility="{Binding Tenants.Count, Converter={StaticResource EmptyToVisibilityConverter}, ConverterParameter='inverse'}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TenantCardStyle}" Width="320" Margin="0,0,24,24"
                                            MouseLeftButtonDown="TenantCard_MouseLeftButtonDown">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Card Header -->
                                            <Border Grid.Row="0" Background="#1a7bff" CornerRadius="12,12,0,0" Padding="24,20" Margin="0,4,0,0">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding HoTen}" FontSize="18" FontWeight="Bold" 
                                                                   Foreground="White"/>
                                                        <TextBlock Text="{Binding CCCD, StringFormat='CCCD: {0}'}" 
                                                                   FontSize="12" Foreground="#e0ebff" Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <Border Grid.Column="1" Background="#10B981" CornerRadius="12" Padding="8,4" Height="24">
                                                        <TextBlock Text="{Binding GioiTinh}" FontSize="11" FontWeight="SemiBold" 
                                                                   Foreground="White" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Card Content -->
                                            <StackPanel Grid.Row="1" Margin="24,20">
                                                <StackPanel Margin="0,0,0,16">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="ðŸ“±" FontSize="12" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding SoDienThoai}" 
                                                                   FontSize="13" Foreground="#6b7280"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                        <TextBlock Text="ðŸ“…" FontSize="12" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding NgaySinh, StringFormat='NgÃ y thuÃª: {0:dd/MM/yyyy}'}" 
                                                                   FontSize="13" Foreground="#6b7280"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Card Footer -->
                                            <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="0,0,12,12" Padding="24,16">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                                                            Margin="0,0,6,0" Command="{Binding DataContext.ShowEditTenantPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="âœï¸" FontSize="12" Margin="0,0,4,0"/>
                                                            <TextBlock Text="Edit" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Button>

                                                    <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" 
                                                            Margin="6,0,0,0" Command="{Binding DataContext.DeleteTenantCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="ðŸ—‘ï¸" FontSize="12" Margin="0,0,4,0"/>
                                                            <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State (chá»‰ hiá»ƒn thá»‹ khi khÃ´ng cÃ³ khÃ¡ch thuÃª) -->
                        <Border Background="White" CornerRadius="12" Padding="40" 
                                Visibility="{Binding Tenants.Count, Converter={StaticResource EmptyToVisibilityConverter}}" Height="358">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ‘¥" FontSize="48" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                                <TextBlock Text="KhÃ´ng tá»“n táº¡i khÃ¡ch thuÃª" FontSize="18" FontWeight="SemiBold" Foreground="#374151" HorizontalAlignment="Center"/>
                                <TextBlock Text="HÃ£y báº¯t Ä‘áº§u thÃªm khÃ¡ch thuÃª má»›i" FontSize="14" Foreground="#6b7280" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <Button Style="{StaticResource PrimaryButtonStyle}" 
                                        Margin="0,16,0,0" Command="{Binding ShowAddTenantPanelCommand}" Click="Button_Click">
                                    <TextBlock Text="ThÃªm khÃ¡ch thuÃª má»›i"/>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
