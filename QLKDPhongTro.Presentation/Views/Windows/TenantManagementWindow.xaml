<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.TenantManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Views.Windows"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Quản lý khách thuê - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Converter để ẩn/hiện empty state -->
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>

        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox sắp xếp -->
        <Style TargetType="{x:Type ComboBox}" x:Key="FilterComboBoxStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#586A84"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho các nút chức năng chính -->
        <Style TargetType="{x:Type Button}" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#10D096"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ô tìm kiếm -->
        <Style TargetType="{x:Type TextBox}" x:Key="SearchTextBoxStyle">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#d1d5db"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Regular"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="40,10,16,10"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <Grid>
                                <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" 
                                           Margin="12,0,0,0" Foreground="#6b7280"/>
                                <ScrollViewer x:Name="PART_ContentHost" Margin="40,0,16,0"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1a7bff"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#a5b4fc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các card khách thuê -->
        <Style TargetType="{x:Type Border}" x:Key="TenantCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#1a7bff" Opacity="0.2" ShadowDepth="0" BlurRadius="30"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin">
                        <Setter.Value>
                            <Point X="0.5" Y="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho action card -->
        <Style TargetType="{x:Type Border}" x:Key="ActionCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:SidebarControl Grid.Column="0" x:Name="SidebarControl" />

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl" Margin="0,0,0,10"/>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Header: Title -->
                    <TextBlock Text="Quản lý khách thuê" 
                               Foreground="#3B4758" FontSize="24" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Action Bar -->
                    <Border Background="#EEF0F4" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nút Thêm khách thuê -->
                            <Button Grid.Column="0" Content="Thêm khách thuê" Style="{StaticResource PrimaryButtonStyle}" 
                                    Command="{Binding ShowAddTenantPanelCommand}" Width="200"/>

                            <!-- Ô tìm kiếm và bộ lọc -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBox Width="250" Height="40" VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                <ComboBox Style="{StaticResource FilterComboBoxStyle}" VerticalContentAlignment="Center" Width="190" Margin="10,0,0,0">
                                    <ComboBoxItem IsSelected="True">Mới nhất</ComboBoxItem>
                                    <ComboBoxItem>Cũ nhất</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Danh sách khách thuê -->
                    <ItemsControl ItemsSource="{Binding Tenants}" 
                                  Visibility="{Binding Tenants.Count, Converter={StaticResource EmptyToVisibilityConverter}, ConverterParameter='inverse'}"
                                  x:Name="TenantsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TenantCardStyle}" Width="320" Margin="12,12"
                                        MouseLeftButtonDown="TenantCard_MouseLeftButtonDown">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Card Header -->
                                        <Border Grid.Row="0" Background="#1a7bff" CornerRadius="12,12,0,0" Padding="24,20" Margin="0,4,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding HoTen}" FontSize="18" FontWeight="Bold" 
                                                               Foreground="White"/>
                                                    <TextBlock Text="{Binding CCCD, StringFormat='CCCD: {0}'}" 
                                                               FontSize="12" Foreground="#e0ebff" Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Column="1" Background="#10B981" CornerRadius="12" Padding="8,4" Height="24">
                                                    <TextBlock Text="{Binding GioiTinh}" FontSize="11" FontWeight="SemiBold" 
                                                               Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Card Content -->
                                        <StackPanel Grid.Row="1" Margin="24,20">
                                            <StackPanel Margin="0,0,0,16">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="📱" FontSize="12" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding SoDienThoai}" 
                                                               FontSize="13" Foreground="#6b7280"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="📅" FontSize="12" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding NgaySinh, StringFormat='Ngày sinh: {0:dd/MM/yyyy}'}" 
                                                               FontSize="13" Foreground="#6b7280"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Card Footer -->
                                        <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="0,0,12,12" Padding="24,16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                                                        Margin="0,0,6,0" Command="{Binding DataContext.ShowEditTenantPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✏️" FontSize="12" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Edit" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" 
                                                        Margin="6,0,0,0" Command="{Binding DataContext.DeleteTenantCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="🗑️" FontSize="12" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border Background="White" CornerRadius="12" Padding="40" 
                            Visibility="{Binding Tenants.Count, Converter={StaticResource EmptyToVisibilityConverter}}" Height="358">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" FontSize="48" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                            <TextBlock Text="Không có khách thuê nào" FontSize="18" FontWeight="SemiBold" Foreground="#374151" HorizontalAlignment="Center"/>
                            <TextBlock Text="Hãy bắt đầu thêm khách thuê mới" FontSize="14" Foreground="#6b7280" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Margin="0,16,0,0" Command="{Binding ShowAddTenantPanelCommand}" Click="Button_Click">
                                <TextBlock Text="Thêm khách thuê mới"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Pagination -->
                    <Border Background="#EEF0F4" CornerRadius="8" Padding="15,10" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Hiển thị 1 đến 6 trong 111" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#3B4758"/>
                            <!-- TODO: Add Pagination controls here -->
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
