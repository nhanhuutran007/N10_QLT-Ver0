<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ManualDebtWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm công nợ thủ công"
        Height="360"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        FontFamily="Segoe UI">

    <Grid Background="#F9FAFB" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Thêm công nợ thủ công"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#111827"
                   Margin="4,0,0,12"/>

        <!-- Body -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="16"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Phòng / Hợp đồng -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Phòng / Hợp đồng" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <ComboBox ItemsSource="{Binding Contracts}"
                              DisplayMemberPath="TenPhong"
                              SelectedItem="{Binding SelectedContract, Mode=TwoWay}"
                              Height="32"/>
                </StackPanel>

                <!-- Tháng năm -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="Tháng / Năm (MM/yyyy)" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding ThangNam, Mode=TwoWay}"
                             Height="32"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Số điện tháng này -->
                <StackPanel Grid.Row="2" Margin="0,0,0,0">
                    <TextBlock Text="Chỉ số điện tháng này" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding SoDienThangNay, Mode=TwoWay, StringFormat={}{0}}"
                             Height="32"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Hủy"
                    Width="90"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"/>
            <Button Content="Lưu"
                    Width="110"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>


