<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.FinancialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Views.Windows"
        Title="Quản lý tài chính - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- === STYLES CHO TRANG QUẢN LÝ TÀI CHÍNH === -->

        <!-- Style cho nút hành động chính (Quét ảnh, Nhập tay) -->
        <Style TargetType="{x:Type Button}"
                x:Key="PrimaryActionStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox sắp xếp -->
        <Style TargetType="{x:Type ComboBox}"
                x:Key="FilterComboBoxStyle">
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="10,0"/>
            <Setter Property="BorderBrush"
                    Value="#586A84"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
        </Style>

        <!-- Style cho thẻ tài chính (card) -->
        <Style TargetType="{x:Type Border}"
                x:Key="FinanceCardStyle">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#A9A8B6"
                            Opacity="0.1"
                            ShadowDepth="4"
                            BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nhãn trạng thái "Tổng hợp" -->
        <Style TargetType="{x:Type Border}"
                x:Key="FinanceStatusBadgeStyle">
            <Setter Property="Background"
                    Value="#EEF0F4"/>
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="Height"
                    Value="18"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}"
                x:Key="FinanceStatusBadgeTextStyle">
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Style cho ProgressBar với màu sắc dựa trên trạng thái -->
        <Style TargetType="{x:Type ProgressBar}"
                x:Key="FinanceProgressBar">
            <Setter Property="Height"
                    Value="4"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Background"
                    Value="#ECECEC"/>
            <!-- Sử dụng DataTriggers để thay đổi màu dựa trên một thuộc tính trong ViewModel, ví dụ: 'TrangThai' -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}"
                        Value="BinhThuong">
                    <Setter Property="Foreground"
                            Value="#7D8FA9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}"
                        Value="HoanThanh">
                    <Setter Property="Foreground"
                            Value="#319DFF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}"
                        Value="CanhBao">
                    <Setter Property="Foreground"
                            Value="#FF316A"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"
                    MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:SidebarControl Grid.Column="0"
                x:Name="SidebarControl"/>

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Grid.Column="1"
                Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0"
                    x:Name="TopbarControl"
                    Margin="0,0,0,10"/>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Header: Title -->
                    <TextBlock Text="Quản lý tài chính"
                               Foreground="#3B4758"
                            FontSize="24"
                            FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- === ACTION BAR === -->
                    <Border Background="#EEF0F4"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Các nút hành động -->
                            <StackPanel Grid.Column="0"
                                    Orientation="Horizontal">
                                <Button Content="Quét Ảnh"
                                        Style="{StaticResource PrimaryActionStyle}"
                                        Command="{Binding ScanImageCommand}"
                                        Click="ScanImageButton_Click"
                                        Width="120"/>
                                <Button Content="Nhập tay"
                                        Style="{StaticResource PrimaryActionStyle}"
                                        Command="{Binding ManualInputCommand}"
                                        Click="ManualInputButton_Click"
                                        Width="120"
                                        Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Ô tìm kiếm và bộ lọc -->
                            <StackPanel Grid.Column="2"
                                    Orientation="Horizontal">
                                <TextBox Width="250"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Tag="Tìm kiếm phòng..."/>
                                <ComboBox Style="{StaticResource FilterComboBoxStyle}"
                                        Width="190"
                                        Margin="10,0,0,0">
                                    <ComboBoxItem IsSelected="True">Mới nhất</ComboBoxItem>
                                    <ComboBoxItem>Cũ nhất</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- === END ACTION BAR === -->

                    <!-- === DANH SÁCH BẢN GHI TÀI CHÍNH === -->
                    <ItemsControl ItemsSource="{Binding FinancialRecords}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- WrapPanel giúp các card tự động sắp xếp thành lưới -->
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Mỗi card là một Border -->
                                <Border Style="{StaticResource FinanceCardStyle}"
                                        Width="540"
                                        Margin="10">
                                    <StackPanel>
                                        <!-- Card Header -->
                                        <Border Background="#FAFAFB"
                                                Padding="24"
                                                CornerRadius="12,12,0,0">
                                            <Grid>
                                                <!-- Icon và Tên Phòng -->
                                                <StackPanel Orientation="Horizontal"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left">
                                                    <Border Width="30"
                                                            Height="30"
                                                            CornerRadius="2"
                                                            Background="#EEF0F4">
                                                        <Image Source="{Binding IconSource}"
                                                                Stretch="Uniform"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding TenPhong}"
                                                            FontWeight="Medium"
                                                            FontSize="18"
                                                               Foreground="#3B4758"
                                                            Margin="15,0,0,0"
                                                            VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <!-- Nhãn Trạng thái -->
                                                <Border Style="{StaticResource FinanceStatusBadgeStyle}"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Tổng hợp"
                                                            Style="{StaticResource FinanceStatusBadgeTextStyle}"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Card Content -->
                                        <StackPanel Margin="24,15">
                                            <TextBlock Text="Chi tiết phòng"
                                                    Foreground="#586A84"
                                                    FontSize="14"
                                                    Margin="0,0,0,10"/>

                                            <!-- Ngày thêm -->
                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                        Text="Ngày thêm:"
                                                        Foreground="#586A84"
                                                        FontSize="14"/>
                                                <TextBlock Grid.Column="1"
                                                        Text="{Binding NgayThem, StringFormat='{}{0:dd MMM, yyyy}'}"
                                                        FontWeight="Bold"
                                                           Foreground="#3B4758"
                                                        FontSize="14"
                                                        Margin="10,0,0,0"/>
                                            </Grid>

                                            <!-- Số giường/phòng -->
                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                        Text="Số giường:"
                                                        Foreground="#586A84"
                                                        FontSize="14"/>
                                                <TextBlock Grid.Column="1"
                                                        Text="{Binding SoLuong}"
                                                        FontWeight="Bold"
                                                           Foreground="#3B4758"
                                                        FontSize="14"
                                                        Margin="10,0,0,0"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Card Footer: Progress Bar -->
                                        <ProgressBar Style="{StaticResource FinanceProgressBar}"
                                                Value="{Binding ProgressValue}"
                                                Margin="24,0,24,24"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- === END DANH SÁCH === -->

                    <!-- Pagination -->
                    <Border Background="#EEF0F4"
                            CornerRadius="8"
                            Padding="15,10"
                            Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Hiển thị 1 đến 9 trong 111"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Foreground="#3B4758"/>
                            <!-- TODO: Thêm các control phân trang đầy đủ chức năng tại đây -->
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>