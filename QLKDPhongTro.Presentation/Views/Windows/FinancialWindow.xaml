<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.FinancialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Views.Windows"
        Title="Quản lý tài chính - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- === STYLES CHO TRANG QUẢN LÝ TÀI CHÍNH === -->

        <!-- Style cho nút hành động chính (Ghi nhận/Quét ảnh) -->
        <Style TargetType="{x:Type Button}"
               x:Key="PrimaryActionStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút Segment phụ (Navigation) -->
        <Style TargetType="{x:Type Button}"
               x:Key="SecondarySegmentStyle">
            <Setter Property="Background" Value="#EEF0F4"/>
            <Setter Property="Foreground" Value="#7D8FA9"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E4E9"/>
                </Trigger>
                <!-- Trigger IsPressed này chỉ dùng cho hiệu ứng click tạm thời -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E4E9"/>
                    <Setter Property="Foreground" Value="#3B4758"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style DÀNH RIÊNG cho nút Segment đang ACTIVE (Đã chọn) -->
        <Style TargetType="{x:Type Button}" x:Key="ActiveSecondarySegmentStyle"
               BasedOn="{StaticResource SecondarySegmentStyle}">
            <Setter Property="Background" Value="#3B4758"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <!-- Đảm bảo trạng thái hover trên nút active vẫn hoạt động -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#586A84"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox với bo góc giống button (giữ nguyên) -->
        <Style TargetType="{x:Type ComboBox}" x:Key="ComboBoxStyle">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#586A84"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                ClipToBounds="True">
                            <Grid>
                                <ToggleButton Name="ToggleButton" 
                                        Focusable="false" 
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                        ClickMode="Press"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent"
                                                    BorderThickness="0">
                                                <Path Name="Arrow" 
                                                      Fill="#586A84" 
                                                      HorizontalAlignment="Right" 
                                                      Margin="0,0,10,0" 
                                                      VerticalAlignment="Center" 
                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter Name="ContentSite" 
                                        IsHitTestVisible="False" 
                                        Content="{TemplateBinding SelectionBoxItem}" 
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                        Margin="10,0,30,0" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox" 
                                        IsReadOnly="{TemplateBinding IsReadOnly}" 
                                        Background="{TemplateBinding Background}" 
                                        BorderThickness="0" 
                                        Margin="10,0,30,0" 
                                        Padding="0" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Left" 
                                        Focusable="True" 
                                        Visibility="Hidden"/>
                                <Popup Name="Popup" 
                                        Placement="Bottom" 
                                        IsOpen="{TemplateBinding IsDropDownOpen}" 
                                        AllowsTransparency="True" 
                                        Focusable="False" 
                                        PopupAnimation="Slide">
                                    <Grid Name="DropDown" 
                                            SnapsToDevicePixels="True" 
                                            MinWidth="{TemplateBinding ActualWidth}" 
                                            MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" 
                                                Background="White" 
                                                BorderThickness="1" 
                                                BorderBrush="#E8E8E8" 
                                                CornerRadius="6"
                                                Padding="4">
                                            <ScrollViewer Margin="0,2" 
                                                            SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" 
                                                            KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho ComboBoxItem với bo góc và màu sắc đẹp (giữ nguyên) -->
        <Style TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#586A84"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F4F8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F4F8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho thẻ tài chính (card) (giữ nguyên) -->
        <Style TargetType="{x:Type Border}"
               x:Key="FinanceCardStyle">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="12"/>
            <Setter Property="Margin"
                    Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#A9A8B6"
                                      Opacity="0.1"
                                      ShadowDepth="4"
                                      BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nhãn Loại Giao Dịch (Badge) (giữ nguyên) -->
        <Style TargetType="{x:Type Border}"
               x:Key="FinanceStatusBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="Height"
                    Value="28"/>
            <Setter Property="Background"
                    Value="#EEF0F4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Tiền Thuê">
                    <Setter Property="Background" Value="#E6F7FF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Chi Phí">
                    <Setter Property="Background" Value="#FFF7E6"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Chỉ Số Điện/Nước">
                    <Setter Property="Background" Value="#F0F0FF"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type TextBlock}"
               x:Key="FinanceStatusBadgeTextStyle">
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="FontSize"
                    Value="13"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Tiền Thuê">
                    <Setter Property="Foreground" Value="#1890FF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Chi Phí">
                    <Setter Property="Foreground" Value="#FA8C16"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LoaiGiaoDich}" Value="Chỉ Số Điện/Nước">
                    <Setter Property="Foreground" Value="#5959C5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ProgressBar với màu sắc dựa trên trạng thái (giữ nguyên) -->
        <Style TargetType="{x:Type ProgressBar}"
               x:Key="FinanceProgressBar">
            <Setter Property="Height"
                    Value="4"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Background"
                    Value="#ECECEC"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}"
                             Value="BinhThuong">
                    <Setter Property="Foreground"
                            Value="#7D8FA9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}"
                             Value="HoanThanh">
                    <Setter Property="Foreground"
                            Value="#319DFF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}"
                             Value="CanhBao">
                    <Setter Property="Foreground"
                            Value="#FF316A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}"
                             Value="QuaHan">
                    <Setter Property="Foreground"
                            Value="#FF0000"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <ColumnDefinition Width="269" MinWidth="250"/>
            <!-- Main Content -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL (Column 0) === -->
        <components:SidebarControl Grid.Column="0" x:Name="SidebarControl"/>

        <!-- === KHU VỰC NỘI DUNG CHÍNH (Column 1) === -->
        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar, Title, Navigation & Actions (Grid Row 0) -->
            <StackPanel Grid.Row="0">
                <!-- Top Bar Control -->
                <components:TopbarControl x:Name="TopbarControl" Height="50"/>

                <!-- Header: Title -->
                <TextBlock Text="Quản lý tài chính"
                           Foreground="#3B4758"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,15,0,10"/>

                <!-- THANH HÀNH ĐỘNG, LỌC VÀ CHUYỂN TRANG -->
                <Border Background="#FFFFFF"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Row 1: Segmented Control / View Switcher (Records, Debt, Reports) -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Xem theo:" Foreground="#586A84" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                            <!-- Đã dùng ActiveSecondarySegmentStyle để chỉ trạng thái đang chọn -->
                            <Button Content="Tất cả bản ghi" Style="{StaticResource ActiveSecondarySegmentStyle}"/>
                            <Button Content="Quản lý Công nợ" Style="{StaticResource SecondarySegmentStyle}" Margin="10,0,0,0"/>
                            <Button Content="Báo cáo Thu chi" Style="{StaticResource SecondarySegmentStyle}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Row 2: Search, Sort, and Primary Actions (Ghi nhận) -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="190"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Box (Col 0) -->
                            <Grid Grid.Column="0" Height="40">
                                <Border Background="#F5F5F5" CornerRadius="6" BorderThickness="1" BorderBrush="#E8E8E8"/>
                                <TextBlock Text="Tìm kiếm tài chính..." Foreground="#7D8FA9" FontSize="14" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=FinancialSearchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox x:Name="FinancialSearchTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         VerticalContentAlignment="Center"
                                         Margin="10,0,10,0"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <!-- Sort ComboBox (Col 1) -->
                            <ComboBox Grid.Column="1"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="10,0,0,0"
                                      SelectedIndex="0">
                                <ComboBoxItem>Mới nhất</ComboBoxItem>
                                <ComboBoxItem>Cũ nhất</ComboBoxItem>
                                <ComboBoxItem>Theo Số tiền (Cao - Thấp)</ComboBoxItem>
                            </ComboBox>

                            <!-- Primary Actions (Col 3) - Phân chia rõ ràng theo nghiệp vụ -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- Action 1: Ghi nhận Tiền thuê hàng tháng (Rent) -->
                                <!-- ĐÃ THÊM CLICK EVENT HANDLER TẠI ĐÂY -->
                                <Button Content="Ghi nhận Tiền thuê"
                                        Command="{Binding ManualInputRentCommand}"
                                        Click="ManualInputButton_Click">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource PrimaryActionStyle}">
                                            <Setter Property="Background" Value="#319DFF"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1A73E8"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <!-- Action 2: Thu nhập Chỉ số (Expenses/Index via Scan) -->
                                <Button Content="Thu nhập Chỉ số (Quét Ảnh)"
                                        Style="{StaticResource PrimaryActionStyle}"
                                        Command="{Binding ScanImageCommand}"
                                        Click="ScanImageButton_Click"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Main Content Area (Records List / Reports) - Grid Row 1 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- === DANH SÁCH BẢN GHI TÀI CHÍNH (List View) === -->
                    <ItemsControl ItemsSource="{Binding FinancialRecords}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- WrapPanel giúp các card tự động sắp xếp thành lưới -->
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Mỗi card là một Border -->
                                <Border Style="{StaticResource FinanceCardStyle}"
                                        Width="540"
                                        Margin="10">
                                    <StackPanel>
                                        <!-- Card Header: Tên Phòng, Kỳ hạn -->
                                        <Border Background="#FAFAFB"
                                                Padding="20,15"
                                                CornerRadius="12,12,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Tên Phòng, Kỳ hạn/Ngày thêm -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                    <TextBlock Text="{Binding TenPhong}"
                                                               FontWeight="Bold"
                                                               FontSize="18"
                                                               Foreground="#3B4758"/>
                                                    <!-- Giả định KyHan là DateTime (Ví dụ: 01-11-2024) -->
                                                    <TextBlock Text="{Binding KyHan, StringFormat='Kỳ hạn: {0:MMM yyyy}'}"
                                                               FontWeight="Normal"
                                                               FontSize="13"
                                                               Foreground="#7D8FA9"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <!-- Nhãn Loại Giao Dịch (Tiền Thuê/Chi Phí/Chỉ Số) -->
                                                <Border Grid.Column="1"
                                                        Style="{StaticResource FinanceStatusBadgeStyle}"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding LoaiGiaoDich}"
                                                               Style="{StaticResource FinanceStatusBadgeTextStyle}"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Card Content: Chi tiết tài chính -->
                                        <StackPanel Margin="24">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Tổng Tiền -->
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Tổng Tiền"
                                                               Foreground="#7D8FA9"
                                                               FontSize="13"/>
                                                    <!-- Giả định TongTien là số (Ví dụ: 3.500.000 VNĐ) -->
                                                    <TextBlock Text="{Binding TongTien, StringFormat='{}{0:N0} VNĐ'}"
                                                               FontWeight="Bold"
                                                               FontSize="18"
                                                               Foreground="#3B4758"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <!-- Chỉ số mới / Số giường (Tùy thuộc LoaiGiaoDich) -->
                                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                    <TextBlock Text="Chi tiết"
                                                               Foreground="#7D8FA9"
                                                               FontSize="13"/>
                                                    <TextBlock Text="{Binding ChiTietGiaoDich}"
                                                               FontWeight="Bold"
                                                               FontSize="18"
                                                               Foreground="#3B4758"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <!-- Trạng thái thanh toán/công nợ -->
                                                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                                                    <TextBlock Text="Trạng thái"
                                                               Foreground="#7D8FA9"
                                                               FontSize="13"/>
                                                    <!-- Giả định TrangThaiColor và TrangThaiText được tính trong ViewModel -->
                                                    <TextBlock Text="{Binding TrangThaiText}"
                                                               FontWeight="Bold"
                                                               FontSize="18"
                                                               Foreground="{Binding TrangThaiColor}"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Card Footer: Progress Bar + Detail Link -->
                                            <TextBlock Text="Tiến độ thanh toán/thu thập"
                                                       Foreground="#586A84"
                                                       FontSize="12"
                                                       Margin="0,20,0,5"/>

                                            <ProgressBar Style="{StaticResource FinanceProgressBar}"
                                                         Value="{Binding ProgressValue}"
                                                         Margin="0,0,0,10"
                                                         Minimum="0"
                                                         Maximum="100"/>

                                            <TextBlock Text="Xem chi tiết >"
                                                       Foreground="#319DFF"
                                                       FontSize="13"
                                                       HorizontalAlignment="Right"
                                                       Cursor="Hand"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- === END DANH SÁCH === -->

                    <!-- Pagination -->
                    <Border Background="#EEF0F4"
                            CornerRadius="8"
                            Padding="15,10"
                            Margin="10,10,10,20"
                            HorizontalAlignment="Stretch">
                        <Grid>
                            <TextBlock Text="Hiển thị 1 đến 9 trong 111"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Foreground="#3B4758"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="&lt; Trước" Style="{StaticResource SecondarySegmentStyle}" Margin="0,0,5,0" Height="30" Padding="10,0"/>
                                <!-- Đã dùng ActiveSecondarySegmentStyle để chỉ trạng thái đang chọn -->
                                <Button Content="1" Style="{StaticResource ActiveSecondarySegmentStyle}" Height="30" Width="30" Padding="0"/>
                                <Button Content="2" Style="{StaticResource SecondarySegmentStyle}" Margin="5,0,0,0" Height="30" Width="30" Padding="0"/>
                                <Button Content="Sau &gt;" Style="{StaticResource SecondarySegmentStyle}" Margin="5,0,0,0" Height="30" Padding="10,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>