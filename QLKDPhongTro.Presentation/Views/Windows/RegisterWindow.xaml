<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Đăng Ký - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F8F9FA"
        WindowStyle="None"
        AllowsTransparency="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <!-- Thêm sự kiện này để di chuyển cửa sổ -->

    <Window.Resources>
        <Style TargetType="Button" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <!-- Font chứa các icon hệ thống -->
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Nút Đăng ký chính -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!-- Điều chỉnh CornerRadius để nút trông mềm mại hơn -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}"
                                Height="50">
                            <!-- Giữ nguyên hoặc tăng nhẹ nếu muốn nút cao hơn -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"
                              MinWidth="400"/>
            <ColumnDefinition Width="Auto"
                              MinWidth="591"/>
        </Grid.ColumnDefinitions>

        <!-- CÁC NÚT ĐIỀU KHIỂN CỬA SỔ -->
        <Canvas Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="1000">
            <StackPanel Orientation="Horizontal" Canvas.Right="16" Canvas.Top="16">
                <!-- Minimize Button -->
                <Button Width="40" Height="32" Click="MinimizeButton_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M6,16 L34,16" Stroke="#586A84" StrokeThickness="2"/>
                </Button>
                <!-- Maximize/Restore Button -->
                <Button x:Name="MaximizeButton" Width="40" Height="32" Click="MaximizeButton_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M8,8 L32,8 L32,24 L8,24 Z" Stroke="#586A84" StrokeThickness="2"/>
                </Button>
                <!-- Close Button -->
                <Button Width="40" Height="32" Click="CloseButton_Click" Background="Transparent" BorderThickness="0">
                    <Path Data="M10,10 L30,22 M30,10 L10,22" Stroke="#E74C3C" StrokeThickness="2"/>
                </Button>
            </StackPanel>
        </Canvas>

        <!-- PHẦN BÊN TRÁI (MÀU XANH BIỂN) -->
        <Border x:Name="LeftBorder" Grid.Column="0" CornerRadius="10,0,0,10" MinWidth="400" MinHeight="350">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2764FF" Offset="0"/>
                    <GradientStop Color="#0B459B" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
                <TextBlock Text="Quản Lý Phòng Trọ" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Tạo tài khoản mới để bắt đầu quản lý phòng trọ" FontSize="18" Foreground="White" Margin="0,10,0,0" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- PHẦN BÊN PHẢI (FORM ĐĂNG KÝ) -->
        <Border Grid.Column="1" Background="White" CornerRadius="12" MinWidth="400" MaxWidth="500" HorizontalAlignment="Center" VerticalAlignment="Center" Height="600" Width="414">
            <Border.Effect>
                <DropShadowEffect Color="#319DFF" BlurRadius="16" ShadowDepth="0" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <!-- FORM ĐĂNG KÝ -->
                <StackPanel VerticalAlignment="Top" Margin="32,30,32,30" MinWidth="350">
                    <!-- Tiêu đề -->
                    <TextBlock Text="Đăng Ký" FontSize="28" FontWeight="Bold" Foreground="#3B4758" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                    <!-- Tiêu đề phụ -->
                    <TextBlock Text="Đăng ký tài khoản" FontSize="16" FontWeight="SemiBold" Foreground="#586A84" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                    <!-- Trường Email -->
                    <TextBlock Text="Email" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                    <Border CornerRadius="6" Background="#F2F6FA" Height="38" Margin="0,0,0,10">
                        <TextBox x:Name="EmailTextBox" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="12,8" 
                                 FontSize="13"
                                 Foreground="#3B4758"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Trường Tên đăng nhập -->
                    <TextBlock Text="Tên đăng nhập" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                    <Border CornerRadius="6" Background="#F2F6FA" Height="38" Margin="0,0,0,10">
                        <TextBox x:Name="UsernameTextBox" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Padding="12,8" 
                                 FontSize="13"
                                 Foreground="#3B4758"
                                 VerticalContentAlignment="Center"/>
                    </Border>

                    <!-- Trường Mật khẩu -->
                    <TextBlock Text="Mật khẩu" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,10">
                        <Border CornerRadius="6" Background="#F2F6FA" Height="38">
                            <PasswordBox x:Name="PasswordBox" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="12,8" 
                                         FontSize="13"
                                         Foreground="#3B4758"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                        </Border>
                    </Grid>

                    <!-- Trường Xác nhận mật khẩu -->
                    <TextBlock Text="Xác nhận mật khẩu" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                    <Grid Margin="0,0,0,10">
                        <Border CornerRadius="6" Background="#F2F6FA" Height="38">
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Background="Transparent" 
                                         BorderThickness="0" 
                                         Padding="12,8" 
                                         FontSize="13"
                                         Foreground="#3B4758"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                        </Border>
                    </Grid>

                    <!-- Checkbox hiện/ẩn mật khẩu -->
                    <CheckBox x:Name="ShowPasswordCheckBox" 
                              Content="Hiện thị mật khẩu" 
                              FontSize="10" 
                              Foreground="#666" 
                              Margin="0,5,0,10" 
                              Checked="ShowPasswordCheckBox_Checked"
                              Unchecked="ShowPasswordCheckBox_Unchecked"/>

                    <!-- Điều kiện đặt mật khẩu -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Điều kiện mật khẩu:" FontSize="10" Foreground="#666" Margin="0,0,0,2"/>
                        <TextBlock x:Name="PasswordLengthRequirement" 
                                   Text="• Mật khẩu tối thiểu 6 ký tự" 
                                   FontSize="9" 
                                   Foreground="Red" 
                                   Margin="0,0,0,1"/>
                        <TextBlock x:Name="PasswordUppercaseRequirement" 
                                   Text="• Chứa ít nhất 1 ký tự viết hoa" 
                                   FontSize="9" 
                                   Foreground="Red" 
                                   Margin="0,0,0,1"/>
                        <TextBlock x:Name="PasswordDigitRequirement" 
                                   Text="• Hoặc chứa ít nhất 1 kí tự số" 
                                   FontSize="9" 
                                   Foreground="Red" 
                                   Margin="0,0,0,1"/>
                    </StackPanel>

                    <!-- Nút Đăng ký -->
                    <Border CornerRadius="6" Background="#319DFF" Height="50" Margin="0,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2B8CE8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button Content="Đăng Ký" 
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Background="Transparent"
                                Cursor="Hand"
                                Click="RegisterButton_Click"/>
                    </Border>

                    <!-- Link quay lại đăng nhập -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Text="Đã có tài khoản? " FontSize="13" Foreground="#586A84"/>
                        <TextBlock Text=" Đăng nhập" FontSize="13" Foreground="#319DFF" Cursor="Hand" MouseLeftButtonDown="BackToLogin_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>