                    <Border Background="White" CornerRadius="8" BorderThickness="1" Width="280" Height="40" Margin="0,0,12,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=SearchBox}" Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource SecondaryColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <TextBlock Text="ðŸ” TÃ¬m kiáº¿m thanh toÃ¡n..." Foreground="{StaticResource TextTertiary}" VerticalAlignment="Center" Margin="12,0,0,0"
                                       Visibility="{Binding Text.IsEmpty, ElementName=SearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="12,0" FontSize="14"/>
                        </Grid>
                    </Border>

                    <Button Command="{Binding ShowAddPaymentCommand}" 
                            Style="{StaticResource ModernPrimaryButton}"
                            Height="40" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="ThÃªm thanh toÃ¡n" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Background="White" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource BorderColor}" Effect="{StaticResource CardShadow}" Padding="0" ClipToBounds="True">
                <DataGrid ItemsSource="{Binding Payments}" SelectedItem="{Binding SelectedPayment}"
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="{StaticResource BorderLightColor}" 
                          HeadersVisibility="Column" BorderThickness="0" Background="White"
                          RowHeight="64" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="MÃƒ THANH TOÃN" Binding="{Binding Id}" Width="1.5*" MinWidth="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Id}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="PHÃ’NG" Binding="{Binding RoomName}" Width="*" MinWidth="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="NGÃ€Y THANH TOÃN" Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" Width="Auto" MinWidth="160">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tá»”NG TIá»€N" Binding="{Binding TotalAmount, StringFormat='{}{0:N0} VNÄ'}" Width="1.2*" MinWidth="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,0"/>
                                    <Setter Property="Foreground" Value="#059669"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="TRáº NG THÃI" Width="Auto" MinWidth="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Margin="16,0,20,0">
                                        <Border Style="{StaticResource StatusBadgeStyle}"
                                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                            <TextBlock Text="{Binding Status}" 
                                                       Style="{StaticResource StatusBadgeTextStyle}"/>
                                        </Border>

                                        <ComboBox SelectedItem="{Binding EditableStatus, UpdateSourceTrigger=PropertyChanged}"
                                                  ItemsSource="{Binding DataContext.EditStatusChoices, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  Style="{StaticResource FormComboBoxStyle}"
                                                  Width="140" Height="32"
                                                  Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="THAO TÃC" Width="Auto" MinWidth="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,16,0">
                                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                            <Button Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="Xem chi tiáº¿t">
                                                <TextBlock Text="ðŸ‘ï¸" FontSize="16"/>
                                            </Button>

                                            <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="Chá»‰nh sá»­a"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="âœï¸" FontSize="16"/>
                                            </Button>

                                            <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="XÃ³a"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="ðŸ—‘ï¸" FontSize="16" Foreground="{StaticResource ErrorColor}"/>
                                            </Button>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Button Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="LÆ°u"
                                                    Background="#D1FAE5">
                                                <TextBlock Text="âœ“" FontSize="16" Foreground="#059669" FontWeight="Bold"/>
                                            </Button>

                                            <Button Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}" 
                                                    Style="{StaticResource IconButtonStyle}" 
                                                    ToolTip="Há»§y bá»"
                                                    Margin="8,0,0,0"
                                                    Background="#FEE2E2">
                                                <TextBlock Text="âœ•" FontSize="14" Foreground="#EF4444" FontWeight="Bold"/>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Grid Grid.Row="3" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding PaginationText}" VerticalAlignment="Center" Foreground="{StaticResource TextSecondary}" Margin="0,0,16,0"/>
                    <Button Command="{Binding PrevPageCommand}" Content="â—€" Width="32" Height="32" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Border Background="{StaticResource SecondaryColor}" CornerRadius="4" Width="32" Height="32" Margin="8,0">
                        <TextBlock Text="{Binding PageIndex}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button Command="{Binding NextPageCommand}" Content="â–¶" Width="32" Height="32" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>