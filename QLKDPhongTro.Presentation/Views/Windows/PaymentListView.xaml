<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.PaymentListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Danh s√°ch thanh to√°n - Qu·∫£n L√Ω Ph√≤ng Tr·ªç"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- === CONVERTERS === -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- === STYLES CHUNG === -->
        <Style TargetType="{x:Type Button}"
                x:Key="PrimaryButtonStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}"
                x:Key="SecondaryButtonStyle">
            <Setter Property="Background"
                    Value="#FFFFFF"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#F7F7F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button"
                x:Key="IconButton"
                BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Width"
                    Value="30"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
        </Style>

        <!-- === STYLE CHO NH√ÉN TR·∫†NG TH√ÅI (STATUS BADGE) === -->
        <Style TargetType="Border"
                x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="6,3"/>
            <Setter Property="MaxWidth"
                    Value="80"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Style.Triggers>
                <!-- Pending -->
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Background"
                            Value="#FFF2DA"/>
                </DataTrigger>
                <!-- Paid -->
                <DataTrigger Binding="{Binding Status}"
                        Value="paid">
                    <Setter Property="Background"
                            Value="#CAFBEC"/>
                </DataTrigger>
                <!-- Unpaid -->
                <DataTrigger Binding="{Binding Status}"
                        Value="unpaid">
                    <Setter Property="Background"
                            Value="#EEF0F4"/>
                </DataTrigger>
                <!-- Failed -->
                <DataTrigger Binding="{Binding Status}"
                        Value="failed">
                    <Setter Property="Background"
                            Value="#FFE5EC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="StatusBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Foreground"
                            Value="#FFAA04"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="paid">
                    <Setter Property="Foreground"
                            Value="#0DA678"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="unpaid">
                    <Setter Property="Foreground"
                            Value="#586A84"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="failed">
                    <Setter Property="Foreground"
                            Value="#FF316A"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"
                    MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SidebarControl Grid.Column="0"/>

        <Grid Grid.Column="1"
                Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <components:TopbarControl Grid.Row="0"
                    Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Danh s√°ch thanh to√°n"
                            Foreground="#3B4758"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,0,0,20"/>

                    <!-- THANH H√ÄNH ƒê·ªòNG TR√äN C√ôNG -->
                    <Border Background="#FFFFFF"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Button Content="Th√™m thanh to√°n"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Width="180"/>
                            <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                <TextBox Width="250"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        Tag="T√¨m ki·∫øm thanh to√°n..."/>
                                <ComboBox Width="190"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        Margin="10,0,0,0">
                                    <ComboBoxItem IsSelected="True">M·ªõi nh·∫•t</ComboBoxItem>
                                    <ComboBoxItem>C≈© nh·∫•t</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- B·∫¢NG D·ªÆ LI·ªÜU CH√çNH -->
                    <Border Background="White"
                            CornerRadius="12">
                        <StackPanel>
                            <!-- THANH H√ÄNH ƒê·ªòNG PH·ª§ -->
                            <Grid Margin="20">
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Width="180">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Xu·∫•t danh s√°ch"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Text="‚¨ÜÔ∏è"
                                                Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <ComboBox Width="180"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="200,0,0,0">
                                    <ComboBoxItem IsSelected="True">Hi·ªÉn th·ªã 5 h√†ng</ComboBoxItem>
                                    <ComboBoxItem>Hi·ªÉn th·ªã 10 h√†ng</ComboBoxItem>
                                    <ComboBoxItem>Hi·ªÉn th·ªã 20 h√†ng</ComboBoxItem>
                                </ComboBox>
                            </Grid>

                            <!-- B·∫¢NG D·ªÆ LI·ªÜU -->
                            <DataGrid ItemsSource="{Binding Payments}"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    HeadersVisibility="Column"
                                    GridLinesVisibility="Horizontal"
                                    HorizontalGridLinesBrush="#EEEEEE"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    RowBackground="White"
                                    AlternatingRowBackground="#FAFAFA"
                                    SelectionMode="Single"
                                    SelectionUnit="FullRow"
                                    EnableRowVirtualization="False"
                                    CanUserResizeRows="False"
                                    CanUserReorderColumns="False"
                                    CanUserSortColumns="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="#EEEEEE"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="FontWeight"
                                                Value="Medium"/>
                                        <Setter Property="Foreground"
                                                Value="#7D8FA9"/>
                                    </Style>
                                    <!-- Style cho DataGridRow -->
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="MinHeight" Value="50"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <!-- Hover effect cho to√†n b·ªô row -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F7FF"/>
                                            </Trigger>
                                            <!-- Selected row -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E0F2FE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    
                                    <!-- Style cho DataGridCell -->
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="10,12"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#3B4758"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        <Style.Triggers>
                                            <!-- Khi row ƒë∆∞·ª£c hover, cell c≈©ng c√≥ m√†u ch·ªØ ƒë·∫≠m h∆°n -->
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#1E40AF"/>
                                            </MultiTrigger>
                                            <!-- Selected row effect -->
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#0369A1"/>
                                            </MultiTrigger>
                                            <!-- Focus effect -->
                                            <Trigger Property="IsKeyboardFocused" Value="True">
                                                <Setter Property="Background" Value="#DBEAFE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- C·ªôt CheckBox -->
                                    <DataGridTemplateColumn MinWidth="50">
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt M√£ thanh to√°n -->
                                    <DataGridTemplateColumn Header="M√£ thanh to√°n" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Id}"
                                                          FontWeight="Bold"
                                                          Foreground="#586A84"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt Ng√†y t·∫°o -->
                                    <DataGridTemplateColumn Header="Ng√†y t·∫°o" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy'}" 
                                                              Foreground="#586A84"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <DatePicker SelectedDate="{Binding Date}" 
                                                               Background="White"
                                                               BorderBrush="#DDDDDD"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt T·ªïng ti·ªÅn -->
                                    <DataGridTemplateColumn Header="T·ªïng ti·ªÅn" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} VNƒê'}" 
                                                              Foreground="#586A84"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding TotalAmount}" 
                                                            Background="White"
                                                            BorderBrush="#DDDDDD"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt Tr·∫°ng th√°i (v·ªõi Badge) -->
                                    <DataGridTemplateColumn Header="Tr·∫°ng th√°i" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Border Style="{StaticResource StatusBadgeStyle}"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                                        <TextBlock Text="{Binding Status}"
                                                                Style="{StaticResource StatusBadgeTextStyle}"/>
                                                    </Border>
                                                    <ComboBox SelectedItem="{Binding Status}" 
                                                             Background="White"
                                                             BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ComboBoxItem Content="paid"/>
                                                        <ComboBoxItem Content="pending"/>
                                                        <ComboBoxItem Content="unpaid"/>
                                                        <ComboBoxItem Content="failed"/>
                                                    </ComboBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt Ph∆∞∆°ng th·ª©c thanh to√°n -->
                                    <DataGridTemplateColumn Header="Ph∆∞∆°ng th·ª©c thanh to√°n" Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding PaymentMethod}" 
                                                              Foreground="#586A84"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <ComboBox SelectedItem="{Binding PaymentMethod}" 
                                                             Background="White"
                                                             BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ComboBoxItem Content="Chuy·ªÉn kho·∫£n"/>
                                                        <ComboBoxItem Content="Ti·ªÅn m·∫∑t"/>
                                                        <ComboBoxItem Content="Th·∫ª t√≠n d·ª•ng"/>
                                                    </ComboBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- C·ªôt Options -->
                                    <DataGridTemplateColumn Header="Options" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <!-- Normal mode buttons -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                                        <Button Content="üëÅÔ∏è"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Xem"
                                                                Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="‚úèÔ∏è"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="S·ª≠a"
                                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="üóëÔ∏è"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="X√≥a"
                                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Edit mode buttons -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Button Content="üíæ"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="L∆∞u"
                                                                Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="‚ùå"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="H·ªßy"
                                                                Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- PH√ÇN TRANG -->
                            <Border BorderBrush="#EEEEEE"
                                    BorderThickness="0,1,0,0"
                                    Padding="20">
                                <Grid>
                                    <TextBlock Text="Hi·ªÉn th·ªã 1 ƒë·∫øn 5 trong 178"
                                            Foreground="#3B4758"
                                            VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                        <!-- TODO: Logic ph√¢n trang -->
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>