<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.PaymentListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Danh sách thanh toán - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- === CONVERTERS === -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- === STYLES CHUNG === -->
        <Style TargetType="{x:Type Button}"
                x:Key="PrimaryButtonStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}"
                x:Key="SecondaryButtonStyle">
            <Setter Property="Background"
                    Value="#FFFFFF"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#F7F7F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button"
                x:Key="IconButton"
                BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Width"
                    Value="30"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
        </Style>

        <!-- === STYLE CHO NHÃN TRẠNG THÁI (STATUS BADGE) === -->
        <Style TargetType="Border"
                x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="6,3"/>
            <Setter Property="MaxWidth"
                    Value="80"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán">
                    <Setter Property="Background" Value="#CAFBEC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Chưa thanh toán">
                    <Setter Property="Background" Value="#EEF0F4"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="StatusBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Đã thanh toán">
                    <Setter Property="Foreground" Value="#0DA678"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Chưa thanh toán">
                    <Setter Property="Foreground" Value="#586A84"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"
                    MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SidebarControl Grid.Column="0"/>

        <Grid Grid.Column="1"
                Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <components:TopbarControl Grid.Row="0"
                    Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Danh sách thanh toán"
                            Foreground="#3B4758"
                            FontSize="24"
                            FontWeight="Bold"
                            Margin="0,0,0,20"/>

                    <!-- THANH HÀNH ĐỘNG TRÊN CÙNG -->
                    <Border Background="#FFFFFF"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Button Content="Thêm thanh toán"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Width="180"/>
                            <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                <Grid Width="250" Height="40">
                                    <Border Background="#FFFFFF" CornerRadius="4"/>
                                    <TextBlock Text="Tìm kiếm thanh toán..." Foreground="#7D8FA9" FontSize="14" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=PaymentInlineSearchTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox x:Name="PaymentInlineSearchTextBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Margin="10,0,10,0"
                                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                                <ComboBox Width="190"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        Margin="10,0,0,0"
                                        SelectedValue="{Binding SortOrder}"
                                        SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="newest" IsSelected="True">Mới nhất</ComboBoxItem>
                                    <ComboBoxItem Tag="oldest">Cũ nhất</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- BẢNG DỮ LIỆU CHÍNH -->
                    <Border Background="White"
                            CornerRadius="12">
                        <StackPanel>
                            <!-- THANH HÀNH ĐỘNG PHỤ -->
                            <Grid Margin="20">
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Width="180">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Xuất danh sách"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Text="⬆️"
                                                Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <ComboBox Width="180"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="200,0,0,0"
                                        SelectedValue="{Binding PageSize}"
                                        SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="5" IsSelected="True">Hiển thị 5 hàng</ComboBoxItem>
                                    <ComboBoxItem Tag="10">Hiển thị 10 hàng</ComboBoxItem>
                                    <ComboBoxItem Tag="20">Hiển thị 20 hàng</ComboBoxItem>
                                </ComboBox>
                            </Grid>

                            <!-- BẢNG DỮ LIỆU -->
                            <DataGrid ItemsSource="{Binding Payments}"
                                    SelectedItem="{Binding SelectedPayment}"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    HeadersVisibility="Column"
                                    GridLinesVisibility="Horizontal"
                                    HorizontalGridLinesBrush="#EEEEEE"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    RowBackground="White"
                                    AlternatingRowBackground="#FAFAFA"
                                    SelectionMode="Single"
                                    SelectionUnit="FullRow"
                                    EnableRowVirtualization="False"
                                    CanUserResizeRows="False"
                                    CanUserReorderColumns="False"
                                    CanUserSortColumns="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="#EEEEEE"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="FontWeight"
                                                Value="Medium"/>
                                        <Setter Property="Foreground"
                                                Value="#7D8FA9"/>
                                    </Style>
                                    <!-- Style cho DataGridRow (không đổi màu khi hover/selected) -->
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="MinHeight" Value="50"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                    
                                    <!-- Style cho DataGridCell (không đổi màu/foreground khi hover/selected) -->
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="10,12"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#3B4758"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- Cột CheckBox -->
                                    <DataGridTemplateColumn MinWidth="50">
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Cột Mã thanh toán -->
                                    <DataGridTemplateColumn Header="Mã thanh toán" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Id}"
                                                          FontWeight="Bold"
                                                          Foreground="#586A84"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Cột Ngày tạo -->
                                    <DataGridTemplateColumn Header="Ngày tạo" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy'}" 
                                                              Foreground="#586A84"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <DatePicker SelectedDate="{Binding Date}" 
                                                               Background="White"
                                                               BorderBrush="#DDDDDD"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Cột Tổng tiền -->
                                    <DataGridTemplateColumn Header="Tổng tiền" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} VNĐ'}" 
                                                           Foreground="#586A84"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Cột Trạng thái (với Badge) -->
                                    <DataGridTemplateColumn Header="Trạng thái" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Border Style="{StaticResource StatusBadgeStyle}"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                                        <TextBlock Text="{Binding Status}"
                                                                Style="{StaticResource StatusBadgeTextStyle}"/>
                                                    </Border>
                                                    <ComboBox 
                                                        ItemsSource="{Binding DataContext.EditStatusChoices, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        SelectedItem="{Binding EditableStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Background="White"
                                                        BorderBrush="#DDDDDD"
                                                        Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Bỏ cột Phương thức thanh toán -->

                                    <!-- Cột Options -->
                                    <DataGridTemplateColumn Header="Options" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <!-- Normal mode buttons -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}">
                                                        <Button Content="👁️"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Xem"
                                                                Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="✏️"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Sửa"
                                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="🗑️"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Xóa"
                                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Edit mode buttons -->
                                                    <StackPanel Orientation="Horizontal"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <Button Content="💾"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Lưu"
                                                                Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="❌"
                                                                Style="{StaticResource IconButton}"
                                                                ToolTip="Hủy"
                                                                Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- PHÂN TRANG -->
                            <Border BorderBrush="#EEEEEE"
                                    BorderThickness="0,1,0,0"
                                    Padding="20">
                                <Grid>
                                    <TextBlock Text="{Binding PaginationText}"
                                            Foreground="#3B4758"
                                            VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="Trang:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#3B4758"/>
                                        <Button Content="◀" Style="{StaticResource IconButton}" Command="{Binding PrevPageCommand}"/>
                                        <TextBlock Text="{Binding PageIndex}" Margin="8,0,8,0" VerticalAlignment="Center" Foreground="#3B4758"/>
                                        <TextBlock Text="/" VerticalAlignment="Center" Foreground="#3B4758"/>
                                        <TextBlock Text="{Binding TotalPages}" Margin="8,0,8,0" VerticalAlignment="Center" Foreground="#3B4758"/>
                                        <Button Content="▶" Style="{StaticResource IconButton}" Command="{Binding NextPageCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>