<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.ViewRoomWindow"
    Title="Chi tiết phòng"
    Height="600"
    Width="700"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho info card -->
        <Style x:Key="InfoCardStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Background overlay với hiệu ứng mờ -->
    <Border Background="#80000000" CornerRadius="12">
        <!-- Main content -->
        <Border Background="White" CornerRadius="12" Margin="5" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="👁️" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Chi tiết phòng" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="✕" Style="{StaticResource CloseButtonStyle}" 
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                    <StackPanel>
                        <!-- Thông tin cơ bản -->
                        <Border Style="{StaticResource InfoCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📋 Thông tin cơ bản" FontSize="16" FontWeight="Bold" 
                                           Foreground="#333" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên phòng:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Phòng 1" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Số giường:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="7 giường" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Giá thuê:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="2,500,000 VNĐ/tháng" Margin="0,0,0,8"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Trạng thái và đánh giá -->
                        <Border Style="{StaticResource InfoCardStyle}">
                            <StackPanel>
                                <TextBlock Text="⭐ Trạng thái &amp; Đánh giá" FontSize="16" FontWeight="Bold" 
                                           Foreground="#333" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Trạng thái hiện tại:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <Border Background="#28A745" CornerRadius="12" Padding="8,4" Width="100">
                                            <TextBlock Text="Đặt trước" Foreground="White" FontSize="12" HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Đánh giá chất lượng:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="5.0/5" FontWeight="Bold" Foreground="#FFC107"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Trang bị phòng -->
                        <Border Style="{StaticResource InfoCardStyle}">
                            <StackPanel>
                                <TextBlock Text="🏠 Trang bị &amp; Tiện nghi" FontSize="16" FontWeight="Bold" 
                                           Foreground="#333" Margin="0,0,0,15"/>
                                <WrapPanel>
                                    <Border Background="#E3F2FD" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="🛏️ Giường đôi" FontSize="12" Foreground="#1976D2"/>
                                    </Border>
                                    <Border Background="#E8F5E8" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="❄️ Điều hòa" FontSize="12" Foreground="#388E3C"/>
                                    </Border>
                                    <Border Background="#FFF3E0" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="📺 TV" FontSize="12" Foreground="#F57C00"/>
                                    </Border>
                                    <Border Background="#F3E5F5" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="🚿 Nhà tắm riêng" FontSize="12" Foreground="#7B1FA2"/>
                                    </Border>
                                    <Border Background="#E0F2F1" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="🍳 Bếp mini" FontSize="12" Foreground="#00695C"/>
                                    </Border>
                                    <Border Background="#FFEBEE" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="📶 WiFi miễn phí" FontSize="12" Foreground="#C62828"/>
                                    </Border>
                                    <Border Background="#E1F5FE" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="🚗 Chỗ đỗ xe" FontSize="12" Foreground="#0277BD"/>
                                    </Border>
                                    <Border Background="#F1F8E9" CornerRadius="15" Padding="10,5" Margin="0,0,8,8">
                                        <TextBlock Text="🌳 Ban công" FontSize="12" Foreground="#558B2F"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Hình ảnh phòng -->
                        <Border Style="{StaticResource InfoCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📸 Hình ảnh phòng" FontSize="16" FontWeight="Bold" 
                                           Foreground="#333" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <Image Source="/Resources/Images/Logo.png" Width="120" Height="80" 
                                                   Stretch="Uniform" Margin="0,0,0,10"/>
                                            <TextBlock Text="Hình ảnh chính" FontSize="12" Foreground="#666" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                                        <StackPanel HorizontalAlignment="Center">
                                            <Image Source="/Resources/Images/Logo.png" Width="120" Height="80" 
                                                   Stretch="Uniform" Margin="0,0,0,10"/>
                                            <TextBlock Text="Góc phòng" FontSize="12" Foreground="#666" 
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Thông tin bổ sung -->
                        <Border Style="{StaticResource InfoCardStyle}">
                            <StackPanel>
                                <TextBlock Text="📝 Thông tin bổ sung" FontSize="16" FontWeight="Bold" 
                                           Foreground="#333" Margin="0,0,0,15"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Ngày thêm:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="10/11/2025" Margin="0,0,0,15"/>
                                        
                                        <TextBlock Text="Diện tích:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="25m²" Margin="0,0,0,15"/>
                                        
                                        <TextBlock Text="Tầng:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="Tầng 2" Margin="0,0,0,15"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Hướng phòng:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="Đông Nam" Margin="0,0,0,15"/>
                                        
                                        <TextBlock Text="Số người tối đa:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="2 người" Margin="0,0,0,15"/>
                                        
                                        <TextBlock Text="Mô tả:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <TextBlock Text="Phòng đẹp, thoáng mát, gần trung tâm thành phố. Có đầy đủ tiện nghi cơ bản." 
                                                   TextWrapping="Wrap" Margin="0,0,0,15"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer buttons -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="30,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Đóng" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="100" Click="CloseButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
