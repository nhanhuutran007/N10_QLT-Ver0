<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.MeterReadingInspectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kiểm tra chỉ số AI Detect" Height="500" Width="850"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" CornerRadius="10" BorderThickness="1" BorderBrush="#E2E8F0" Background="Black" ClipToBounds="True">
            <Grid>
                <Image Source="{Binding VisualizedImage}" Stretch="Uniform"/>
                <TextBlock Text="Không có hình ảnh minh họa" 
                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding VisualizedImage, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
            </Grid>
        </Border>

        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
            <TextBlock Text="Kết quả đọc từ AI (YOLOv9)" 
                       FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20"/>

            <TextBlock Text="Dữ liệu thô (Raw Output):" Foreground="#64748B" Margin="0,0,0,5"/>
            <TextBox Text="{Binding RawText, Mode=OneWay}" 
                     IsReadOnly="True" Background="#F1F5F9" BorderThickness="0" 
                     Padding="10" FontWeight="Bold" FontSize="14"/>

            <TextBlock Text="{Binding ConfidenceInfo}" 
                       Foreground="#10B981" FontSize="12" FontStyle="Italic" Margin="0,5,0,20"/>

            <TextBlock Text="Chỉ số thực tế (Sử dụng để tính tiền):" 
                       Foreground="#1F2937" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Border BorderThickness="1" BorderBrush="#3B82F6" CornerRadius="6" Background="White">
                <TextBox Text="{Binding FinalValue}" 
                         FontSize="28" FontWeight="Bold" Foreground="#3B82F6"
                         BorderThickness="0" Background="Transparent"
                         Padding="10" HorizontalContentAlignment="Center"/>
            </Border>

            <TextBlock Text="* Hệ thống đã tự động cắt số 0 ở đầu và xử lý số thập phân. Vui lòng kiểm tra kỹ với ảnh bên trái." 
                       TextWrapping="Wrap" Foreground="#EF4444" FontSize="12" Margin="0,10,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Bỏ qua" Command="{Binding CancelCommand}" 
                        Background="#E2E8F0" Foreground="#475569" Padding="15,8" BorderThickness="0" Margin="0,0,10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Xác nhận &amp; Sử dụng" Command="{Binding ConfirmCommand}" 
                        Background="#10B981" Foreground="White" Padding="15,8" BorderThickness="0" FontWeight="SemiBold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>