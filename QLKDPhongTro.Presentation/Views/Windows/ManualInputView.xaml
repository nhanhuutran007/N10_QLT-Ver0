<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ManualInputView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập liệu chi phí - Phòng 1"
        Height="700"
        Width="1140"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        FontFamily="Roboto">

    <Window.Resources>
        <!-- Style cho TextBox nhập liệu -->
        <Style TargetType="{x:Type TextBox}"
               x:Key="InputTextBoxStyle">
            <Setter Property="Background"
                    Value="#F2F6FA"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Height"
                    Value="34"/>
            <Setter Property="Width"
                    Value="150"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
            <Setter Property="Padding"
                    Value="10,0"/>
            <!-- Căn lề phải cho các ô nhập số -->
            <Setter Property="HorizontalContentAlignment"
                    Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút đóng (X) -->
        <Style TargetType="{x:Type Button}"
               x:Key="CloseButtonStyle">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border Background="White"
            CornerRadius="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#A9A8B6"
                              Opacity="0.1"
                              ShadowDepth="4"
                              BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- === TIÊU ĐỀ CHÍNH VÀ NÚT ĐÓNG === -->
            <Grid Grid.Row="0"
                  Background="#F7F8FA"
                  Margin="1,1,1,0">
                <Border CornerRadius="12,12,0,0"
                        Background="#F7F8FA"/>
                <TextBlock Text="Phòng 1"
                           Foreground="#3B4758"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="24"
                           VerticalAlignment="Center"/>
                <Button Content="✕"
                        Style="{StaticResource CloseButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="32"
                        Height="32"
                        Margin="0,0,20,0"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- === TIÊU ĐỀ CỘT === -->
            <Grid Grid.Row="1"
                  Background="#F7F8FA"
                  Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1"
                           Text="Đơn giá"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#3B4758"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           Text="Số Kwh/ Số khối"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#3B4758"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3"
                           Text="Tạm tính"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#3B4758"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- === NỘI DUNG CHÍNH === -->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- HÀNG ĐIỆN VÀ NƯỚC CỐ ĐỊNH -->
                    <Border BorderBrush="#EEEEEE"
                            BorderThickness="0,0,0,1">
                        <Grid Height="70">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Điện tiêu dùng"
                                       FontWeight="Bold"
                                       Foreground="#3B4758"
                                       VerticalAlignment="Center"
                                       Margin="24,0,0,0"/>
                            <!-- *** CẬP NHẬT TẠI ĐÂY: TextBlock -> TextBox *** -->
                            <TextBox Grid.Column="1"
                                     Text="{Binding ElectricityUnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBox Grid.Column="2"
                                     Text="{Binding ElectricityQuantity, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3"
                                       Text="{Binding ElectricitySubtotal, StringFormat={}{0:N0} VNĐ}"
                                       Foreground="#586A84"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border BorderBrush="#EEEEEE"
                            BorderThickness="0,0,0,1">
                        <Grid Height="70">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Nước sinh hoạt"
                                       FontWeight="Bold"
                                       Foreground="#3B4758"
                                       VerticalAlignment="Center"
                                       Margin="24,0,0,0"/>
                            <!-- *** CẬP NHẬT TẠI ĐÂY: TextBlock -> TextBox *** -->
                            <TextBox Grid.Column="1"
                                     Text="{Binding WaterUnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBox Grid.Column="2"
                                     Text="{Binding WaterQuantity, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3"
                                       Text="{Binding WaterSubtotal, StringFormat={}{0:N0} VNĐ}"
                                       Foreground="#586A84"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- KHU VỰC CÔNG NỢ -->
                    <Border Background="White"
                            CornerRadius="12"
                            Width="540"
                            HorizontalAlignment="Center"
                            Margin="0,40,0,40">
                        <Border.Effect>
                            <DropShadowEffect Color="#A9A8B6"
                                              Opacity="0.1"
                                              ShadowDepth="2"
                                              BlurRadius="15"/>
                        </Border.Effect>
                        <StackPanel Margin="24">
                            <TextBlock Text="Công nợ"
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="#3B4758"
                                       Margin="0,0,0,20"/>
                            <Grid Margin="0,5">
                                <TextBlock Text="Tạm tính"
                                           Foreground="#3B4758"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Subtotal, StringFormat={}{0:N0} VNĐ}"
                                           FontWeight="Bold"
                                           Foreground="#3B4758"
                                           FontSize="14"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <TextBlock Text="Tiền đã thanh toán"
                                           Foreground="#3B4758"
                                           FontSize="14"/>
                                <TextBox Text="{Binding AmountPaid, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                         HorizontalAlignment="Right"
                                         Width="120"
                                         TextAlignment="Right"
                                         BorderThickness="0,0,0,1"/>
                            </Grid>
                            <Separator Margin="0,15"/>
                            <Grid Margin="0,5">
                                <TextBlock Text="Tổng"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#3B4758"/>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0} VNĐ}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#3B4758"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>