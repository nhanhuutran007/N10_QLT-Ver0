<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.AddTenantWindow"
    Title="ThÃªm KhÃ¡ch ThuÃª"
    Height="650"
    Width="700"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Resources/Images/Logo.png">

    <Window.Resources>

        <!-- ðŸ”´ Close Button -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ðŸ”µ Primary Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#319DFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F8AF0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- âšª Cancel Button -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ðŸ©¶ Input TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ðŸ—“ DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
            <Setter Property="Language" Value="vi-VN"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="TextBorder"
                                    Grid.Column="0"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0"
                                    Background="White">
                                <DatePickerTextBox x:Name="PART_TextBox"
                   Background="Transparent"
                   BorderThickness="0"
                   Padding="12,10"
                   Foreground="#333"
                   Text="{Binding Path=SelectedDate, 
                                  RelativeSource={RelativeSource AncestorType=DatePicker}, 
                                  StringFormat='{}{0:dd/MM/yyyy}'}"/>

                            </Border>

                            <Button x:Name="PART_Button"
                                    Grid.Column="1"
                                    Focusable="False"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="40"
                                    Cursor="Hand">
                                <Path Data="M3,6 L17,6 L17,8 L3,8 Z M5,10 L7,10 L7,12 L5,12 Z M9,10 L11,10 L11,12 L9,12 Z M13,10 L15,10 L15,12 L13,12 Z M5,2 L7,2 L7,4 L5,4 Z M9,2 L11,2 L11,4 L9,4 Z M13,2 L15,2 L15,4 L13,4 Z M3,4 L17,4 L17,14 L3,14 Z"
                                      Fill="#666" Width="16" Height="16"/>
                            </Button>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="8">
                                    <Calendar x:Name="PART_Calendar"
                                              BorderThickness="0"
                                              DisplayMode="Month"
                                              SelectionMode="SingleDate"
                                              Background="White"
                                              Foreground="#333"/>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="TextBorder" Property="BorderBrush" Value="#5B75D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- White rounded card with drop shadow like Billing -->
    <Border CornerRadius="12" Background="White" Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="#CCCCCC" Opacity="0.5" BlurRadius="10"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="24,24,24,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" FontSize="18" FontWeight="Medium" Foreground="#3B4758" VerticalAlignment="Center"
                           Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"/>
                <Button Grid.Column="1"
                        Content="âœ•"
                        Style="{StaticResource CloseButtonStyle}"
                        Width="32"
                        Height="32"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="#586A84"
                        ToolTip="ÄÃ³ng"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- ðŸ“‹ Content -->
            <ScrollViewer Grid.Row="1" Margin="24,0,24,24" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- CÃ¡c trÆ°á»ng nháº­p -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Há» tÃªn *" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Text="{Binding NewTenant.HoTen, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="CCCD *" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Text="{Binding NewTenant.CCCD, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="0,8">
                            <TextBlock Text="NgÃ y sinh *" 
              FontSize="14" FontWeight="SemiBold" Foreground="#333"/>

                            <Border CornerRadius="10" 
            BorderBrush="#4F7DFB" 
            BorderThickness="1" 
            Background="White" 
            Padding="8,0">
                                <DatePicker SelectedDate="{Binding NewTenant.NgaySinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="16"
                    Foreground="#333"
                    Width="601"
                    Height="45"
                    Background="Transparent"
                    BorderThickness="0"
                    Language="vi-VN"
                    SelectedDateFormat="Short"/>
                            </Border>
                        </StackPanel>


                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="NÆ¡i cáº¥p CCCD *" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Text="{Binding NewTenant.NoiCap, Mode=TwoWay}"/>
                        </StackPanel>


                        <StackPanel Margin="0,8">
                            <TextBlock Text="NgÃ y cáº¥p CCCD *" 
              FontSize="14" FontWeight="SemiBold" Foreground="#333"/>

                            <Border CornerRadius="10" 
            BorderBrush="#4F7DFB" 
            BorderThickness="1" 
            Background="White" 
            Padding="8,0">
                                <DatePicker SelectedDate="{Binding NewTenant.NgayCap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="16"
                    Foreground="#333"
                    Width="601"
                    Height="45"
                    Background="Transparent"
                    BorderThickness="0"
                    Language="vi-VN"
                    SelectedDateFormat="Short"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Äá»‹a chá»‰ thÆ°á»ng trÃº" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Text="{Binding NewTenant.DiaChi, Mode=TwoWay}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Sá»‘ Ä‘iá»‡n thoáº¡i *" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Text="{Binding NewTenant.SoDienThoai, Mode=TwoWay}"/>
                        </StackPanel>



                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ghi chÃº" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" Height="80" 
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     Text="{Binding NewTenant.GhiChu, Mode=TwoWay}"/>
                        </StackPanel>
                    </StackPanel>
            </ScrollViewer>

            <!-- ðŸŸ« Footer -->
            <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="24,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Há»§y" Style="{StaticResource CancelButtonStyle}" Width="100" Margin="0,0,15,0" Click="CloseButton_Click"/>
                    <Button Content="{Binding ButtonContent}" Style="{StaticResource PrimaryButtonStyle}" Width="120" Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
