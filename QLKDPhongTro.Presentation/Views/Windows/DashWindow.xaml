        <!-- NỘI DUNG CHÍNH -->
        <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="0,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header bar -->
                <Border Grid.Row="0" Background="White" CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
