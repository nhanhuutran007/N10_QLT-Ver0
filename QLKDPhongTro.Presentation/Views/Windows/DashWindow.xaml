                                            <TextBlock Text="{Binding MonthlyRevenue, StringFormat='N0 VNĐ'}" FontSize="20" FontWeight="Bold" Foreground="#28A745"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Tăng trưởng" FontSize="14" Foreground="Gray"/>
                                            <TextBlock Text="{Binding GrowthRate, StringFormat='+{0:F1}%'}" FontSize="20" FontWeight="Bold" Foreground="#28A745"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Thông báo và hoạt động gần đây -->
                            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="🔔 Thông báo" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>
                                    <ItemsControl ItemsSource="{Binding Notifications}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6" Padding="10" Margin="0,0,0,10">
