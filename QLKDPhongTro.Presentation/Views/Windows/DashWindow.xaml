                                    <TextBlock Text="🏠" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Tổng số phòng" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding TotalRooms}" FontSize="28" FontWeight="Bold" Foreground="#5B75D4" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Card: Phòng đã thuê -->
                            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="5,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Phòng đã thuê" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding OccupiedRooms}" FontSize="28" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Card: Phòng trống -->
