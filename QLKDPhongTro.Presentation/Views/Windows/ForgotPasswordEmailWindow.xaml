<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ForgotPasswordEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quên mật khẩu"
        Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nhập email đã đăng ký để nhận mã OTP đặt lại mật khẩu"
                   TextWrapping="Wrap"
                   Margin="0,0,0,12"/>

        <TextBox Grid.Row="1"
                 Margin="0,0,0,12"
                 MinWidth="260"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy"
                    Width="80" Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="Gửi OTP"
                    Width="100"
                    IsDefault="True"
                    Command="{Binding SendOtpCommand}"/>
        </StackPanel>
    </Grid>
</Window>
