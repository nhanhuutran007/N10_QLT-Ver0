<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.ForgotPasswordEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quên mật khẩu - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Style cho TextBox với hiệu ứng focus -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" MinWidth="400"/>
            <ColumnDefinition Width="428*"/>
            <ColumnDefinition Width="600*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- === CỘT TRÁI: PHẦN GIỚI THIỆU === -->
        <Grid Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2764FF" Offset="0.0" />
                    <GradientStop Color="#0B459B" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="80,0,80,0">
                <Image Source="/Resources/Images/Logo.png" 
                       Width="140" Height="167" />

                <TextBlock Text="Quên mật khẩu?" 
                           Foreground="White" FontSize="30" FontWeight="Bold" 
                           TextWrapping="Wrap" TextAlignment="Left" 
                           Width="429" Height="34" Margin="0,20,0,0"/>

                <TextBlock Text="Đừng lo lắng! Chúng tôi sẽ giúp bạn lấy lại quyền truy cập vào tài khoản của mình." 
                           Foreground="#E0E0E0" FontSize="16" 
                           TextWrapping="Wrap" 
                           Margin="0,20,0,0" 
                           Opacity="0.9"/>

                <StackPanel Margin="0,40,0,0">
                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Nhập email đã đăng ký" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Hệ thống sẽ gửi mã OTP đến email của bạn để xác thực." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Nhận mã OTP qua email" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Kiểm tra hộp thư đến và nhập mã OTP để tiếp tục." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="10" Height="10" Fill="White" Margin="0,6,12,0" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Đặt lại mật khẩu mới" Foreground="White" FontWeight="Medium" FontSize="16"/>
                            <TextBlock Text="Tạo mật khẩu mới an toàn cho tài khoản của bạn." Foreground="#E0E0E0" FontSize="14" TextWrapping="Wrap" Opacity="0.9"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- PHẦN BÊN PHẢI (FORM QUÊN MẬT KHẨU) -->
        <Grid Grid.Column="2" Background="#F9FAFB">
            <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Tiêu đề -->
                <TextBlock Text="Quên mật khẩu" FontSize="28" FontWeight="Bold" Foreground="#3B4758" HorizontalAlignment="Center" Margin="0,0,0,8"/>

                <!-- Mô tả -->
                <TextBlock Text="Nhập email đã đăng ký để nhận mã OTP đặt lại mật khẩu" 
                           FontSize="13" 
                           Foreground="#6B7280" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           Margin="0,0,0,24"/>

                <!-- Trường Email -->
                <TextBlock Text="Email" FontSize="13" FontWeight="SemiBold" Foreground="#3B4758" Margin="0,0,0,4"/>
                <TextBox x:Name="EmailTextBox" 
                         Style="{StaticResource InputTextBoxStyle}"
                         Height="38" 
                         Margin="0,0,0,20"
                         VerticalContentAlignment="Center"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Nút Gửi OTP -->
                <Border CornerRadius="6" Background="#319DFF" Height="50" Margin="0,0,0,12">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2B8CE8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button Content="Gửi mã OTP" 
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Background="Transparent"
                            Cursor="Hand"
                            IsDefault="True"
                            Command="{Binding SendOtpCommand}"/>
                </Border>

                <!-- Link quay lại đăng nhập -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Nhớ mật khẩu? " FontSize="13" Foreground="#586A84"/>
                    <TextBlock Text=" Đăng nhập" FontSize="13" Foreground="#319DFF" Cursor="Hand" MouseLeftButtonDown="BackToLogin_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
