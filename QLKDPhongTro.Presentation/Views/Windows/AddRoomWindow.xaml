<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.AddRoomWindow"
    Title="Thêm phòng mới"
    Height="550"
    Width="650"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút hủy -->
        <Style x:Key="CancelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho CheckBox -->
        <Style x:Key="EquipmentCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- Background overlay với hiệu ứng mờ -->
    <Border Background="#80000000" CornerRadius="12">
        <!-- Main content -->
        <Border Background="White" CornerRadius="12" Margin="5" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="➕" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Thêm phòng mới" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>

                        <Button Grid.Column="1" Content="✕" Style="{StaticResource CloseButtonStyle}" 
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- Form content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                    <StackPanel>
                        <!-- Tên phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Tên phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.TenPhong, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Nhập tên phòng"/>
                        </StackPanel>

                        <!-- Diện tích -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Diện tích (m²) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.DienTich, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Nhập diện tích (≥ 5 m²)"/>
                        </StackPanel>

                        <!-- Giá thuê -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Giá thuê (VNĐ) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.GiaCoBan, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Nhập giá thuê (≥ 500,000 VNĐ)"/>
                        </StackPanel>

                        <!-- Trạng thái -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Trạng thái *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource InputComboBoxStyle}" 
                                      SelectedValue="{Binding NewRoom.TrangThai, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="Trống"/>
                                <ComboBoxItem Content="Đã thuê"/>
                                <ComboBoxItem Content="Bảo trì"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Trang thiết bị -->
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="🏠 Trang thiết bị" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="#333" Margin="0,0,0,10"/>
                                <TextBlock Text="Chọn các trang thiết bị có trong phòng (không lưu vào database)" 
                                           FontSize="12" Foreground="#666" Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <CheckBox Content="🛏️ Giường đôi" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="❄️ Điều hòa" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="📺 TV" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="🚿 Nhà tắm riêng" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <CheckBox Content="🍳 Bếp mini" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="📶 WiFi miễn phí" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="🚗 Chỗ đỗ xe" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                        <CheckBox Content="🌳 Ban công" Style="{StaticResource EquipmentCheckBoxStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Ghi chú -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ghi chú" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Text="{Binding NewRoom.GhiChu, UpdateSourceTrigger=PropertyChanged}"
                                     Tag="Nhập ghi chú (tùy chọn)"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer buttons -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="30,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Style="{StaticResource CancelButtonStyle}" 
                                Width="100" Margin="0,0,15,0" Command="{Binding CancelAddEditCommand}"/>
                        <Button Content="Thêm phòng" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="120" Command="{Binding SaveRoomCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>