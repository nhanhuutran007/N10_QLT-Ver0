<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.AddRoomWindow"
    Title="Thêm phòng mới"
    Height="520"
    Width="620"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút chính -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút hủy -->
        <Style x:Key="CancelButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                                  Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" x:Name="Popup">
                                    <Grid MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"/>
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#5B75D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Background overlay với hiệu ứng mờ -->
    <Border Background="#80000000" CornerRadius="12">
        <!-- Main content -->
        <Border Background="White" CornerRadius="12" Margin="5" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🏠" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Thêm phòng mới" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>

                        <Button Grid.Column="1" Content="✕" Style="{StaticResource CloseButtonStyle}" 
                                Command="{Binding CancelAddEditCommand}"/>
                    </Grid>
                </Border>

                <!-- Form content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                    <StackPanel>
                        <!-- Mã phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Mã phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.MaPhong, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Tên phòng -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Tên phòng *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.TenPhong, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Diện tích -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Diện tích (m²) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.DienTich, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Giá thuê -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Giá thuê (VNĐ) *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.GiaCoBan, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Số giường -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Số giường *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Text="{Binding NewRoom.SoGiuong, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <!-- Trạng thái -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Trạng thái *" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource InputComboBoxStyle}" 
                                      SelectedItem="{Binding NewRoom.TrangThai}">
                                <ComboBoxItem Content="Trống" IsSelected="True"/>
                                <ComboBoxItem Content="Đang cho thuê"/>
                                <ComboBoxItem Content="Đặt trước"/>
                                <ComboBoxItem Content="Đã hủy"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Ghi chú -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Ghi chú" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Text="{Binding NewRoom.GhiChu, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer buttons -->
                <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" Padding="30,20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Style="{StaticResource CancelButtonStyle}" 
                                Width="100" Margin="0,0,15,0" Command="{Binding CancelAddEditCommand}"/>
                        <Button Content="Thêm phòng" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="120" Command="{Binding SaveRoomCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>