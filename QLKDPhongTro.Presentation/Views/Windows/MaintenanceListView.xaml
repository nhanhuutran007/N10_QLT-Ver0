<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.MaintenanceListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Danh sách bảo trì sự cố - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="735"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Common Styles -->
        <Style TargetType="{x:Type Button}"
                x:Key="PrimaryButtonStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button"
                x:Key="IconButton"
                BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Width"
                    Value="30"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
        </Style>

        <!-- Status Badge Style -->
        <Style TargetType="Border"
                x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                        Value="repaired">
                    <Setter Property="Background"
                            Value="#CAFBEC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="unrepaired">
                    <Setter Property="Background"
                            Value="#FFE5EC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Background"
                            Value="#FFF2DA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="StatusBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                        Value="repaired">
                    <Setter Property="Foreground"
                            Value="#0DA678"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="unrepaired">
                    <Setter Property="Foreground"
                            Value="#FF316A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Foreground"
                            Value="#FFAA04"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"
                    MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SidebarControl Grid.Column="0"/>

        <Grid Grid.Column="1"
                Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <components:TopbarControl x:Name="Topbar"
                    Grid.Row="0"
                    Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Danh sách bảo trì sự cố"
                               Foreground="#3B4758"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Top Action Bar -->
                    <Border Background="#FFFFFF"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Button Content="Thêm thiết bị bảo trì"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Width="200"/>
                            <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                                <Grid Width="250" Height="40">
                                    <Border Background="#FFFFFF" CornerRadius="4"/>
                                    <TextBlock Text="Tìm kiếm bảo trì..." Foreground="#7D8FA9" FontSize="14" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=InlineSearchTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox x:Name="InlineSearchTextBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Margin="10,0,10,0"
                                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                                <ComboBox Width="190"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        Margin="10,0,0,0"
                                        SelectedValue="{Binding SortOrder, Mode=TwoWay}"
                                        SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="newest" IsSelected="True">Mới nhất</ComboBoxItem>
                                    <ComboBoxItem Tag="oldest">Cũ nhất</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Data Table -->
                    <Border Background="White"
                            CornerRadius="12">
                        <StackPanel>
                            <!-- Sub Action Bar -->
                            <Grid Margin="20">
                                <ComboBox Width="180"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Left"
                                        SelectedValue="{Binding PageSize, Mode=TwoWay}"
                                        SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="5">Hiển thị 5 hàng</ComboBoxItem>
                                    <ComboBoxItem Tag="10">Hiển thị 10 hàng</ComboBoxItem>
                                    <ComboBoxItem Tag="20">Hiển thị 20 hàng</ComboBoxItem>
                                </ComboBox>
                            </Grid>

                            <!-- DataGrid -->
                            <DataGrid ItemsSource="{Binding Maintenances}"
                                      AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                    GridLinesVisibility="Horizontal"
                                    HorizontalGridLinesBrush="#EEEEEE"
                                      Background="Transparent"
                                    BorderThickness="0"
                                    RowBackground="White"
                                    AlternatingRowBackground="#FAFAFA"
                                      SelectionMode="Single"
                                    SelectionUnit="FullRow"
                                    CanUserResizeRows="False"
                                      CanUserReorderColumns="False"
                                    CanUserSortColumns="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="#EEEEEE"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="FontWeight"
                                                Value="Medium"/>
                                        <Setter Property="Foreground"
                                                Value="#7D8FA9"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background"
                                                Value="White"/>
                                        <Setter Property="MinHeight"
                                                Value="50"/>
                                        <Setter Property="Cursor"
                                                Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                <Setter Property="Background"
                                                        Value="#F0F7FF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected"
                                                    Value="True">
                                                <Setter Property="Background"
                                                        Value="#E0F2FE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="VerticalAlignment"
                                                Value="Center"/>
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="#3B4758"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- Checkbox, giữ nguyên -->
                                    <DataGridTemplateColumn MinWidth="50">
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Mô tả sự cố -->
                                    <DataGridTemplateColumn Header="Sự cố" Width="3*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding MoTaSuCo}" FontWeight="Bold"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding MoTaSuCo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="White"
                                                             BorderBrush="#DDDDDD" FontWeight="Bold"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Mã phòng -->
                                    <DataGridTemplateColumn Header="Mã phòng" Width="1*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding MaPhong}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding MaPhong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                             Background="White"
                                                             BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Ngày báo cáo -->
                                    <DataGridTemplateColumn Header="Ngày báo cáo" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding NgayBaoCao, StringFormat='dd/MM/yyyy'}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <DatePicker SelectedDate="{Binding NgayBaoCao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                                Background="White"
                                                                BorderBrush="#DDDDDD"
                                                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Chi phí -->
                                    <DataGridTemplateColumn Header="Chi phí" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding ChiPhi, StringFormat='{}{0:N0} VNĐ'}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding ChiPhi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                             Background="White" BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Trạng thái -->
                                    <DataGridTemplateColumn Header="Trạng thái" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding TrangThai}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <ComboBox SelectedValue="{Binding TrangThai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              SelectedValuePath="Content"
                                                              Background="White" BorderBrush="#DDDDDD"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ComboBoxItem Content="Chưa xử lý"/>
                                                        <ComboBoxItem Content="Đang xử lý"/>
                                                        <ComboBoxItem Content="Hoàn tất"/>
                                                    </ComboBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Options (Save/Cancel hoặc Edit/Delete) -->
                                    <DataGridTemplateColumn Header="Options" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <!-- Nếu đang edit -->
                                                    <Button Content="💾" Style="{StaticResource IconButton}"
                                                            ToolTip="Lưu"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="❌" Style="{StaticResource IconButton}"
                                                            ToolTip="Hủy"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <!-- Nếu không phải edit -->
                                                    <Button Content="✏️" Style="{StaticResource IconButton}"
                                                            ToolTip="Chỉnh sửa"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="🗑️" Style="{StaticResource IconButton}"
                                                            ToolTip="Xóa"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Pagination -->
                            <Border BorderBrush="#EEEEEE"
                                    BorderThickness="0,1,0,0"
                                    Padding="20">
                                <Grid>
                                    <TextBlock Text="{Binding PaginationText}"
                                               Foreground="#3B4758"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            >
                                        <TextBlock Text="Trang:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="◀" Style="{StaticResource IconButton}" Command="{Binding PrevPageCommand}"/>
                                        <TextBlock Text="{Binding PageIndex}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="/" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalPages}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                        <Button Content="▶" Style="{StaticResource IconButton}" Command="{Binding NextPageCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>