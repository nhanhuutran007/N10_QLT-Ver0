<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.MaintenanceListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Danh s√°ch b·∫£o tr√¨ s·ª± c·ªë - Qu·∫£n L√Ω Ph√≤ng Tr·ªç"
        MinHeight="600"
        MinWidth="800"
        Height="735"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Common Styles -->
        <Style TargetType="{x:Type Button}"
                x:Key="PrimaryButtonStyle">
            <Setter Property="Background"
                    Value="#10D096"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="40"/>
            <Setter Property="Padding"
                    Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button"
                x:Key="IconButton"
                BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Width"
                    Value="30"/>
            <Setter Property="Height"
                    Value="30"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
        </Style>

        <!-- Status Badge Style -->
        <Style TargetType="Border"
                x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="HorizontalAlignment"
                    Value="Left"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                        Value="repaired">
                    <Setter Property="Background"
                            Value="#CAFBEC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="unrepaired">
                    <Setter Property="Background"
                            Value="#FFE5EC"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Background"
                            Value="#FFF2DA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="StatusBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}"
                        Value="repaired">
                    <Setter Property="Foreground"
                            Value="#0DA678"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="unrepaired">
                    <Setter Property="Foreground"
                            Value="#FF316A"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}"
                        Value="pending">
                    <Setter Property="Foreground"
                            Value="#FFAA04"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"
                    MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SidebarControl Grid.Column="0"/>

        <Grid Grid.Column="1"
                Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <components:TopbarControl x:Name="Topbar"
                    Grid.Row="0"
                    Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Text="Danh s√°ch b·∫£o tr√¨ s·ª± c·ªë"
                               Foreground="#3B4758"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- Top Action Bar -->
                    <Border Background="#FFFFFF"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <Grid>
                            <Button Content="Th√™m thi·∫øt b·ªã b·∫£o tr√¨"
                                    Style="{StaticResource PrimaryButtonStyle}"
