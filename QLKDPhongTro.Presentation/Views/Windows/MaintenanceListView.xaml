                                    <ComboBoxItem Tag="10">Hi·ªÉn th·ªã 10 h√†ng</ComboBoxItem>
                                    <ComboBoxItem Tag="20">Hi·ªÉn th·ªã 20 h√†ng</ComboBoxItem>
                                </ComboBox>
                            </Grid>

                            <!-- DataGrid -->
                            <DataGrid ItemsSource="{Binding Maintenances}"
                                      AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                    GridLinesVisibility="Horizontal"
                                    HorizontalGridLinesBrush="#EEEEEE"
                                      Background="Transparent"
                                    BorderThickness="0"
                                    RowBackground="White"
                                    AlternatingRowBackground="#FAFAFA"
                                      SelectionMode="Single"
                                    SelectionUnit="FullRow"
                                    CanUserResizeRows="False"
                                      CanUserReorderColumns="False"
                                    CanUserSortColumns="True">
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="BorderThickness"
                                                Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush"
                                                Value="#EEEEEE"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="FontWeight"
                                                Value="Medium"/>
                                        <Setter Property="Foreground"
                                                Value="#7D8FA9"/>
                                    </Style>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background"
                                                Value="White"/>
                                        <Setter Property="MinHeight"
                                                Value="50"/>
                                        <Setter Property="Cursor"
                                                Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                    Value="True">
                                                <Setter Property="Background"
                                                        Value="#F0F7FF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected"
                                                    Value="True">
                                                <Setter Property="Background"
                                                        Value="#E0F2FE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0"/>
                                        <Setter Property="Padding"
                                                Value="10,12"/>
                                        <Setter Property="VerticalAlignment"
                                                Value="Center"/>
                                        <Setter Property="Background"
                                                Value="Transparent"/>
                                        <Setter Property="Foreground"
                                                Value="#3B4758"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!-- Checkbox, gi·ªØ nguy√™n -->
                                    <DataGridTemplateColumn MinWidth="50">
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- M√¥ t·∫£ s·ª± c·ªë -->
                                    <DataGridTemplateColumn Header="S·ª± c·ªë" Width="3*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding MoTaSuCo}" FontWeight="Bold"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding MoTaSuCo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                             Background="White"
                                                             BorderBrush="#DDDDDD" FontWeight="Bold"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- M√£ ph√≤ng -->
                                    <DataGridTemplateColumn Header="M√£ ph√≤ng" Width="1*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding MaPhong}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding MaPhong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                             Background="White"
                                                             BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Ng√†y b√°o c√°o -->
                                    <DataGridTemplateColumn Header="Ng√†y b√°o c√°o" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding NgayBaoCao, StringFormat='dd/MM/yyyy'}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <DatePicker SelectedDate="{Binding NgayBaoCao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                                Background="White"
                                                                BorderBrush="#DDDDDD"
                                                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Chi ph√≠ -->
                                    <DataGridTemplateColumn Header="Chi ph√≠" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding ChiPhi, StringFormat='{}{0:N0} VNƒê'}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <TextBox Text="{Binding ChiPhi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
                                                             Background="White" BorderBrush="#DDDDDD"
                                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Tr·∫°ng th√°i -->
                                    <DataGridTemplateColumn Header="Tr·∫°ng th√°i" Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <TextBlock Text="{Binding TrangThai}"
                                                               Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>
                                                    <ComboBox SelectedValue="{Binding TrangThai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              SelectedValuePath="Content"
                                                              Background="White" BorderBrush="#DDDDDD"
                                                              Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <ComboBoxItem Content="Ch∆∞a x·ª≠ l√Ω"/>
                                                        <ComboBoxItem Content="ƒêang x·ª≠ l√Ω"/>
                                                        <ComboBoxItem Content="Ho√†n t·∫•t"/>
                                                    </ComboBox>
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Options (Save/Cancel ho·∫∑c Edit/Delete) -->
                                    <DataGridTemplateColumn Header="Options" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <!-- N·∫øu ƒëang edit -->
                                                    <Button Content="üíæ" Style="{StaticResource IconButton}"
                                                            ToolTip="L∆∞u"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="‚ùå" Style="{StaticResource IconButton}"
                                                            ToolTip="H·ªßy"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <!-- N·∫øu kh√¥ng ph·∫£i edit -->
                                                    <Button Content="‚úèÔ∏è" Style="{StaticResource IconButton}"
                                                            ToolTip="Ch·ªânh s·ª≠a"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="üóëÔ∏è" Style="{StaticResource IconButton}"
                                                            ToolTip="X√≥a"
                                                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Pagination -->
                            <Border BorderBrush="#EEEEEE"
                                    BorderThickness="0,1,0,0"
                                    Padding="20">
                                <Grid>
                                    <TextBlock Text="{Binding PaginationText}"
                                               Foreground="#3B4758"
                                               VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            >
                                        <TextBlock Text="Trang:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <Button Content="‚óÄ" Style="{StaticResource IconButton}" Command="{Binding PrevPageCommand}"/>
                                        <TextBlock Text="{Binding PageIndex}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="/" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalPages}" Margin="8,0,8,0" VerticalAlignment="Center"/>
                                        <Button Content="‚ñ∂" Style="{StaticResource IconButton}" Command="{Binding NextPageCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>