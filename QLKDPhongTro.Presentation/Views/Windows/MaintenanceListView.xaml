                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=InlineSearchTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox x:Name="InlineSearchTextBox"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalContentAlignment="Center"
                                             Margin="10,0,10,0"
                                             Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                                <ComboBox Width="190"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        Margin="10,0,0,0"
                                        SelectedValue="{Binding SortOrder, Mode=TwoWay}"
                                        SelectedValuePath="Tag">
                                    <ComboBoxItem Tag="newest" IsSelected="True">M·ªõi nh·∫•t</ComboBoxItem>
                                    <ComboBoxItem Tag="oldest">C≈© nh·∫•t</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Main Data Table -->
                    <Border Background="White"
                            CornerRadius="12">
                        <StackPanel>
                            <!-- Sub Action Bar -->
                            <Grid Margin="20">
                                <ComboBox Width="180"
                                        Height="40"
                                        VerticalContentAlignment="Center"
                                        HorizontalAlignment="Left"
                                        SelectedValue="{Binding PageSize, Mode=TwoWay}"
                                        SelectedValuePath="Tag">
