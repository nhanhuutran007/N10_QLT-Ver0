                                <Grid Width="250" Height="40">
                                    <Border Background="#FFFFFF" CornerRadius="4"/>
                                    <TextBlock Text="T√¨m ki·∫øm b·∫£o tr√¨..." Foreground="#7D8FA9" FontSize="14" IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
