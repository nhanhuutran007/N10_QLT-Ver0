<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
    xmlns:local="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
    xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.RoomManagementWindow"
    Title="Quản lý phòng ở"
    Height="700"
    Width="1200"
    MinHeight="600"
    MinWidth="800"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    DataContext="{Binding Source={StaticResource ViewModel}}">

    <Window.Resources>

        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút menu bên trái -->
        <Style TargetType="{x:Type Button}" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút chức năng -->
        <Style TargetType="{x:Type Button}" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ô tìm kiếm -->
        <Style TargetType="{x:Type TextBox}" x:Key="SearchTextBoxStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <!-- Style cho các card phòng -->
        <Style TargetType="{x:Type Border}" x:Key="RoomCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#5B75D4" Opacity="0.3" ShadowDepth="4" BlurRadius="12"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho status badge -->
        <Style TargetType="{x:Type Border}" x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius" Value="9"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="Height" Value="18"/>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR BÊN TRÁI -->
        <components:SidebarControl Grid.Column="0" 
                                  x:Name="SidebarControl"
                                  PageTitle="Quản lý phòng ở"
                                  SelectedMenuItem="Rooms"
                                  VerticalAlignment="Stretch"
                                  MenuItemClicked="SidebarControl_MenuItemClicked"
                                  LogoutClicked="SidebarControl_LogoutClicked"/>

        <!-- NỘI DUNG CHÍNH -->
        <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="0,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header bar -->
                <Border Grid.Row="0" Background="White" CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tiêu đề trang -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,20">
                            <TextBlock Text="🏠" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý phòng ở" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>

                        <!-- Các nút điều khiển cửa sổ -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Content="—" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                            <Button Content="☐" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                            <Button Content="✕" Style="{StaticResource CloseButton}" Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Nội dung chính -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="30,30,30,30">
                        <!-- Thanh công cụ -->
                        <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,30">
                            <StackPanel>
                                <!-- Các nút chức năng -->
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                    <Button Content="➕ Thêm phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Command="{Binding ShowAddRoomPanelCommand}"/>
                                    <Button Content="✏️ Sửa phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Command="{Binding ShowEditRoomPanelCommand}"/>
                                    <Button Content="👁️ Xem phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Click="ViewRoom_Click"/>
                                    <Button Content="🗑️ Xóa phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Command="{Binding DeleteRoomCommand}"/>
                                </WrapPanel>
                                
                                <!-- Tìm kiếm -->
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Border Background="#F0F0F0" CornerRadius="6" Padding="10,8" Margin="0,0,10,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                                     Style="{StaticResource SearchTextBoxStyle}" 
                                                     Tag="Tìm kiếm phòng..."/>
                                        </StackPanel>
                                    </Border>
                                    <Button Content="Tìm kiếm" Style="{StaticResource ActionButtonStyle}" 
                                            Width="100" Command="{Binding SearchRoomsCommand}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Danh sách phòng -->
                        <ItemsControl ItemsSource="{Binding Rooms}" Margin="0,0,0,20">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource RoomCardStyle}" Width="350" Margin="26.25,0,26.25,20"
                                            MouseLeftButtonDown="RoomCard_MouseLeftButtonDown">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header phòng -->
                                            <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" 
                                                    Margin="-20,-20,-20,0" Padding="20,15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" Background="White" CornerRadius="2" Width="30" Height="30">
                                                        <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1" Text="{Binding TenPhong}" FontSize="16" FontWeight="Bold" 
                                                               Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                    <Border Grid.Column="2" CornerRadius="9" Padding="12,9" VerticalAlignment="Center"
                                                            Background="{Binding TrangThai, Converter={StaticResource StatusToColorConverter}}">
                                                        <TextBlock Text="{Binding TrangThai}" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Nội dung phòng -->
                                            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                                <TextBlock Text="Chi tiết phòng" FontSize="14" FontWeight="SemiBold" 
                                                           Foreground="#333" Margin="0,0,0,10"/>
                                                <TextBlock Text="{Binding MaPhong, StringFormat='Mã phòng: {0}'}" 
                                                           FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding DienTich, StringFormat='Diện tích: {0} m²'}" 
                                                           FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding GiaCoBan, StringFormat='Giá thuê: {0:C}'}" 
                                                           FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding SoGiuong, StringFormat='Số giường: {0}'}" 
                                                           FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding GhiChu, StringFormat='Ghi chú: {0}'}" 
                                                           FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                            </StackPanel>

                                            <!-- Footer phòng -->
                                            <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" 
                                                    Margin="-20,0,-20,-20" Padding="20,15"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>