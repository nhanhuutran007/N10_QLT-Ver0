                                                <Border Grid.Column="0" Background="White" CornerRadius="2" Width="30" Height="30" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Tên phòng -->
                                                <TextBlock Grid.Column="1" Text="Phòng 2" FontSize="16" FontWeight="Bold" 
                                                          Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                
                                                <!-- Trạng thái -->
                                                <Border Grid.Column="2" Background="#FFC107" CornerRadius="9" Padding="12,9" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Đang cho thuê" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Nội dung phòng -->
                                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                            <TextBlock Text="Chi tiết phòng" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#333" Margin="0,0,0,10"/>
                                            <TextBlock Text="Ngày thêm: Nov 10, 2025" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                            <TextBlock Text="Số giường: 4" FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
                                            
                                            <!-- Progress bar -->
                                            <Border Background="#E0E0E0" CornerRadius="2" Height="4" Margin="0,0,0,10">
                                                <Border Background="#5B75D4" CornerRadius="2" Width="289.98"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Footer phòng -->
                                        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" 
                                                Margin="-20,0,-20,-20" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Ellipse Grid.Column="0" Width="38" Height="38" Fill="#5B75D4"/>
                                                <Ellipse Grid.Column="1" Width="38" Height="38" Fill="#5B75D4" Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Phòng 3 -->
                                <Border Style="{StaticResource RoomCardStyle}" Width="350" Margin="26.25,0,26.25,20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header phòng -->
                                        <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" 
                                                Margin="-20,-20,-20,0" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Icon -->
                                                <Border Grid.Column="0" Background="White" CornerRadius="2" Width="30" Height="30" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Tên phòng -->
                                                <TextBlock Grid.Column="1" Text="Phòng 3" FontSize="16" FontWeight="Bold" 
                                                          Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                
                                                <!-- Trạng thái -->
                                                <Border Grid.Column="2" Background="#DC3545" CornerRadius="9" Padding="12,9" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Đã hủy" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Nội dung phòng -->
                                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                            <TextBlock Text="Chi tiết phòng" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#333" Margin="0,0,0,10"/>
                                            <TextBlock Text="Ngày thêm: Oct 20, 2025" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                            <TextBlock Text="Số phòng: 6" FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
                                            
                                            <!-- Progress bar -->
                                            <Border Background="#E0E0E0" CornerRadius="2" Height="4" Margin="0,0,0,10">
                                                <Border Background="#5B75D4" CornerRadius="2" Width="441.222"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Footer phòng -->
                                        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" 
                                                Margin="-20,0,-20,-20" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Ellipse Grid.Column="0" Width="38" Height="38" Fill="#5B75D4"/>
                                                <Ellipse Grid.Column="1" Width="38" Height="38" Fill="#5B75D4" Margin="10,0,0,0"/>
                                                <Ellipse Grid.Column="2" Width="38" Height="38" Fill="#5B75D4" Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Phòng 4 -->
                                <Border Style="{StaticResource RoomCardStyle}" Width="350" Margin="26.25,0,26.25,20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header phòng -->
                                        <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" 
                                                Margin="-20,-20,-20,0" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Icon -->
