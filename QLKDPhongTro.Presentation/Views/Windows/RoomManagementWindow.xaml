<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="QLKDPhongTro.Presentation.Views.Windows.RoomManagementWindow"
    Title="Quản lý phòng ở"
    Height="700"
    Width="1200"
    MinHeight="600"
    MinWidth="800"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Style cho các nút điều khiển cửa sổ -->
        <Style TargetType="{x:Type Button}" x:Key="WindowControlButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nút đóng -->
        <Style x:Key="CloseButton" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6B6B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút menu bên trái -->
        <Style TargetType="{x:Type Button}" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút chức năng -->
        <Style TargetType="{x:Type Button}" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="#5B75D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các card phòng -->
        <Style TargetType="{x:Type Border}" x:Key="RoomCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho status badge -->
        <Style TargetType="{x:Type Border}" x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius" Value="9"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="Height" Value="18"/>
        </Style>
    </Window.Resources>

    <!-- Bố cục chính của cửa sổ -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR BÊN TRÁI -->
        <Border Grid.Column="0" CornerRadius="10,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3A4E8E" Offset="0"/>
                    <GradientStop Color="#5B75D4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <!-- Logo và tiêu đề -->
                <StackPanel VerticalAlignment="Top" Margin="20,20,20,20" Width="200" HorizontalAlignment="Center">
                    <Image Source="/Resources/Images/Logo.png" Width="120"/>
                    <TextBlock Text="Quản lý phòng trọ" FontSize="18" FontWeight="Bold" Foreground="White" 
                               TextWrapping="Wrap" MaxWidth="200" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Quản lý phòng ở" FontSize="14" Foreground="#E0E0E0" Margin="0,2,0,0" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menu điều hướng -->
                <StackPanel VerticalAlignment="Center" Margin="20,0" Width="220" HorizontalAlignment="Center">
                    <Border CornerRadius="20" Margin="0,0,0,10" Background="Transparent" HorizontalAlignment="Center">
                        <Button Content="📊 Tổng quan" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="120" HorizontalContentAlignment="Center"
                                Click="OverviewButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,15,12,0"/>
                    </Border>
                    <Border CornerRadius="10" Margin="0,0,0,10" Background="#4A63C1" HorizontalAlignment="Center">
                        <Button Content="🏠 Quản lý phòng" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="150" HorizontalContentAlignment="Center"
                                Click="RoomsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10" Margin="0,0,0,10" Background="Transparent" HorizontalAlignment="Center">
                        <Button Content="👥 Khách thuê" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="130" HorizontalContentAlignment="Center"
                                Click="TenantsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10" Margin="0,0,0,10" Background="Transparent" HorizontalAlignment="Center">
                        <Button Content="💰 Hóa đơn" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="130" HorizontalContentAlignment="Center"
                                Click="BillsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10" Margin="0,0,0,10" Background="Transparent" HorizontalAlignment="Center">
                        <Button Content="📋 Hợp đồng" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="130" HorizontalContentAlignment="Center"
                                Click="ContractsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,0,12,0"/>
                    </Border>
                    <Border CornerRadius="10" Margin="0,0,0,0" Background="Transparent" HorizontalAlignment="Center">
                        <Button Content="⚙️ Cài đặt" Style="{StaticResource MenuButtonStyle}" 
                                Height="48" Width="130" HorizontalContentAlignment="Center"
                                Click="SettingsButton_Click" VerticalAlignment="Top" Margin="20,0,12,0" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Thông tin người dùng -->
                <StackPanel VerticalAlignment="Bottom" Margin="20,0,20,20">
                    <Border Background="#4A63C1" CornerRadius="8" Padding="15" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Admin User" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="admin@example.com" FontSize="12" Foreground="#E0E0E0" 
                                       Margin="0,2,0,0" HorizontalAlignment="Center"/>
                            <Button Content="Đăng xuất" Background="#FF4444" Foreground="White" 
                                    FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center" 
                                    Margin="0,10,0,0" Width="170" Height="30" Click="LogoutButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- NỘI DUNG CHÍNH -->
        <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="0,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header bar -->
                <Border Grid.Row="0" Background="White" CornerRadius="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Tiêu đề trang -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,20">
                            <TextBlock Text="🏠" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Quản lý phòng ở" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>

                        <!-- Các nút điều khiển cửa sổ -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Content="—" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                            <Button Content="☐" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                            <Button Content="✕" Style="{StaticResource CloseButton}" Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Nội dung chính -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="30,30,30,30">
                        <!-- Thanh công cụ -->
                        <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,30">
                            <StackPanel>
                                <!-- Các nút chức năng -->
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                    <Button Content="➕ Thêm phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Click="AddRoom_Click"/>
                                    <Button Content="✏️ Sửa phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Click="EditRoom_Click"/>
                                    <Button Content="👁️ Xem phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Click="ViewRoom_Click"/>
                                    <Button Content="🗑️ Xóa phòng" Style="{StaticResource ActionButtonStyle}" 
                                            Margin="0,0,10,0" Click="DeleteRoom_Click"/>
                                </WrapPanel>
                                
                                <!-- Tìm kiếm và sắp xếp -->
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <!-- Tìm kiếm -->
                                    <Border Background="#F0F0F0" CornerRadius="6" Padding="10,8" Margin="0,0,10,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox Text="Tìm kiếm phòng..." Width="200" BorderThickness="0" 
                                                     Background="Transparent" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Sắp xếp -->
                                    <Border Background="#F0F0F0" CornerRadius="6" Padding="10,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Mới nhất" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBlock Text="▼" FontSize="12" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>

                        <!-- Danh sách phòng -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Danh sách phòng responsive -->
                            <WrapPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <!-- Phòng 1 -->
                                <Border Style="{StaticResource RoomCardStyle}" Width="350" Margin="26.25,0,26.25,20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header phòng -->
                                        <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" 
                                                Margin="-20,-20,-20,0" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Icon -->
                                                <Border Grid.Column="0" Background="White" CornerRadius="2" Width="30" Height="30" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="🏠" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Tên phòng -->
                                                <TextBlock Grid.Column="1" Text="Phòng 1" FontSize="16" FontWeight="Bold" 
                                                          Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                                
                                                <!-- Trạng thái -->
                                                <Border Grid.Column="2" Background="#28A745" CornerRadius="9" Padding="12,9" 
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="Đặt trước" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Nội dung phòng -->
                                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                            <TextBlock Text="Chi tiết phòng" FontSize="14" FontWeight="SemiBold" 
                                                       Foreground="#333" Margin="0,0,0,10"/>
                                            <TextBlock Text="Ngày thêm: Nov 10, 2025" FontSize="12" Foreground="Gray" Margin="0,0,0,5"/>
                                            <TextBlock Text="Số giường: 7" FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
                                            
                                            <!-- Progress bar -->
                                            <Border Background="#E0E0E0" CornerRadius="2" Height="4" Margin="0,0,0,10">
                                                <Border Background="#5B75D4" CornerRadius="2" Width="406.762"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Footer phòng -->
                                        <Border Grid.Row="2" Background="#F8F9FA" CornerRadius="0,0,12,12" 
                                                Margin="-20,0,-20,-20" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Ellipse Grid.Column="0" Width="38" Height="38" Fill="#5B75D4"/>
                                                <Ellipse Grid.Column="1" Width="38" Height="38" Fill="#5B75D4" Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- Phòng 2 -->
                                <Border Style="{StaticResource RoomCardStyle}" Width="350" Margin="26.25,0,26.25,20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header phòng -->
                                        <Border Grid.Row="0" Background="#5B75D4" CornerRadius="12,12,0,0" 
                                                Margin="-20,-20,-20,0" Padding="20,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
