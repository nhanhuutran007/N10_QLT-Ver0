<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Views.Windows"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Quản lý phòng - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Converters -->
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>

        <!-- === STYLES MỚI VÀ CẬP NHẬT TỪ SVG === -->

        <!-- Style cho nút Thêm phòng mới (màu xanh lá) -->
        <Style TargetType="{x:Type Button}" x:Key="AddRoomButtonStyle">
            <Setter Property="Background" Value="#10D096"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0DB882"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ComboBox sắp xếp -->
        <Style TargetType="{x:Type ComboBox}" x:Key="FilterComboBoxStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#586A84"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style cho thẻ phòng mới (dạng danh sách) -->
        <Style TargetType="{x:Type Border}" x:Key="RoomCardListStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#A9A8B6" Opacity="0.1" ShadowDepth="4" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nhãn trạng thái mới -->
        <Style TargetType="{x:Type Border}" x:Key="RoomStatusBadgeStyle">
            <Setter Property="CornerRadius" Value="9"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="18"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đặt trước">
                    <Setter Property="Background" Value="#EEF0F4"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang cho thuê">
                    <Setter Property="Background" Value="#E5F3FF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Background" Value="#FFE5EC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho text trong nhãn trạng thái mới -->
        <Style TargetType="{x:Type TextBlock}" x:Key="RoomStatusBadgeTextStyle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đặt trước">
                    <Setter Property="Foreground" Value="#586A84"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang cho thuê">
                    <Setter Property="Foreground" Value="#319DFF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Foreground" Value="#FF316A"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho ProgressBar -->
        <Style TargetType="{x:Type ProgressBar}" x:Key="RoomProgressBar">
            <Setter Property="Height" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#ECECEC"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đặt trước">
                    <Setter Property="Foreground" Value="#7D8FA9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang cho thuê">
                    <Setter Property="Foreground" Value="#319DFF"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                    <Setter Property="Foreground" Value="#FF316A"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các card phòng -->
        <Style TargetType="{x:Type Border}" x:Key="RoomCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="0" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#1a7bff" Opacity="0.2" ShadowDepth="0" BlurRadius="30"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin">
                        <Setter.Value>
                            <Point X="0.5" Y="0.5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho status badge -->
        <Style TargetType="{x:Type Border}" x:Key="StatusBadgeStyle">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="24"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang thuê">
                    <Setter Property="Background" Value="#10B981"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Trống">
                    <Setter Property="Background" Value="#3B82F6"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TrangThai}" Value="Đang bảo trì">
                    <Setter Property="Background" Value="#F59E0B"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút chức năng chính -->
        <Style TargetType="{x:Type Button}" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#10D096"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A63C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:SidebarControl Grid.Column="0" x:Name="SidebarControl" />

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Grid.Column="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl" Margin="0,0,0,10"/>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <!-- Nội dung chính được gói trong StackPanel để có thể thêm các phần tử khác -->
                <StackPanel>
                    <!-- Header: Title (Tab chuyển đổi có thể thêm vào đây nếu muốn) -->
                    <TextBlock Text="Quản lý tài sản và phòng ở" 
                               Foreground="#3B4758" FontSize="24" FontWeight="Bold"
                               Margin="0,0,0,20"/>

                    <!-- === START: ACTION BAR ĐƯỢC THIẾT KẾ LẠI === -->
                    <Border Background="#EEF0F4" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Nút Thêm phòng -->
                            <Button Grid.Column="0" Content="Thêm phòng" Style="{StaticResource AddRoomButtonStyle}" 
                                    Command="{Binding ShowAddRoomPanelCommand}" Width="200"/>

                            <!-- Ô tìm kiếm và bộ lọc -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBox Width="250" Height="40" VerticalContentAlignment="Center"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                <ComboBox Style="{StaticResource FilterComboBoxStyle}" Width="190" Margin="10,0,0,0">
                                    <ComboBoxItem IsSelected="True">Mới nhất</ComboBoxItem>
                                    <ComboBoxItem>Cũ nhất</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- === END: ACTION BAR ĐƯỢC THIẾT KẾ LẠI === -->


                    <!-- === START: KHU VỰC HIỂN THỊ DANH SÁCH PHÒNG ĐƯỢC CẬP NHẬT === -->
                    <ItemsControl ItemsSource="{Binding Rooms}" 
                                  Visibility="{Binding Rooms.Count, Converter={StaticResource EmptyToVisibilityConverter}, ConverterParameter='inverse'}"
                                  x:Name="RoomsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <!-- DataTemplate mới cho thẻ phòng -->
                            <DataTemplate>
                                <Border Style="{StaticResource RoomCardListStyle}" Width="540" Margin="10"
                                        MouseLeftButtonDown="RoomCard_MouseLeftButtonDown">
                                    <StackPanel>
                                        <!-- Card Header -->
                                        <Border Background="#FAFAFB" Padding="24"
                                                CornerRadius="12,12,0,0">
                                            <Grid>
                                                <!-- Icon and Room Name -->
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                    <Border Width="30" Height="30" CornerRadius="2" Background="#EEF0F4">
                                                        <!-- Thay thế bằng Icon thật của bạn -->
                                                        <Image Source="{Binding IconSource}" Stretch="Uniform"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding TenPhong}" FontWeight="Medium" FontSize="18" 
                                                               Foreground="#3B4758" Margin="15,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <!-- Status Badge -->
                                                <Border Style="{StaticResource RoomStatusBadgeStyle}" 
                                                        HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding TrangThai}" Style="{StaticResource RoomStatusBadgeTextStyle}"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Card Content -->
                                        <StackPanel Margin="24,15">
                                            <TextBlock Text="{Binding DiaChi}" Foreground="#586A84" FontSize="14" Margin="0,0,0,10"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Diện tích:" Foreground="#586A84" FontSize="14"/>
                                                <TextBlock Grid.Column="1" Text="{Binding DienTich, StringFormat={}{0} m²}" FontWeight="Bold" 
                                                           Foreground="#3B4758" FontSize="14" Margin="10,0,0,0"/>
                                            </Grid>
                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Giá thuê:" Foreground="#586A84" FontSize="14"/>
                                                <TextBlock Grid.Column="1" Text="{Binding GiaThue, StringFormat={}{0:N0} VNĐ/tháng}" FontWeight="Bold" 
                                                           Foreground="#3B4758" FontSize="14" Margin="10,0,0,0"/>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Card Footer: Progress Bar -->
                                        <ProgressBar Style="{StaticResource RoomProgressBar}" Value="{Binding ProgressValue}" Margin="24,0,24,24"/>

                                        <!-- Card Footer: Action Buttons -->
                                        <Border Background="#f8f9fa" CornerRadius="0,0,12,12" Padding="24,16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                                                        Margin="0,0,6,0" Command="{Binding DataContext.ShowEditRoomPanelCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✏️" FontSize="12" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Edit" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}" 
                                                        Margin="6,0,0,0" Command="{Binding DataContext.DeleteRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="🗑️" FontSize="12" Margin="0,0,4,0"/>
                                                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!-- === END: KHU VỰC HIỂN THỊ DANH SÁCH PHÒNG === -->

                    <!-- Empty State (chỉ hiển thị khi không có phòng) -->
                    <Border Background="White" CornerRadius="12" Padding="40" 
                            Visibility="{Binding Rooms.Count, Converter={StaticResource EmptyToVisibilityConverter}}" Height="358">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🏠" FontSize="48" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                            <TextBlock Text="Không tồn tại phòng" FontSize="18" FontWeight="SemiBold" Foreground="#374151" HorizontalAlignment="Center"/>
                            <TextBlock Text="Hãy bắt đầu thêm phòng mới" FontSize="14" Foreground="#6b7280" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Margin="0,16,0,0" Command="{Binding ShowAddRoomPanelCommand}" Click="Button_Click">
                                <TextBlock Text="Thêm phòng mới"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Pagination -->
                    <Border Background="#EEF0F4" CornerRadius="8" Padding="15,10" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Hiển thị 1 đến 6 trong 111" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#3B4758"/>
                            <!-- TODO: Add Pagination controls here -->
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>