                        </DataGridTextColumn>

                        <!-- TRáº NG THÃI -->
                        <DataGridTemplateColumn Header="TRáº NG THÃI" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" Padding="10,4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="16,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Trá»‘ng">
                                                        <Setter Property="Background" Value="#DBEAFE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Äang thuÃª">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Äang báº£o trÃ¬">
