<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.OtpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xác thực OTP" Height="200" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Nhập mã OTP đã gửi đến email:" 
                       Margin="0 0 0 10" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBox Text="{Binding OtpCode, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Height="30" Margin="0 0 0 10" 
                     HorizontalAlignment="Center"/>

            <Button Content="Xác nhận" 
                    Command="{Binding VerifyOtpCommand}" 
                    Width="120" Height="35"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
