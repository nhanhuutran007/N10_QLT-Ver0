<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.RentedRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        Title="Quản lý Phòng Trọ"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:IntToStringConverter x:Key="IntToStringConverter"/>
            <Style x:Key="WindowControlButton" TargetType="Button">
                <Setter Property="Width" Value="48"/>
                <Setter Property="Height" Value="34"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#333"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#DDE2E8"/>
                                    <Setter Property="Foreground" Value="#3A4E8E"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="1" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E81123"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#5B75D4"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Margin" Value="0,6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4A61B8"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="2" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3A4E8E"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#3A4E8E"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5B75D4"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="2" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#2D3E73"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="StatCardStyle" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="25"/>
                <Setter Property="Margin" Value="0,15"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="3" Opacity="0.15" Color="#000000"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="#F8F9FA"/>
                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#3A4E8E"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="1" Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#E81123"/>
                                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" CornerRadius="20,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#3A4E8E" Offset="0"/>
                    <GradientStop Color="#5B75D4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity="0.2" Direction="315"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Top" Margin="20,50,20,0">
                <TextBlock Text="🏠" FontSize="60" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Text="Quản lý phòng" 
                           FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Variable"
                           Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,20,0,50"/>
                <Button Content="⬅ Quay lại Dashboard" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="BackToDashboard_Click"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Border Grid.Column="1" 
                Background="#F8F9FA"
                CornerRadius="0,20,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="White" CornerRadius="0,20,0,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="3" Opacity="0.1" Direction="270"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="35,25">
                            <TextBlock Text="🏠" FontSize="28" Margin="0,0,12,0"/>
                            <TextBlock Text="Quản lý Phòng Trọ"
                                       FontSize="26" FontWeight="Bold" FontFamily="Segoe UI Variable" Foreground="#333"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0">
                            <Button Content="—" Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click"/>
                            <Button Content="☐" Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click"/>
                            <Button Content="✕" Style="{StaticResource CloseButton}" Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content -->
                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="35">
                            <!-- DataGrid danh sách phòng -->
                            <Border Style="{StaticResource StatCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="📋 Danh sách phòng trọ"
                                               FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Variable" Foreground="#333" Margin="0,0,0,25"/>
                                    <DataGrid ItemsSource="{Binding Rooms}"
                                              SelectedItem="{Binding SelectedRoom}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              Height="460"
                                              BorderThickness="0"
                                              Background="White"
                                              RowBackground="#F8F9FA"
                                              AlternatingRowBackground="#EDF1F5">
                                        <DataGrid.Resources>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="#E4E7EB"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                                                <Setter Property="Padding" Value="12"/>
                                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                                            </Style>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="Padding" Value="12"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                                            <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter Property="Background" Value="#DDE2E8"/>
                                                                    <Setter Property="Foreground" Value="#3A4E8E"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Mã Phòng" Binding="{Binding MaPhong, Converter={StaticResource IntToStringConverter}}" Width="110"/>
                                            <DataGridTextColumn Header="Tên Phòng" Binding="{Binding TenPhong}" Width="160"/>
                                            <DataGridTextColumn Header="Diện tích" Binding="{Binding DienTich, Converter={StaticResource IntToStringConverter}}" Width="130"/>
                                            <DataGridTextColumn Header="Giá cơ bản" Binding="{Binding GiaCoBan, Converter={StaticResource IntToStringConverter}}" Width="130"/>
                                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding TrangThai}" Width="130"/>
                                            <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </Border>

                            <!-- Hành động nhanh -->
                            <Border Style="{StaticResource StatCardStyle}" Margin="0,25,0,0">
                                <StackPanel>
                                    <TextBlock Text="⚡ Hành động nhanh"
                                               FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Variable" Foreground="#333" Margin="0,0,0,25"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Tải lại" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding LoadRoomsCommand}" Margin="6"/>
                                        <Button Grid.Column="1" Content="Thêm" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding ShowAddRoomPanelCommand}" Margin="6"/>
                                        <Button Grid.Column="2" Content="Sửa" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding ShowEditRoomPanelCommand}" Margin="6"/>
                                        <Button Grid.Column="3" Content="Xóa" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding DeleteRoomCommand}" Margin="6"/>
                                        <Button Grid.Column="4" Content="Thuê" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding UpdateStatusCommand}" CommandParameter="Đã thuê" Margin="6"/>
                                    </Grid>
                                    <Grid Margin="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Trống" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding UpdateStatusCommand}" CommandParameter="Trống" Margin="6"/>
                                        <Button Grid.Column="1" Content="Thoát" Style="{StaticResource PrimaryButtonStyle}" Click="BackToDashboard_Click" Margin="6"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Status message -->
                            <TextBlock Text="{Binding StatusMessage}" Foreground="#6B7280" Margin="0,25,0,0" FontSize="15" FontFamily="Segoe UI Variable"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Form thêm/sửa phòng -->
                    <Border Visibility="{Binding IsAddEditPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#80000000"
                            Grid.RowSpan="2">
                        <Border Background="White"
                                CornerRadius="12"
                                Width="500"
                                MaxHeight="600"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Effect="{StaticResource StatCardStyle}">
                            <StackPanel Margin="25">
                                <TextBlock Text="{Binding NewRoom.MaPhong, Converter={StaticResource IntToStringConverter}, StringFormat='Thêm/Sửa phòng: {0}', FallbackValue='Thêm phòng mới'}"
                                           FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Variable" Foreground="#333" Margin="0,0,0,20"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mã phòng:" FontSize="14" Margin="0,0,10,10"/>
                                    <TextBox Grid.Row="0" Grid.Column="1">
                                        <TextBox.Text>
                                            <Binding Path="NewRoom.MaPhong" UpdateSourceTrigger="PropertyChanged" Converter="{StaticResource IntToStringConverter}">
                                                <Binding.ValidationRules>
                                                    <converters:IntegerValidationRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}"/>
                                        </TextBox.Style>
                                    </TextBox>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tên phòng:" FontSize="14" Margin="0,0,10,10"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewRoom.TenPhong, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,10"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Diện tích (m²):" FontSize="14" Margin="0,0,10,10"/>
                                    <TextBox Grid.Row="2" Grid.Column="1">
                                        <TextBox.Text>
                                            <Binding Path="NewRoom.DienTich" UpdateSourceTrigger="PropertyChanged" Converter="{StaticResource IntToStringConverter}">
                                                <Binding.ValidationRules>
                                                    <converters:IntegerValidationRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}"/>
                                        </TextBox.Style>
                                    </TextBox>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Giá cơ bản:" FontSize="14" Margin="0,0,10,10"/>
                                    <TextBox Grid.Row="3" Grid.Column="1">
                                        <TextBox.Text>
                                            <Binding Path="NewRoom.GiaCoBan" UpdateSourceTrigger="PropertyChanged" Converter="{StaticResource IntToStringConverter}">
                                                <Binding.ValidationRules>
                                                    <converters:IntegerValidationRule ValidatesOnTargetUpdated="True"/>
                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox" BasedOn="{StaticResource InputTextBoxStyle}"/>
                                        </TextBox.Style>
                                    </TextBox>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Trạng thái:" FontSize="14" Margin="0,0,10,10"/>
                                    <ComboBox Grid.Row="4" Grid.Column="1" SelectedItem="{Binding NewRoom.TrangThai, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,10">
                                        <ComboBoxItem Content="Trống"/>
                                        <ComboBoxItem Content="Đã thuê"/>
                                    </ComboBox>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Ghi chú:" FontSize="14" Margin="0,0,10,10"/>
                                    <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding NewRoom.GhiChu, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBoxStyle}" AcceptsReturn="True" Height="80" Margin="0,0,0,10"/>

                                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                        <Button Content="Hủy" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding CancelAddEditCommand}" Margin="0,0,10,0"/>
                                        <Button Content="Lưu" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SaveRoomCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>