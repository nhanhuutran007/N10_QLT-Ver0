<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.InvoiceDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="Hóa đơn thanh toán"
        MinWidth="800"
        MinHeight="600"
        Width="1200"
        Height="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png"
        Loaded="InvoiceDetailView_Loaded">

    <Window.Resources>
        <!-- Style cho nút Download -->
        <Style TargetType="{x:Type Button}"
                x:Key="ActionButtonStyle">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="Foreground"
                    Value="#3B4758"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="39"/>
            <Setter Property="Padding"
                    Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#F9F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nhãn trạng thái 'paid' -->
        <Style TargetType="Border"
                x:Key="PaidBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="Background"
                    Value="#CAFBEC"/>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="PaidBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Foreground"
                    Value="#0DA678"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Style cho nút đóng (X) -->
        <Style TargetType="{x:Type Button}"
                x:Key="CloseButtonStyle">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Foreground"
                            Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Border chính của hóa đơn với hiệu ứng đổ bóng -->
    <Border Background="White"
            CornerRadius="12"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#A9A8B6"
                    Opacity="0.1"
                    ShadowDepth="4"
                    BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- NÚT ĐÓNG CỬA SỔ -->
            <Button Grid.Row="0"
                    Content="✕"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Width="32"
                    Height="32"
                    Panel.ZIndex="1"
                    Click="CloseButton_Click"/>

            <!-- === PHẦN ĐẦU HÓA ĐƠN === -->
            <Grid Grid.Row="0"
                    Margin="40,30,40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Thông tin bên trái -->
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="20"
                            FontWeight="Bold"
                            Foreground="#333">
                        <Run Text="Hóa đơn thanh toán tiền điện nước tháng "/>
                        <Run Text="{Binding ThangNam}"/>
                    </TextBlock>
                    <TextBlock Text="19, Nguyễn Hữu Thọ, Tân Hưng, TP.HCM"
                            Foreground="#666"
                            Margin="0,10,0,0"/>
                    <TextBlock Text="Tên Chủ Tài Khoản: TRAN HUU NHAN"
                            Foreground="#666"
                            Margin="0,2,0,0"/>
                    <TextBlock Text="Số Tài Khoản: 0869918250"
                            Foreground="#666"
                            Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Nút bên phải -->
                <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Top">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Width="110"
                            Click="DownloadButton_Click"
                            x:Name="DownloadButtonHeader">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Download"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="⬇️"
                                    Margin="5,0,0,0"
                                    FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Width="150"
                            Margin="10,0,0,0"
                            Click="SendToCustomerButton_Click"
                            x:Name="SendToCustomerButtonHeader">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Gửi đến khách hàng"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Separator Grid.Row="0"
                    VerticalAlignment="Bottom"
                    Background="#EEE"/>

            <!-- === PHẦN THÂN HÓA ĐƠN === -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Thông tin chi tiết và QR Code -->
                    <Grid Margin="40,30,40,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Thông tin khách hàng -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Thông tin hóa đơn"
                                    FontWeight="Bold"
                                    Foreground="#333"
                                    FontSize="16"/>
                            <TextBlock Text="{Binding HoTen}"
                                    FontWeight="Medium"
                                    Foreground="#333"
                                    Margin="0,15,0,0"/>
                            <TextBlock Foreground="#555"
                                    Margin="0,10,0,0">
                                <Run Text="Số căn cước: "/>
                                <Run Text="{Binding CCCD}"/>
                            </TextBlock>
                            <TextBlock Foreground="#555"
                                    Margin="0,2,0,0">
                                <Run Text="Số điện thoại: "/>
                                <Run Text="{Binding SoDienThoai}"/>
                            </TextBlock>
                            <TextBlock Foreground="#555"
                                       Margin="0,2,0,0">
                                <Run Text="Email: "/>
                                <Run>
                                    <Run.Text>
                                        <Binding Path="Email" TargetNullValue="Không có email" />
                                    </Run.Text>
                                </Run>
                            </TextBlock>
                        </StackPanel>

                        <!-- Thông tin hóa đơn và QR code -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                    Margin="0,0,40,0">
                                <TextBlock Text="Mã đơn"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Ngày tạo"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Ngày trả"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Status"
                                        Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right">
                                <TextBlock FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8">
                                    <Run Text="#"/>
                                    <Run Text="{Binding MaThanhToan}"/>
                                </TextBlock>
                                <TextBlock FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8">
                                    <Run Text="{Binding ThangNam, StringFormat='{}{0}'}"/>
                                </TextBlock>
                                <TextBlock FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8">
                                    <TextBlock.Text>
                                        <Binding Path="NgayThanhToan" StringFormat="{}{0:dd/MM/yyyy}" TargetNullValue="--"/>
                                    </TextBlock.Text>
                                </TextBlock>
                                <Border Style="{StaticResource PaidBadgeStyle}"
                                        HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding TrangThaiThanhToan}"
                                            Style="{StaticResource PaidBadgeTextStyle}"/>
                                </Border>

                                
                            </StackPanel>

                            <!-- QR Code -->
                            <Image Grid.Column="2"
                                   x:Name="QrImage"
                                   Source="/QLKDPhongTro.Presentation;component/Resources/Images/QR.jpg"
                                   ImageFailed="QrImage_ImageFailed"
                                   Width="100"
                                   Height="100"
                                   Margin="40,0,0,0"
                                   Stretch="Uniform"/>
                        </Grid>
                    </Grid>

                    <!-- Bảng chi tiết hóa đơn -->
                    <StackPanel Margin="40,10,40,0">
                        <TextBlock Text="Chi tiết"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,0,0,10"/>

                        <!-- Bảng dữ liệu -->
                        <Border BorderThickness="0,1,0,0"
                                BorderBrush="#EEE">
                            <StackPanel>
                                <!-- Tiêu đề bảng -->
                                <Grid Background="#F7F8FA"
                                        Height="48">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                            Text="#"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                            Text=""
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                            Text="Đơn giá"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3"
                                            Text="Số Kwh / Số Khối"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4"
                                            Text="Tạm tính"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,20,0"/>
                                </Grid>

                                <!-- Hàng dữ liệu 1: Tiền thuê -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TienThue}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="1"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Tiền thuê"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtTienThue"
                                                Text="{Binding TienThue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text=""
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhThue, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 2 -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SoDien}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="2"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Điện tiêu dùng"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtDonGiaDien"
                                                Text="{Binding DonGiaDien, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='', FallbackValue=''}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text="{Binding SoDien, StringFormat='{}{0:N0}', TargetNullValue=''}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhDien, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 3 -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SoNuoc}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="3"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Nước sinh hoạt"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtDonGiaNuoc"
                                                Text="{Binding DonGiaNuoc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='', FallbackValue=''}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text="{Binding SoNuoc, StringFormat='{}{0:N0}', TargetNullValue=''}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhNuoc, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 4: Internet -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TienInternet}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="4"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Internet"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtInternet"
                                                Text="{Binding TienInternet, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text=""
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhInternet, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 5: Vệ sinh -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TienVeSinh}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="5"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Vệ sinh"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtVeSinh"
                                                Text="{Binding TienVeSinh, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text=""
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhVeSinh, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 6: Giữ xe -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TienGiuXe}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="6"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Giữ xe"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtGiuXe"
                                                Text="{Binding TienGiuXe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text=""
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhGiuXe, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 7: Chi phí khác -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChiPhiKhac}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="7"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Chi phí khác"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="2"
                                                x:Name="TxtKhac"
                                                Text="{Binding ChiPhiKhac, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Foreground="#555"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalContentAlignment="Right"
                                                VerticalContentAlignment="Center"
                                                IsReadOnly="True"
                                                MouseDoubleClick="UnitPriceTextBox_MouseDoubleClick"
                                                KeyDown="UnitPriceTextBox_KeyDown"/>
                                        <TextBlock Grid.Column="3"
                                                Text=""
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="{Binding TamTinhKhac, StringFormat='{}{0:N0} đ'}"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Bảng tổng kết -->
                    <Grid Width="350"
                            HorizontalAlignment="Right"
                            Margin="0,20,40,40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Tạm tính"
                                Foreground="#666"
                                Margin="0,5"/>
                        <TextBlock Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding TamTinh, StringFormat='{}{0:N0} đ'}"
                                Foreground="#333"
                                Margin="0,5"
                                HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Khấu trừ tiền cọc"
                                Foreground="#666"
                                Margin="0,5"/>
                        <TextBlock Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding TienCocHienCo, StringFormat='{}{0:N0} đ'}"
                                Foreground="#333"
                                Margin="0,5"
                                HorizontalAlignment="Right"/>

                        <!-- Tiền cọc còn dư sau khi khấu trừ -->
                        <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="Tiền còn dư"
                                Foreground="#666"
                                Margin="0,5"/>
                        <TextBlock Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding TienCocConDu, StringFormat='{}{0:N0} đ'}"
                                Foreground="#333"
                                Margin="0,5"
                                HorizontalAlignment="Right"/>

                        <Separator Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Margin="0,10"/>

                        <TextBlock Grid.Row="4"
                                Grid.Column="0"
                                Text="Tổng"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding TongTienHienThi}"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"/>

                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- === PHẦN CHÂN HÓA ĐƠN === -->
            <StackPanel Grid.Row="2"
                    Background="#F7F8FA"
                    Margin="1,0,1,1">
                <Border CornerRadius="0,0,11,11"
                        Background="#F7F8FA"/>
                <Grid Margin="40">
                    <TextBlock Text="*Khách hàng khi nhận được thông tin hóa đơn, vui lòng nhanh chóng hoàn tất số tiền phải trả."
                               Foreground="#888"
                            FontStyle="Italic"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Width="110"
                                Click="DownloadButton_Click"
                                x:Name="DownloadButtonFooter">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Download"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="⬇️"
                                        Margin="5,0,0,0"
                                        FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>