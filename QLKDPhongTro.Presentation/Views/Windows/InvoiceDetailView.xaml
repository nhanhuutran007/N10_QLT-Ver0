<Window x:Class="QLKDPhongTro.Presentation.Views.Windows.InvoiceDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hóa đơn thanh toán"
        Width="1140"
        Height="950"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        FontFamily="Roboto">

    <Window.Resources>
        <!-- Style cho các nút Download / Print -->
        <Style TargetType="{x:Type Button}"
                x:Key="ActionButtonStyle">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="Foreground"
                    Value="#3B4758"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Height"
                    Value="39"/>
            <Setter Property="Padding"
                    Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Background"
                            Value="#F9F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho nhãn trạng thái 'paid' -->
        <Style TargetType="Border"
                x:Key="PaidBadgeStyle">
            <Setter Property="CornerRadius"
                    Value="9"/>
            <Setter Property="Padding"
                    Value="10,4"/>
            <Setter Property="Background"
                    Value="#CAFBEC"/>
        </Style>

        <Style TargetType="TextBlock"
                x:Key="PaidBadgeTextStyle">
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Foreground"
                    Value="#0DA678"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <!-- Style cho nút đóng (X) -->
        <Style TargetType="{x:Type Button}"
                x:Key="CloseButtonStyle">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Foreground"
                    Value="#586A84"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                        Value="True">
                    <Setter Property="Foreground"
                            Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Border chính của hóa đơn với hiệu ứng đổ bóng -->
    <Border Background="White"
            CornerRadius="12"
            Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#A9A8B6"
                    Opacity="0.1"
                    ShadowDepth="4"
                    BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- NÚT ĐÓNG CỬA SỔ -->
            <Button Grid.Row="0"
                    Content="✕"
                    Style="{StaticResource CloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Width="32"
                    Height="32"
                    Panel.ZIndex="1"
                    Click="CloseButton_Click"/>

            <!-- === PHẦN ĐẦU HÓA ĐƠN === -->
            <Grid Grid.Row="0"
                    Margin="40,30,40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Thông tin bên trái -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Hóa đơn thanh toán tiền điện nước tháng 9/2025"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#333"/>
                    <TextBlock Text="19, Nguyễn Hữu Thọ, Tân Hưng, TP.HCM"
                            Foreground="#666"
                            Margin="0,10,0,0"/>
                    <TextBlock Text="Tên Chủ Tài Khoản: TRAN HUU NHAN"
                            Foreground="#666"
                            Margin="0,2,0,0"/>
                    <TextBlock Text="Số Tài Khoản: 0869918250"
                            Foreground="#666"
                            Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Nút bên phải -->
                <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Top">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Width="110">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Download"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="⬇️"
                                    Margin="5,0,0,0"
                                    FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Width="90"
                            Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Print"
                                    VerticalAlignment="Center"/>
                            <TextBlock Text="🖨️"
                                    Margin="5,0,0,0"
                                    FontSize="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Separator Grid.Row="0"
                    VerticalAlignment="Bottom"
                    Background="#EEE"/>

            <!-- === PHẦN THÂN HÓA ĐƠN === -->
            <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Thông tin chi tiết và QR Code -->
                    <Grid Margin="40,30,40,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Thông tin khách hàng -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Thông tin hóa đơn"
                                    FontWeight="Bold"
                                    Foreground="#333"
                                    FontSize="16"/>
                            <TextBlock Text="Nguyễn Văn A"
                                    FontWeight="Medium"
                                    Foreground="#333"
                                    Margin="0,15,0,0"/>
                            <TextBlock Text="404, Lê Văn Lương, Tân Hưng, TP.HCM"
                                    Foreground="#555"
                                    Margin="0,2,0,0"/>
                            <TextBlock Foreground="#555"
                                    Margin="0,10,0,0">
                                <Run Text="Email:"/>
                                <Run Text="ronaldo@gmail.com"
                                        Foreground="#319DFF"
                                        Cursor="Hand"/>
                            </TextBlock>
                            <TextBlock Text="Phone: 0932868123"
                                    Foreground="#555"
                                    Margin="0,2,0,0"/>
                        </StackPanel>

                        <!-- Thông tin hóa đơn và QR code -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                    Margin="0,0,40,0">
                                <TextBlock Text="Number"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Date"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Paid date"
                                        Foreground="#666"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Status"
                                        Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="#206401"
                                        FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Nov 2 2025"
                                        FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="Oct 2, 2025"
                                        FontWeight="Bold"
                                        Foreground="#333"
                                        Margin="0,0,0,8"/>
                                <Border Style="{StaticResource PaidBadgeStyle}"
                                        HorizontalAlignment="Right">
                                    <TextBlock Text="paid"
                                            Style="{StaticResource PaidBadgeTextStyle}"/>
                                </Border>
                            </StackPanel>

                            <!-- Placeholder cho QR Code -->
                            <Border Grid.Column="2"
                                    Width="100"
                                    Height="100"
                                    Margin="40,0,0,0"
                                    BorderBrush="LightGray"
                                    BorderThickness="1">
                                <TextBlock Text="QR Code"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Foreground="Gray"/>
                                <!-- <Image Source="/path/to/your/qr-code.png"/> -->
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Bảng chi tiết hóa đơn -->
                    <StackPanel Margin="40,10,40,0">
                        <TextBlock Text="Chi tiết"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,0,0,10"/>

                        <!-- Bảng dữ liệu -->
                        <Border BorderThickness="0,1,0,0"
                                BorderBrush="#EEE">
                            <StackPanel>
                                <!-- Tiêu đề bảng -->
                                <Grid Background="#F7F8FA"
                                        Height="48">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                            Text="#"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                            Text=""
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                            Text="Đơn giá"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="3"
                                            Text="Số Kwh / Số Khối"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="4"
                                            Text="Tạm tính"
                                            Foreground="#7D8FA9"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,20,0"/>
                                </Grid>

                                <!-- Hàng dữ liệu 1 -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="1"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Điện tiêu dùng"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                Text="$30.00"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="3"
                                                Text="1"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="$30.00"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>

                                <!-- Hàng dữ liệu 2 -->
                                <Border BorderBrush="#EEE"
                                        BorderThickness="0,1,0,0">
                                    <Grid Height="48">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                Text="2"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                Text="Nước sinh hoạt"
                                                FontWeight="Medium"
                                                Foreground="#333"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                Text="$24.50"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="3"
                                                Text="2"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="4"
                                                Text="$49.00"
                                                Foreground="#555"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,20,0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Bảng tổng kết -->
                    <Grid Width="350"
                            HorizontalAlignment="Right"
                            Margin="0,20,40,40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Tạm tính"
                                Foreground="#666"
                                Margin="0,5"/>
                        <TextBlock Grid.Row="0"
                                Grid.Column="1"
                                Text="$79.00"
                                Foreground="#333"
                                Margin="0,5"
                                HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Khấu trừ"
                                Foreground="#666"
                                Margin="0,5"/>
                        <TextBlock Grid.Row="1"
                                Grid.Column="1"
                                Text="$0.00"
                                Foreground="#333"
                                Margin="0,5"
                                HorizontalAlignment="Right"/>

                        <Separator Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Margin="0,10"/>

                        <TextBlock Grid.Row="3"
                                Grid.Column="0"
                                Text="Tổng"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,10,0,0"/>
                        <TextBlock Grid.Row="3"
                                Grid.Column="1"
                                Text="$79.00"
                                FontWeight="Bold"
                                Foreground="#333"
                                FontSize="16"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- === PHẦN CHÂN HÓA ĐƠN === -->
            <StackPanel Grid.Row="2"
                    Background="#F7F8FA"
                    Margin="1,0,1,1">
                <Border CornerRadius="0,0,11,11"
                        Background="#F7F8FA"/>
                <Grid Margin="40">
                    <TextBlock Text="*Khách hàng khi nhận được thông tin hóa đơn, vui lòng nhanh chóng hoàn tất số tiền phải trả."
                               Foreground="#888"
                            FontStyle="Italic"
                            TextWrapping="Wrap"
                            VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Width="110">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Download"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="⬇️"
                                        Margin="5,0,0,0"
                                        FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Width="90"
                                Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Print"
                                        VerticalAlignment="Center"/>
                                <TextBlock Text="🖨️"
                                        Margin="5,0,0,0"
                                        FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>