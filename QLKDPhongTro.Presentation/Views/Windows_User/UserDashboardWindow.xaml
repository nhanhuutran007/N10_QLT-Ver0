<Window x:Class="QLKDPhongTro.Presentation.Views.Windows_User.UserDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:local="clr-namespace:QLKDPhongTro.Presentation.Views.Windows_User"
        Title="Dashboard User - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <!-- Style cập nhật lại cho User nếu cần, hiện tại dùng chung -->
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" MinWidth="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL CHO USER === -->
        <components:UserSidebarControl Grid.Column="0" x:Name="SidebarControl"/>

        <!-- === KHU VỰC NỘI DUNG CHÍNH === -->
        <Grid Margin="223,15,15,15" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control (Dùng chung) -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl"/>

            <!-- Create new instances or copy content -->
            <!-- Carousel Container (Giữ nguyên như Dashboard Admin) -->
            <Grid Grid.Row="1" Margin="10,10,10,10">
                <Grid x:Name="CarouselContainer">
                    <Image x:Name="Image1" 
                           Source="/Resources/Images/Anh1.jpg"
                           Stretch="UniformToFill"
                           Opacity="1">
                        <Image.RenderTransform>
                            <TranslateTransform x:Name="Image1Transform"/>
                        </Image.RenderTransform>
                    </Image>
                    
                    <Image x:Name="Image2" 
                           Source="/Resources/Images/Anh2.jpg"
                           Stretch="UniformToFill"
                           Opacity="0">
                        <Image.RenderTransform>
                            <TranslateTransform x:Name="Image2Transform"/>
                        </Image.RenderTransform>
                    </Image>
                    
                    <!-- Welcome text specific to User -->
                    <Border Background="#CCFFFFFF" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            CornerRadius="10" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Chào mừng quay trở lại!" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#3B4758"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Hệ thống quản lý thuê nhà dành cho Cư dân" 
                                       FontSize="16" 
                                       Foreground="#586A84"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
