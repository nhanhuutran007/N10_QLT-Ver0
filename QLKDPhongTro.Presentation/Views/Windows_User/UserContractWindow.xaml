<Window x:Class="QLKDPhongTro.Presentation.Views.Windows_User.UserContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        mc:Ignorable="d"
        Title="Hợp đồng thuê - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        
        <!-- Style cho TextBox với hiệu ứng focus -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho tiêu đề section -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>

        <!-- Style cho label -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Style cho card container -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#D6D8E0" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:UserContractViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" MinWidth="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:UserSidebarControl Grid.Column="0" x:Name="SidebarControl"/>

        <!-- === MAIN CONTENT === -->
        <Grid Margin="223,15,15,15" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl" 
                                     VerticalAlignment="Top" HorizontalAlignment="Stretch"/>

            <!-- Loading State -->
            <Grid Grid.Row="1" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
            </Grid>

            <!-- No Data State -->
            <Grid Grid.Row="1" 
                  Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                <TextBlock Text="Không tìm thấy hợp đồng cho tài khoản này."
                           FontSize="16"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
            </Grid>

            <!-- Content: 2-Panel Layout -->
            <Grid Grid.Row="1" 
                  Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL: Contract List -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- List Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="Danh sách hợp đồng" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#3B4758"
                                   Margin="0,0,0,15"/>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding Contracts}"
                                  SelectedItem="{Binding SelectedContract, Mode=TwoWay}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  Background="White"
                                  BorderThickness="0"
                                  RowHeight="50">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã HĐ" Binding="{Binding MaHopDongDisplay}" Width="*"/>
                                <DataGridTextColumn Header="Phòng" Binding="{Binding TenPhong}" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F8FC"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- RIGHT PANEL: Contract Details -->
                <ScrollViewer Grid.Column="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel DataContext="{Binding SelectedContract}">
                            <!-- Tiêu đề -->
                            <TextBlock Text="Chi tiết hợp đồng" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#3B4758"
                                       Margin="0,0,0,25"/>

                            <!-- Section: Thông tin cơ bản -->
                            <TextBlock Text="Thông tin cơ bản" Style="{StaticResource SectionTitleStyle}"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Mã hợp đồng" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding MaHopDongDisplay, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                    <TextBlock Text="Trạng thái" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding TrangThai, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" Foreground="{Binding TrangThaiColor}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Tên phòng" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding TenPhong, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                                    <TextBlock Text="Tên người thuê" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding TenNguoiThue, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                                    <TextBlock Text="Ghi chú" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding GhiChu, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" TextWrapping="Wrap" Height="60"/>
                                </StackPanel>
                            </Grid>

                            <!-- Section: Thời hạn hợp đồng -->
                            <TextBlock Text="Thời hạn hợp đồng" Style="{StaticResource SectionTitleStyle}"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Ngày bắt đầu" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NgayBatDau, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                    <TextBlock Text="Ngày kết thúc" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding NgayKetThuc, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <TextBlock Text="Số ngày còn lại" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding SoNgayConLai, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" Foreground="#1976D2" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>

                            <!-- Section: Thông tin tài chính -->
                            <TextBlock Text="Thông tin tài chính" Style="{StaticResource SectionTitleStyle}"/>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                    <TextBlock Text="Tiền cọc" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding TienCoc, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" Foreground="#F57C00" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                    <TextBlock Text="Giá thuê/tháng" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding GiaThue, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" Foreground="#C62828" FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <TextBlock Text="File hợp đồng" Style="{StaticResource LabelStyle}"/>
                                    <TextBox Text="{Binding FileHopDong, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42" FontStyle="Italic"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
