<Window x:Class="QLKDPhongTro.Presentation.Views.Windows_User.UserHousingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:QLKDPhongTro.Presentation.ViewModels"
        xmlns:components="clr-namespace:QLKDPhongTro.Presentation.Views.Components"
        xmlns:converters="clr-namespace:QLKDPhongTro.Presentation.Converters"
        mc:Ignorable="d"
        Title="Thông tin nhà ở - Quản Lý Phòng Trọ"
        MinHeight="600"
        MinWidth="800"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5"
        AllowsTransparency="False"
        FontFamily="Roboto"
        Icon="/Resources/Images/Logo.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:BooleanToVisibilityInverseConverter x:Key="BooleanToVisibilityInverseConverter"/>
        
        <!-- Style cho TextBox với hiệu ứng focus -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#F2F6FA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#319DFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" Color="#319DFF" Opacity="0.3" BlurRadius="5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho tiêu đề section -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>

        <!-- Style cho label -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3B4758"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Style cho card container -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#D6D8E0" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:UserHousingViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="269" MinWidth="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- === SIDEBAR CONTROL === -->
        <components:UserSidebarControl Grid.Column="0" x:Name="SidebarControl"/>

        <!-- === MAIN CONTENT === -->
        <Grid Margin="223,15,15,15" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar Control -->
            <components:TopbarControl Grid.Row="0" x:Name="TopbarControl" 
                                     VerticalAlignment="Top" HorizontalAlignment="Stretch"/>

            <!-- Loading State -->
            <Grid Grid.Row="1" 
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="20"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
            </Grid>

            <!-- No Data State -->
            <Grid Grid.Row="1" 
                  Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                <!-- Only show if Not Loading and No Data -->
                <TextBlock Text="Không tìm thấy thông tin thuê phòng cho tài khoản này."
                           FontSize="16"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityInverseConverter}}"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding HasData, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="10,10,10,10"
                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Tiêu đề -->
                        <TextBlock Text="Thông tin nhà ở &amp; Phòng thuê" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#3B4758"
                                   Margin="0,0,0,30"/>
                        
                        <!-- Section: Thông tin Nhà trọ -->
                        <TextBlock Text="Thông tin Nhà trọ" Style="{StaticResource SectionTitleStyle}"/>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Column 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="Địa chỉ" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding DiaChiNha, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Tỉnh/Thành phố" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding TinhThanh, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                <TextBlock Text="Ghi chú nhà" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding GhiChuNha, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" TextWrapping="Wrap" Height="60"/>
                            </StackPanel>
                        </Grid>

                        <!-- Section: Thông tin Phòng thuê -->
                        <TextBlock Text="Thông tin Phòng thuê" Style="{StaticResource SectionTitleStyle}"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="Tên phòng" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding TenPhong, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" FontWeight="Bold" Height="42"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Trạng thái" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding TrangThaiPhong, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,15">
                                <TextBlock Text="Diện tích" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding DienTich, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Height="42"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,15">
                                <TextBlock Text="Giá cơ bản" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding GiaCoBan, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" Foreground="#C62828" FontWeight="SemiBold" Height="42"/>
                            </StackPanel>
                            
                            <!-- Row 3 -->
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15">
                                <TextBlock Text="Giá bằng chữ" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding GiaBangChu, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" FontStyle="Italic" Height="42"/>
                            </StackPanel>

                            <!-- Row 4 -->
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                <TextBlock Text="Trang thiết bị" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding TrangThietBi, Mode=OneWay}" Style="{StaticResource InputTextBoxStyle}" IsReadOnly="True" TextWrapping="Wrap" Height="80"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
